          }
     }

     @keyframes scaleIn {
          from {
               transform: scale(0.95);
               opacity: 0;
          }

          to {
               transform: scale(1);
               opacity: 1;
          }
     }

     /* Enhanced Mobile Styles */
     @media (max-width: 768px) {
          .mobile-touch-target {
               min-height: 48px;
               min-width: 48px;
          }

