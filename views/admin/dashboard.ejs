<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard | Ndressilik</title>

    <!-- Fonts and Icons -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <script src="https://cdn.tailwindcss.com"></script>

    <style>
        body {
            font-family: 'Inter', sans-serif;
        }

        /* Sidebar */
        .sidebar {
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .sidebar-link {
            @apply flex items-center gap-3 px-4 py-3 text-neutral-600 hover:bg-neutral-100 rounded-xl transition-all;
        }

        .sidebar-link.active {
            @apply bg-neutral-100 text-neutral-900;
        }

        .sidebar-link i {
            @apply w-5 text-center transition-colors;
        }

        /* Table */
        .user-table {
            @apply min-w-full divide-y divide-neutral-200 bg-white;
        }

        .user-table th {
            @apply px-4 py-3 text-left text-xs font-medium text-neutral-500 uppercase tracking-wider;
        }

        .user-table td {
            @apply px-4 py-3 whitespace-nowrap text-sm;
        }

        /* Mobile Actions Menu */
        .actions-menu {
            @apply absolute right-0 mt-2 w-48 bg-white rounded-xl shadow-lg border border-neutral-200 divide-y divide-neutral-200 transform opacity-0 scale-95 invisible;
            transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .actions-menu.active {
            @apply opacity-100 scale-100 visible;
        }

        .action-item {
            @apply flex items-center gap-2 w-full px-4 py-2.5 text-left text-sm hover:bg-neutral-50 transition-colors;
        }

        /* Responsive Design */
        @media (max-width: 1024px) {
            .sidebar {
                @apply fixed inset-y-0 left-0 -translate-x-full lg:translate-x-0;
            }

            .sidebar.open {
                @apply translate-x-0;
            }

            .main-content {
                @apply lg:ml-72;
            }
        }

        /* Loading Animation */
        .btn-loading {
            @apply relative !text-transparent;
        }

        .btn-loading::after {
            content: '';
            @apply absolute inset-0 m-auto w-4 h-4 border-2 border-white/20 border-t-white rounded-full animate-spin;
        }
    </style>
</head>
<body class="bg-neutral-50/80">
    <!-- Dashboard Layout -->
    <div class="min-h-screen">
        <!-- Sidebar -->
        <aside class="sidebar fixed top-0 left-0 z-40 w-72 h-full bg-white border-r border-neutral-200 p-6">
            <div class="h-full flex flex-col">
                <!-- Logo -->
                <div class="flex items-center gap-3 mb-8">
                    <img src="https://ndressilik.s3.eu-north-1.amazonaws.com/users/67338636f84bd237e37a39a6/gallery/1731497935188_ndressilikLogoTopNavbar.png" 
                         alt="NDRESSILIK" 
                         class="h-8">
                    <span class="text-lg font-semibold">Admin</span>
                </div>

                <!-- Navigation -->
                <nav class="flex-1">
                    <div class="space-y-1">
                        <a href="/admin/dashboard" class="sidebar-link active">
                            <i class="fas fa-th-large"></i>
                            <span>Dashboard</span>
                        </a>
                        <a href="/admin/articles/new" class="sidebar-link">
                            <i class="fas fa-pen"></i>
                            <span>Write Article</span>
                        </a>
                        <a href="/admin/articles" class="sidebar-link">
                            <i class="fas fa-newspaper"></i>
                            <span>Edit Articles</span>
                        </a>
                        <a href="/admin/manage-comments" class="sidebar-link">
                            <i class="fas fa-comments"></i>
                            <span>Comments</span>
                        </a>
                        <a href="/admin/profile" class="sidebar-link">
                            <i class="fas fa-user"></i>
                            <span>Profile</span>
                        </a>
                    </div>
                </nav>

                <!-- Logout -->
                <a href="/admin/logout" class="sidebar-link text-red-600 hover:bg-red-50 mt-auto">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>Logout</span>
                </a>
            </div>
        </aside>

        <!-- Main Content -->
        <main class="lg:ml-72 min-h-screen">
            <!-- Top Bar -->
            <div class="sticky top-0 z-30 bg-white border-b border-neutral-200">
                <div class="flex items-center justify-between h-16 px-6">
                    <!-- Menu Toggle -->
                    <button class="lg:hidden p-2 hover:bg-neutral-100 rounded-lg" onclick="toggleSidebar()">
                        <i class="fas fa-bars"></i>
                    </button>
                    
                    <!-- User Menu -->
                    <div class="flex items-center gap-4">
                        <button class="flex items-center gap-2 p-2 hover:bg-neutral-100 rounded-lg">
                            <img src="<%= user.profileImage || '/default-avatar.png' %>" 
                                 alt="" 
                                 class="w-8 h-8 rounded-lg object-cover">
                            <span class="text-sm font-medium hidden sm:block"><%= user.displayName %></span>
                        </button>
                    </div>
                </div>
            </div>

            <!-- Page Content -->
            <div class="p-6">
                <!-- Page Header -->
                <header class="mb-8">
                    <h1 class="text-2xl font-bold">User Management</h1>
                    <p class="text-neutral-500 mt-1">Manage and monitor user accounts</p>
                </header>

                <!-- Users Table -->
                <div class="bg-white rounded-xl border border-neutral-200 overflow-hidden">
                    <div class="overflow-x-auto">
                        <table class="user-table">
                            <thead>
                                <tr>
                                    <th>User</th>
                                    <th class="hidden sm:table-cell">Status</th>
                                    <th class="hidden md:table-cell">Badges</th>
                                    <th class="w-20">Actions</th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-neutral-200">
                                <% users.forEach(user => { %>
                                    <tr class="group">
                                        <!-- User Info -->
                                        <td class="flex items-center gap-3">
                                            <img src="<%= user.profileImage %>" 
                                                 alt="" 
                                                 class="w-10 h-10 rounded-lg object-cover">
                                            <div>
                                                <div class="font-medium"><%= user.displayName %></div>
                                                <div class="text-neutral-500"><%= user.email %></div>
                                            </div>
                                        </td>

                                        <!-- Status - Hidden on Mobile -->
                                        <td class="hidden sm:table-cell">
                                            <span class="px-2 py-1 text-xs font-medium rounded-full 
                                                <%= user.isVerified 
                                                    ? 'bg-green-100 text-green-800' 
                                                    : 'bg-yellow-100 text-yellow-800' %>">
                                                <%= user.isVerified ? 'Verified' : 'Pending' %>
                                            </span>
                                        </td>

                                        <!-- Badges - Hidden on Mobile -->
                                        <td class="hidden md:table-cell">
                                            <div class="flex flex-wrap gap-2">
                                                <% user.badges.forEach(badge => { %>
                                                    <span class="px-2 py-1 text-xs font-medium rounded-full bg-blue-100 text-blue-800">
                                                        <%= badge.type %>
                                                    </span>
                                                <% }) %>
                                            </div>
                                        </td>

                                        <!-- Actions -->
                                        <td class="relative">
                                            <button class="actions-toggle p-2 hover:bg-neutral-100 rounded-lg" 
                                                    onclick="toggleActions(this)">
                                                <i class="fas fa-ellipsis-v"></i>
                                            </button>

                                            <!-- Actions Menu -->
                                            <div class="actions-menu">
                                                <button class="action-item text-blue-600" 
                                                        onclick="editUser('<%= user._id %>')">
                                                    <i class="fas fa-edit"></i>
                                                    <span>Edit</span>
                                                </button>
                                                
                                                <% if (!user.isVerified) { %>
                                                    <button class="action-item text-green-600" 
                                                            onclick="verifyUser('<%= user._id %>')">
                                                        <i class="fas fa-check-circle"></i>
                                                        <span>Verify</span>
                                                    </button>
                                                <% } %>
                                                
                                                <button class="action-item text-red-600" 
                                                        onclick="deleteUser('<%= user._id %>')">
                                                    <i class="fas fa-trash"></i>
                                                    <span>Delete</span>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </main>
    </div>
    