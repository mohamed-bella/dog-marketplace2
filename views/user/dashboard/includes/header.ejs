<header class="fixed top-0 inset-x-0 z-50">
    <!-- Main Navbar -->
    <div class="bg-white border-b border-gray-200">
        <div class="max-w-7xl mx-auto">
            <div class="flex h-16 items-center justify-between px-4">
                <!-- Left Section -->
                <div class="flex items-center">
                    <!-- Mobile Menu Button -->
                    <button id="mobileMenuBtn" class="p-2 rounded-lg text-gray-600 hover:bg-gray-100 lg:hidden">
                        <i class="fas fa-bars text-xl"></i>
                    </button>
                    
                    <!-- Logo -->
                    <a href="/" class="flex items-center gap-3 ml-3">
                        <div class="bg-gradient-to-r from-indigo-600 to-purple-600 text-white p-2 rounded-lg">
                            <i class="fas fa-cube text-xl"></i>
                        </div>
                        <span class="text-xl font-bold bg-gradient-to-r from-indigo-600 to-purple-600 text-transparent bg-clip-text hidden sm:block">
                            NDRESSILIK
                        </span>
                    </a>

                    <!-- Desktop Navigation -->
                    <nav class="hidden lg:flex ml-8 gap-4">
                        <a href="/dashboard" class="px-4 py-2 text-gray-600 hover:text-gray-900 hover:bg-gray-100 rounded-lg flex items-center gap-2 text-base">
                            <i class="fas fa-home w-5"></i>
                            <span>Dashboard</span>
                        </a>
                        <a href="/dashboard/breedings" class="px-4 py-2 text-gray-600 hover:text-gray-900 hover:bg-gray-100 rounded-lg flex items-center gap-2 text-base">
                            <i class="fas fa-paw w-5"></i>
                            <span>Mes Élevages</span>
                        </a>
                        <a href="/dashboard/services" class="px-4 py-2 text-gray-600 hover:text-gray-900 hover:bg-gray-100 rounded-lg flex items-center gap-2 text-base">
                            <i class="fas fa-concierge-bell w-5"></i>
                            <span>Mes Services</span>
                        </a>
                    </nav>
                </div>

                <!-- Right Section -->
                <div class="flex items-center gap-3">
                    <!-- Create Button -->
                    <button onclick="openCreateModal()" 
                            class="flex items-center gap-2 px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition-colors">
                        <i class="fas fa-plus"></i>
                        <span>Créer</span>
                    </button>

                    <!-- User Menu -->
                    <div class="relative">
                        <button id="userMenuBtn" class="flex items-center gap-3 p-1.5 hover:bg-gray-100 rounded-lg">
                            <img src="<%= user.profileImage || 'https://ui-avatars.com/api/?name=' + encodeURIComponent(user.displayName) %>" 
                                 alt="<%= user.displayName %>"
                                 class="w-10 h-10 rounded-full object-cover ring-2 ring-white">
                            <div class="hidden sm:block text-left">
                                <div class="text-sm font-medium text-gray-900"><%= user.displayName %></div>
                                <div class="text-xs text-gray-500"><%= user.role %></div>
                            </div>
                        </button>

                        <!-- User Dropdown -->
                        <div id="userDropdown" class="hidden absolute right-0 mt-2 w-64 bg-white rounded-xl shadow-lg border border-gray-200">
                            <div class="p-4 border-b border-gray-100">
                                <div class="flex items-center gap-3">
                                    <img src="<%= user.profileImage %>" 
                                         alt="<%= user.displayName %>"
                                         class="w-12 h-12 rounded-full object-cover">
                                    <div>
                                        <div class="font-medium text-gray-900"><%= user.displayName %></div>
                                        <div class="text-sm text-gray-500"><%= user.email %></div>
                                    </div>
                                </div>
                            </div>
                            <div class="p-2">
                                <a href="/profile" class="flex items-center gap-3 px-3 py-2 text-gray-700 hover:bg-gray-100 rounded-lg">
                                    <i class="fas fa-user w-5"></i>
                                    <span>Profile</span>
                                </a>
                                <a href="/settings" class="flex items-center gap-3 px-3 py-2 text-gray-700 hover:bg-gray-100 rounded-lg">
                                    <i class="fas fa-cog w-5"></i>
                                    <span>Paramètres</span>
                                </a>
                            </div>
                            <div class="p-2 border-t border-gray-100">
                                <a href="/logout" class="flex items-center gap-3 px-3 py-2 text-red-600 hover:bg-red-50 rounded-lg">
                                    <i class="fas fa-sign-out-alt w-5"></i>
                                    <span>Déconnexion</span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Mobile Menu -->
    <div id="mobileMenu" class="lg:hidden fixed inset-0 z-50 hidden">
        <div class="fixed inset-0 bg-black/50 backdrop-blur-sm" onclick="closeMobileMenu()"></div>
        
        <div id="mobileMenuContent" class="fixed inset-y-0 left-0 w-80 bg-white shadow-xl transform -translate-x-full transition-transform duration-300">
            <!-- Menu Header -->
            <div class="p-4 border-b border-gray-200">
                <div class="flex items-center justify-between">
                    <a href="/" class="flex items-center gap-2">
                        <div class="bg-gradient-to-r from-indigo-600 to-purple-600 text-white p-2 rounded-lg">
                            <i class="fas fa-cube"></i>
                        </div>
                        <span class="font-bold text-xl">NDRESSILIK</span>
                    </a>
                    <button onclick="closeMobileMenu()" class="p-2 hover:bg-gray-100 rounded-lg">
                        <i class="fas fa-times text-xl"></i>
                    </button>
                </div>
            </div>

            <!-- Mobile Navigation -->
            <div class="p-4 space-y-2">
                <a href="/dashboard" class="flex items-center gap-3 px-4 py-3 text-lg text-gray-700 hover:bg-gray-100 rounded-xl">
                    <i class="fas fa-home w-6 text-gray-400"></i>
                    <span>Dashboard</span>
                </a>
                <a href="/dashboard/breedings" class="flex items-center gap-3 px-4 py-3 text-lg text-gray-700 hover:bg-gray-100 rounded-xl">
                    <i class="fas fa-paw w-6 text-gray-400"></i>
                    <span>Mes Élevages</span>
                </a>
                <a href="/dashboard/services" class="flex items-center gap-3 px-4 py-3 text-lg text-gray-700 hover:bg-gray-100 rounded-xl">
                    <i class="fas fa-concierge-bell w-6 text-gray-400"></i>
                    <span>Mes Services</span>
                </a>
            </div>

            <!-- Mobile Create Button -->
            <div class="p-4 border-t border-gray-200">
                <button onclick="openCreateModal()" 
                        class="w-full flex items-center justify-center gap-2 px-4 py-3 bg-indigo-600 text-white rounded-xl hover:bg-indigo-700">
                    <i class="fas fa-plus"></i>
                    <span>Créer</span>
                </button>
            </div>
        </div>
    </div>
</header>

<!-- Create Modal -->
<div id="createModal" class="fixed inset-0 z-50 hidden">
    <div class="absolute inset-0 bg-black/50 backdrop-blur-sm" onclick="closeCreateModal()"></div>
    
    <div class="fixed inset-0 flex items-center justify-center p-4">
        <div class="bg-white rounded-2xl shadow-xl w-full max-w-lg">
            <div class="p-6">
                <h2 class="text-2xl font-semibold text-gray-900 mb-6">Que souhaitez-vous créer ?</h2>
                
                <% if (!hasBreeding) { %>
                    <a href="/dashboard/breedings/add" 
                       class="flex items-center gap-4 p-4 mb-4 bg-gradient-to-r from-blue-50 to-indigo-50 
                              rounded-xl hover:bg-blue-100 transition-colors">
                        <div class="w-12 h-12 rounded-xl bg-blue-500 text-white flex items-center justify-center">
                            <i class="fas fa-home text-xl"></i>
                        </div>
                        <div>
                            <h3 class="font-medium text-gray-900">Créer un élevage</h3>
                            <p class="text-sm text-gray-500">Commencez à gérer votre élevage professionnel</p>
                        </div>
                    </a>
                <% } else { %>
                    <a href="/dashboard/breedings/<%= breeding._id %>/dogs/add"
                       class="flex items-center gap-4 p-4 mb-4 bg-gradient-to-r from-blue-50 to-indigo-50 
                              rounded-xl hover:bg-blue-100 transition-colors">
                        <div class="w-12 h-12 rounded-xl bg-blue-500 text-white flex items-center justify-center">
                            <i class="fas fa-dog text-xl"></i>
                        </div>
                        <div>
                            <h3 class="font-medium text-gray-900">Ajouter un chien</h3>
                            <p class="text-sm text-gray-500">Ajoutez un nouveau chien à votre élevage</p>
                        </div>
                    </a>
                <% } %>

                <a href="/dashboard/new-service" 
                   class="flex items-center gap-4 p-4 bg-gradient-to-r from-purple-50 to-pink-50 
                          rounded-xl hover:bg-purple-100 transition-colors">
                    <div class="w-12 h-12 rounded-xl bg-purple-500 text-white flex items-center justify-center">
                        <i class="fas fa-concierge-bell text-xl"></i>
                    </div>
                    <div>
                        <h3 class="font-medium text-gray-900">Ajouter un service</h3>
                        <p class="text-sm text-gray-500">Dressage, toilettage, pension et plus</p>
                    </div>
                </a>
            </div>
        </div>
    </div>
</div>

<script>
// Modal Functions
function openCreateModal() {
    document.getElementById('createModal').classList.remove('hidden');
    document.body.style.overflow = 'hidden';
}

function closeCreateModal() {
    document.getElementById('createModal').classList.add('hidden');
    document.body.style.overflow = '';
}

// Mobile Menu Functions
function toggleMobileMenu() {
    const mobileMenu = document.getElementById('mobileMenu');
    const mobileMenuContent = document.getElementById('mobileMenuContent');
    
    if (mobileMenu.classList.contains('hidden')) {
        mobileMenu.classList.remove('hidden');
        document.body.style.overflow = 'hidden';
        setTimeout(() => {
            mobileMenuContent.style.transform = 'translateX(0)';
        }, 50);
    } else {
        closeMobileMenu();
    }
}

function closeMobileMenu() {
    const mobileMenu = document.getElementById('mobileMenu');
    const mobileMenuContent = document.getElementById('mobileMenuContent');
    
    mobileMenuContent.style.transform = 'translateX(-100%)';
    setTimeout(() => {
        mobileMenu.classList.add('hidden');
        document.body.style.overflow = '';
    }, 300);
}

// User Dropdown
const userMenuBtn = document.getElementById('userMenuBtn');
const userDropdown = document.getElementById('userDropdown');

userMenuBtn.addEventListener('click', (e) => {
    e.stopPropagation();
    userDropdown.classList.toggle('hidden');
});

document.addEventListener('click', () => {
    userDropdown.classList.add('hidden');
});

userDropdown.addEventListener('click', (e) => e.stopPropagation());

// Handle escape key
document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') {
        closeCreateModal();
        closeMobileMenu();
        userDropdown.classList.add('hidden');
    }
});
</script>

<div class="h-16"></div>