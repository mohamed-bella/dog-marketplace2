     <script>
          document.addEventListener('DOMContentLoaded', function () {
               // Enhanced touch feedback
               const addTouchFeedback = (element) => {
                    element.addEventListener('touchstart', () => {
                         element.style.transform = 'scale(0.98)';
                    }, { passive: true });

                    element.addEventListener('touchend', () => {
                         element.style.transform = '';
                    }, { passive: true });
               };

               // Add touch feedback to all interactive elements
               document.querySelectorAll('.service-card, button').forEach(addTouchFeedback);

               // Lazy load images
               const lazyLoadImages = () => {
                    const imageObserver = new IntersectionObserver((entries, observer) => {
                         entries.forEach(entry => {
                              if (entry.isIntersecting) {
                                   const img = entry.target;
                                   img.src = img.dataset.src;
                                   img.classList.remove('shimmer');
                                   observer.unobserve(img);
                              }
                         });
                    });

                    document.querySelectorAll('img[data-src]').forEach(img => {
                         imageObserver.observe(img);
                    });
               };

               lazyLoadImages();

               // Enhance swiper functionality
               const swiper = document.querySelector('.serviceSwiper').swiper;

               // Add keyboard navigation
               document.addEventListener('keydown', (e) => {
                    if (e.key === 'ArrowRight') swiper.slideNext();
                    if (e.key === 'ArrowLeft') swiper.slidePrev();
               });

               // Add mouse wheel support
               swiper.el.addEventListener('wheel', (e) => {
                    e.preventDefault();
                    if (e.deltaY > 0) swiper.slideNext();
                    else swiper.slidePrev();
               });
          });

