                    <!-- Dog Breed Input with Autocomplete -->
                    <div class="mb-3">
                         <label for="breed" class="form-label" style="color: #000;">Race de chien</label>

                         <!-- Input for the dog breed with autocomplete -->
                         <input type="text" class="form-control" id="breedInput" name="title" placeholder="Entrez la race de chien" list="dogBreeds">

                         <!-- Datalist for predefined dog breeds -->
                         <datalist id="dogBreeds">
                              <option value="Berger Allemand">
                              <option value="Labrador Retriever">
                              <option value="Golden Retriever">
                              <option value="Bulldog Français">
                              <option value="Bouledogue Anglais">
                              <option value="Chihuahua">
                              <option value="Rottweiler">
                              <option value="Beagle">
                              <option value="Poodle">
                              <option value="Boxer">
                              <option value="Cocker Spaniel">
                                   <!-- Add more dog breeds as needed -->
                         </datalist>

                         <!-- Invalid feedback for validation -->
                         <div class="invalid-feedback">La race de chien est obligatoire.</div>
                    </div>

                    <!-- Filter by Price Range -->
                    <label for="minPrice">Prix Min:</label>
                    <input type="number" id="minPrice" name="minPrice" placeholder="Prix minimum">

