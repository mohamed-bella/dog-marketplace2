<section class="relative min-h-[80vh] bg-white">
     <!-- Subtle Grid Background -->
     <div class="absolute inset-0">
          <div class="absolute inset-0 bg-[linear-gradient(to_right,#f0f0f0_1px,transparent_1px),linear-gradient(to_bottom,#f0f0f0_1px,transparent_1px)] bg-[size:4rem_4rem] [mask-image:radial-gradient(ellipse_80%_50%_at_50%_-20%,#000_70%,transparent_110%)]"></div>
     </div>

     <!-- Gradient Orbs -->
     <div class="absolute inset-0 overflow-hidden">
          <div class="absolute -top-20 -left-20 w-72 h-72 bg-blue-100/50 rounded-full mix-blend-multiply filter blur-xl animate-float"></div>
          <div class="absolute -bottom-20 -right-20 w-72 h-72 bg-purple-100/50 rounded-full mix-blend-multiply filter blur-xl animate-float-delayed"></div>
     </div>

     <div class="relative container mx-auto px-4 py-12 lg:py-20">
          <!-- Hero Content -->
          <div class="max-w-6xl mx-auto text-center">
               <!-- Main Heading -->
               <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-gray-900 mb-8">
                    Trouvez les meilleurs services
                    <span class="relative block mt-2">
                         <span class="relative z-10 text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-indigo-600">
                              pour votre compagnon
                         </span>
                         <!-- Animated Underline -->
                         <svg class="absolute -bottom-2 left-0 w-full" viewBox="0 0 300 8" fill="none">
                              <path class="animate-draw" d="M1 5.5c48.923-4 246.769-4 295.692 0" stroke="url(#titleGradient)" stroke-width="2" stroke-linecap="round" pathLength="1" />
                              <defs>
                                   <linearGradient id="titleGradient" x1="0" y1="0" x2="1" y2="0">
                                        <stop offset="0%" stop-color="#2563eb" />
                                        <stop offset="100%" stop-color="#4f46e5" />
                                   </linearGradient>
                              </defs>
                         </svg>
                    </span>
               </h1>

               <p class="text-lg sm:text-xl text-gray-600 max-w-2xl mx-auto mb-12">
                    Des professionnels qualifiés à votre service pour prendre soin de votre animal de compagnie
               </p>
               <% const services=[ { id: 'dressage' , name: 'Dressage' , icon: '02AbFTOZGc7a' , color: 'blue' , image: 'https://ndressilik.s3.eu-north-1.amazonaws.com/users/672166487944169b94e40563/gallery/1730309993918_d.png' }, { id: 'toilettage' , name: 'Toilettage' , icon: 'eSFW8g06YlXi' , color: 'purple' , image: 'https://ndressilik.s3.eu-north-1.amazonaws.com/users/672166487944169b94e40563/gallery/1730309991467_toilettage.png' }, { id: 'promenade' , name: 'Promenade' , icon: 'W8jJ6qfM7hcV' , color: 'green' , image: 'https://ndressilik.s3.eu-north-1.amazonaws.com/users/672166487944169b94e40563/gallery/1730309993933_p.png' }, { id: 'veterinaire' , name: 'Vétérinaire' , icon: 's6qCmDA9s4w6' , color: 'red' , image: 'https://ndressilik.s3.eu-north-1.amazonaws.com/users/672166487944169b94e40563/gallery/1730309991441_v.png' }, { id: 'pension' , name: 'Pension' , icon: 'rine6jqhXEly' , color: 'yellow' , image: 'https://ndressilik.s3.eu-north-1.amazonaws.com/users/672166487944169b94e40563/gallery/1730309989188_pension.png' }, { id: 'transport' , name: 'Transport' , icon: 'p0LDtHcHd2Xg' , color: 'indigo' , image: 'https://ndressilik.s3.eu-north-1.amazonaws.com/users/672166487944169b94e40563/gallery/1730309989456_t.png' } ] %>

                    <div class="container mx-auto px-2">
                         <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                              <% services.forEach(service=> { %>
                                   <div class="group">
                                        <!-- Mobile View -->
                                        <a href="/services/<%= service.id %>" class="block md:hidden">
                                             <div class="flex bg-white rounded-2xl shadow-sm overflow-hidden">
                                                  <!-- Image Section -->
                                                  <div class="w-1/2 relative">
                                                       <img src="<%= service.image %>" alt="<%= service.name %>" class="w-full h-full object-cover">
                                                       <div class="absolute inset-0 bg-gradient-to-r from-black/20 to-transparent"></div>
                                                  </div>

                                                  <!-- Content Section -->
                                                  <div class="w-1/2 p-4 bg-<%= service.color %>-600 flex flex-col justify-between">
                                                       <!-- Icon and Title -->
                                                       <div>
                                                            <div class="mb">
                                                                 <!-- <img src="https://img.icons8.com/?size=100&id=<%= service.icon %>&format=png" alt="" class="w-8 h-8 object-contain filter brightness-0 invert"> -->
                                                            </div>
                                                            <h2 class="text-2xl font-bold text-white leading-tight" style="text-align: left;">
                                                                 Les Services de <%= service.name %>
                                                            </h2>
                                                       </div>


                                                  </div>
                                             </div>
                                        </a>

                                        <!-- Desktop View -->
                                        <a href="/service/<%= service.id %>" class="hidden md:block">
                                             <div class="relative bg-white rounded-2xl shadow-lg overflow-hidden group-hover:-translate-y-1 transition-all duration-300">
                                                  <!-- Image Container -->
                                                  <div class="aspect-[4/3] relative overflow-hidden">
                                                       <img src="<%= service.image %>" alt="<%= service.name %>" class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500">

                                                       <!-- Overlay -->
                                                       <div class="absolute inset-0 bg-gradient-to-t from-<%= service.color %>-900/90 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                                                            <div class="absolute bottom-4 left-4 text-white">
                                                                 <span class="text-sm font-medium">Découvrir</span>
                                                                 <i class="fas fa-arrow-right ml-2 group-hover:translate-x-1 transition-transform"></i>
                                                            </div>
                                                       </div>

                                                       <!-- Icon Badge -->
                                                       <div class="absolute top-4 right-4">
                                                            <div class="w-12 h-12 rounded-full bg-white/90 backdrop-blur flex items-center justify-center">
                                                                 <img src="https://img.icons8.com/?size=100&id=<%= service.icon %>&format=png" alt="" class="w-7 h-7 object-contain">
                                                            </div>
                                                       </div>
                                                  </div>

                                                  <!-- Content -->
                                                  <div class="p-6 bg-gradient-to-br from-<%= service.color %>-600 to-<%= service.color %>-700">
                                                       <h3 class="text-xl font-bold text-white">
                                                            Les services de <%= service.name %>
                                                       </h3>
                                                       <!-- <p class="mt-2 text-sm text-white/80">
                                                            Cliquez pour découvrir nos services de <%= service.name.toLowerCase() %>
                                                       </p> -->
                                                  </div>
                                             </div>
                                        </a>
                                   </div>
                                   <% }) %>
                         </div>
                    </div>

                    <style>
                         /* Optional: Improve image rendering */
                         img {
                              -webkit-font-smoothing: antialiased;
                              -moz-osx-font-smoothing: grayscale;
                         }
                    </style>

                    <!-- Add this to your stylesheet or in a style tag -->
                    <style>
                         /* Optional: Add a subtle gradient overlay to images */
                         .aspect-[4/3]::after {
                              content: '';
                              position: absolute;
                              inset: 0;
                              background: linear-gradient(to bottom, transparent 0%, rgba(0, 0, 0, 0.1) 100%);
                              opacity: 0;
                              transition: opacity 0.3s ease;
                         }

                         .group:hover .aspect-[4/3]::after {
                              opacity: 1;
                         }
                    </style>

                    <style>
                         .perspective {
                              perspective: 1000px;
                         }

                         .preserve-3d {
                              transform-style: preserve-3d;
                         }

                         .rotate-y-12 {
                              transform: rotateY(12deg);
                         }

                         /* Smooth transitions */
                         .transition-all {
                              transition-property: all;
                              transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
                              transition-duration: 300ms;
                         }

                         /* Responsive optimizations */
                         @media (max-width: 640px) {
                              .grid {
                                   gap: 0.75rem;
                              }

                              .p-5 {
                                   padding: 1rem;
                              }
                         }

                         /* Reduced Motion */
                         @media (prefers-reduced-motion: reduce) {

                              .transition-all,
                              .transition-transform,
                              .transition-colors,
                              .transition-opacity {
                                   transition: none !important;
                              }
                         }
                    </style>
          </div>
     </div>
</section>

<style>
     @keyframes float {

          0%,
          100% {
               transform: translateY(0) scale(1);
          }

          50% {
               transform: translateY(-20px) scale(1.05);
          }
     }

     @keyframes draw {
          from {
               stroke-dashoffset: 1;
          }

          to {
               stroke-dashoffset: 0;
          }
     }

     .animate-float {
          animation: float 6s ease-in-out infinite;
     }

     .animate-float-delayed {
          animation: float 6s ease-in-out 2s infinite;
     }

     .animate-draw {
          stroke-dasharray: 1;
          stroke-dashoffset: 1;
          animation: draw 1.5s ease-out forwards;
     }

     /* Mobile Optimizations */
     @media (max-width: 640px) {
          .container {
               padding-left: 0.75rem;
               padding-right: 0.75rem;
          }

          .grid {
               gap: 0.75rem;
          }
     }

     /* Reduced Motion */
     @media (prefers-reduced-motion: reduce) {

          .animate-float,
          .animate-float-delayed,
          .animate-draw {
               animation: none;
          }

          .transition-all,
          .transition-colors,
          .transition-opacity {
               transition: none !important;
          }
     }
</style>