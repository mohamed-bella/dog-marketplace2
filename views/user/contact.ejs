<%- include('include/head.ejs') %>
     <%- include('include/navbar.ejs') %>


          <!-- Section de contact -->
          <div class="container my-5">
               <h1 class="text-center mb-4">Contactez-nous</h1>

               <div class="row">
                    <!-- Informations de contact -->
                    <div class="col-md-6 mb-4">
                         <h3>Nos coordonn√©es</h3>
                         <p><i class="bi bi-geo-alt-fill"></i> Bouskoura, Casablanca, Maroc</p>
                         <!-- <p><i class="bi bi-telephone-fill"></i> </p> -->
                         <p><i class="bi bi-envelope-fill"></i> ndressilik@gmail.com</p>

                         <h4>Suivez-nous</h4>
                         <div class="social-links">
                              <a href="https://web.facebook.com/groups/ndressilik" aria-label="Facebook"><i class="bi bi-facebook"></i></a>
                              <a href="https://www.instagram.com/ndressilik" aria-label="Instagram"><i class="bi bi-instagram"></i></a>
                              <a href="https://www.linkedin.com/in/ndressilik-ndressilik-770630329" aria-label="LinkedIn"><i class="bi bi-linkedin"></i></a>
                         </div>
                    </div>

                    <!-- Formulaire de contact -->
                    <div class="col-md-6 mb-4">

                         <!-- Display success message -->
                         <% if (typeof success !=='undefined' ) { %>
                              <div class="alert alert-success">
                                   <%= success %>
                              </div>
                              <% } %>

                                   <!-- Display validation errors -->
                                   <% if (typeof errors !=='undefined' && errors.length> 0) { %>
                                        <div class="alert alert-danger">
                                             <ul>
                                                  <% errors.forEach(function(error) { %>
                                                       <li>
                                                            <%= error.msg %>
                                                       </li>
                                                       <% }) %>
                                             </ul>
                                        </div>
                                        <% } %>

                                             <div class="">
                                                  <form action="/contact" method="POST">
                                                       <div class="mb-3">
                                                            <label for="name" class="form-label">Nom</label>
                                                            <input type="text" class="form-control" id="name" name="name" value="<%= formData ? formData.name : '' %>" required>
                                                       </div>
                                                       <div class="mb-3">
                                                            <label for="email" class="form-label">Email</label>
                                                            <input type="email" class="form-control" id="email" name="email" value="<%= formData ? formData.email : '' %>" required>
                                                       </div>
                                                       <div class="mb-3">
                                                            <label for="message" class="form-label">Message</label>
                                                            <textarea class="form-control" id="message" name="message" rows="5" required><%= formData ? formData.message : '' %></textarea>
                                                       </div>
                                                       <button type="submit" class="btn btn-primary">Envoyer</button>
                                                  </form>
                                             </div>
                    </div>

               </div>
          </div>

          <!-- Bootstrap JS + Popper.js -->
          <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
          <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>