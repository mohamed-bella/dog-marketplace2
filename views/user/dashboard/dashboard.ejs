<!-- views/dashboard.ejs -->
<!DOCTYPE html>
<html lang="fr">
<head>
    <%- include('./includes/head') %>
    <title>Dashboard | Service Provider</title>
</head>
<body class="bg-neutral-100">
    <div x-data="{ mobileMenuOpen: false }" class="min-h-screen">
        <!-- Sidebar for desktop -->
        <aside class="fixed hidden md:flex flex-col w-64 h-screen bg-white border-r border-neutral-200">
            <%- include('./includes/sidebar') %>
        </aside>

        <!-- Mobile navigation -->
        <div 
            class="fixed inset-0 bg-black bg-opacity-50 z-40 md:hidden"
            x-show="mobileMenuOpen"
            x-transition:enter="transition-opacity ease-linear duration-300"
            x-transition:enter-start="opacity-0"
            x-transition:enter-end="opacity-100"
            x-transition:leave="transition-opacity ease-linear duration-300"
            x-transition:leave-start="opacity-100"
            x-transition:leave-end="opacity-0"
            @click="mobileMenuOpen = false"
            x-cloak
        ></div>

        <div 
            class="fixed inset-y-0 left-0 w-64 bg-white z-50 mobile-nav md:hidden"
            :class="{ 'active': mobileMenuOpen }"
            x-cloak
        >
            <%- include('./includes/sidebar') %>
        </div>

        <!-- Main content -->
        <main class="md:ml-64 min-h-screen">
            <!-- Top navigation -->
            <nav class="bg-white border-b border-neutral-200 h-16 flex items-center justify-between px-4 md:px-6">
                <button 
                    class="text-neutral-500 md:hidden"
                    @click="mobileMenuOpen = true"
                >
                    <i class="fas fa-bars text-xl"></i>
                </button>
                <div class="flex items-center space-x-4">
                    <button class="text-neutral-500">
                        <i class="fas fa-bell text-xl"></i>
                    </button>
                    <div class="h-8 w-8 rounded-full bg-neutral-200"></div>
                </div>
            </nav>
            

            <!-- Page content -->
            <div class="p-4 md:p-6">
                
                <%- include(`./includes/${page}`) %>
            </div>
        </main>
    </div>
</body>
</html>