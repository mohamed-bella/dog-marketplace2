<section class="relative py-24 bg-gradient-to-b from-white to-gray-50">
     <!-- Background Pattern -->
     <!-- <div class="absolute inset-0 opacity-[0.03]" style="background-image: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg' %3E%3Cpath d='M54.627 0l.83.828-1.415 1.415L51.8 0h2.827zM5.373 0l-.83.828L5.96 2.243 8.2 0H5.374zM48.97 0l3.657 3.657-1.414 1.414L46.143 0h2.828zM11.03 0L7.372 3.657 8.787 5.07 13.857 0H11.03zm32.284 0L49.8 6.485 48.384 7.9l-7.9-7.9h2.83zM16.686 0L10.2 6.485 11.616 7.9l7.9-7.9h-2.83zM22.344 0L13.858 8.485 15.272 9.9l9.9-9.9h-2.828zM32 0l-3.657 3.657 1.414 1.414L33.514 1.414 32 0zm-10.344 0L13.172 8.485l1.414 1.414L25.172 0h-3.516zM32 0l-3.657 3.657 1.414 1.414L33.514 1.414 32 0zM49.314 0L40.828 8.485 42.242 9.9l8.485-8.485h-1.414zM0 5.373l.828-.83L2.243 5.96 0 8.2V5.374zm0 5.657l3.657-3.657 1.414 1.414L0 13.857V11.03zm0 5.657l6.485-6.485 1.414 1.414L0 19.857V16.686zm0 5.657l9.899-9.9 1.414 1.415L0 25.515v-2.828zm0 5.657L13.857 13.857l1.414 1.414L0 31.314v-3.543zM0 32l3.657-3.657 1.414 1.414L0 34.514V32zm0 5.657L8.485 28.343l1.414 1.414L0 40.485v-2.828zm0 5.657L13.857 28.343l1.414 1.414L0 46.142v-2.828zm0 5.657L19.343 28.343l1.414 1.414L0 51.8v-2.83zm0 5.657L24.485 28.343l1.414 1.414L0 57.456v-2.83zM28.343 60L0 31.657 1.414 30.243l29.9 29.9L28.343 60z' fill='%23000000' fill-opacity='0.5' fill-rule='evenodd' /%3E%3C/svg%3E");</div> -->

     <div class="container mx-auto px-4 relative">
          <!-- Section Header -->
          <div class="max-w-3xl mx-auto text-center mb-16">
               <span class="text-blue-600 font-medium mb-4 block">Nos Experts</span>
               <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">Rencontrez Nos Experts Animaliers</h2>
               <p class="text-xl text-gray-600">Des professionnels passionnés et certifiés pour prendre soin de vos animaux</p>
          </div>
          <!-- Expert Cards Grid -->
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 md:gap-6">
               <% topProviders.forEach(provider=> { %>
                    <a href="/@<%= provider.slug %>" class="group">
                         <div class="bg-white rounded-2xl overflow-hidden hover:shadow-lg transition-all duration-300 
                      border border-gray-100 relative h-full">
                              <!-- Main Content -->
                              <div class="p-4 md:p-5 flex flex-col md:flex-row lg:flex-col gap-4">
                                   <!-- Profile Section -->
                                   <div class="flex items-center md:flex-col lg:flex-row gap-3 flex-shrink-0">
                                        <!-- Profile Image -->
                                        <div class="relative flex-shrink-0">
                                             <div class="w-16 h-16 md:w-20 md:h-20 rounded-xl overflow-hidden ring-4 ring-gray-50 
                                      bg-gray-50 relative">
                                                  <img src="<%= provider.profileImage %>" alt="<%= provider.displayName %>" class="w-full h-full object-cover" onerror="this.src='/default-avatar.png'">

                                                  <% if (provider.isVerified) { %>
                                                       <div class="absolute -bottom-1 -right-1 bg-green-500 rounded-lg p-1 
                                              shadow-lg ring-2 ring-white">
                                                            <svg class="w-3 h-3 text-white" viewBox="0 0 20 20" fill="currentColor">
                                                                 <path d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" />
                                                            </svg>
                                                       </div>
                                                       <% } %>
                                             </div>

                                             <!-- Rating Badge -->
                                             <div class="absolute -top-2 -right-2 flex items-center bg-yellow-400 px-2 py-0.5 
                                      rounded-lg shadow-sm">
                                                  <span class="font-bold text-sm text-white">
                                                       <%= provider.metrics?.averageRating || '4.8' %>
                                                  </span>
                                             </div>
                                        </div>

                                        <!-- Name and Location - Mobile Layout -->
                                        <div class="flex-1 md:text-center lg:text-left">
                                             <h3 class="text-base font-bold text-gray-900 group-hover:text-blue-600 
                                     transition-colors leading-tight">
                                                  <%= provider.displayName %>
                                             </h3>
                                             <div class="flex items-center gap-1 text-gray-500 text-sm mt-0.5
                                      md:justify-center lg:justify-start">
                                                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                       <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                                                  </svg>
                                                  <%= provider.location?.city || 'Paris' %>
                                             </div>
                                        </div>
                                   </div>

                                   <!-- Info Section -->
                                   <div class="flex-1 flex flex-col justify-between gap-3">
                                        <!-- Specializations -->
                                        <div class="flex flex-wrap gap-1.5">
                                             <% (provider.specializations || ['Soin Animalier', 'Dressage' ]).slice(0, 3).forEach(spec=> { %>
                                                  <span class="px-2 py-1 bg-blue-50 text-blue-700 rounded-lg text-xs font-medium 
                                           inline-flex items-center">
                                                       <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                                            <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                                                       </svg>
                                                       <%= spec %>
                                                  </span>
                                                  <% }) %>
                                        </div>

                                        <!-- Stats and CTA -->
                                        <div class="flex items-center justify-between pt-2 border-t border-gray-100">
                                             <div class="flex items-center text-gray-500 text-sm">
                                                  <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                       <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                                  </svg>
                                                  <span class="font-medium">
                                                       <%= provider.metrics?.totalServices || '50' %>
                                                  </span>
                                                  <span class="ml-1 hidden md:inline">services</span>
                                             </div>

                                             <span class="inline-flex items-center text-blue-600 font-medium text-sm
                                     group-hover:translate-x-1 transition-transform">
                                                  Voir profil
                                                  <svg class="w-4 h-4 ml-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                       <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                                                  </svg>
                                             </span>
                                        </div>
                                   </div>
                              </div>
                         </div>
                    </a>
                    <% }) %>
          </div>

          <style>
               /* Custom Animation */
               @keyframes card-hover {
                    0% {
                         transform: translateY(0);
                    }

                    100% {
                         transform: translateY(-4px);
                    }
               }

               /* Better touch feedback */
               @media (hover: none) {
                    .group:active {
                         transform: scale(0.98);
                    }
               }

               /* Smooth transitions */
               .group {
                    transition: transform 0.2s ease;
               }

               /* Gradient hover effect */
               .group:hover::before {
                    opacity: 1;
               }
          </style>

          <!-- Call to Action -->
          <div class="mt-16 text-center">
               <a href="/providers" class="inline-flex items-center px-6 py-3 bg-blue-600 hover:bg-blue-700 active:bg-blue-800 
                      text-white rounded-full font-medium shadow-sm hover:shadow-md transition-all">
                    Découvrir tous nos experts
                    <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                         <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                    </svg>
               </a>
          </div>
     </div>
</section>