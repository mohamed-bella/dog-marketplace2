<!-- views/dashboard.ejs -->
<!DOCTYPE html>
<html lang="fr">
<head>
    <%- include('./includes/head') %>
    <title>Dashboard | Service Provider</title>
</head>
<body class="bg-neutral-100">
    <div class="min-h-screen">
        <!-- Sidebar for desktop -->
        <aside class="fixed hidden md:flex flex-col w-64 h-screen bg-white border-r border-neutral-200">
            <%- include('./includes/sidebar') %>
        </aside>

        <!-- Main content -->
        <main class="md:ml-64 min-h-screen">
            <!-- Top navigation -->
            <nav class="bg-white border-b border-neutral-200 sticky top-0 z-30">
                <div class="h-16 flex items-center justify-between px-4 md:px-6">
                    <div class="flex items-center">
                        <div class="md:hidden">
                            <span class="text-lg font-semibold">NDRESSILIK</span>
                        </div>
                        <div class="hidden md:block">
                            <h1 class="text-xl font-semibold">Dashboard</h1>
                        </div>
                    </div>
                    <div class="flex items-center space-x-4">
                        <a href="/" class="text-neutral-500 relative">
                            <i class="fas fa-home text-xl"></i>
                            <!-- <span class="absolute -top-1 -right-1 bg-red-500 text-white text-xs rounded-full w-4 h-4 flex items-center justify-center">3</span> -->
                        </a>
                        <div class="h-8 w-8 rounded-full overflow-hidden cursor-pointer">
                            <% if (user.profileImage) { %>
                                <img 
                                    src="<%= user.profileImage %>" 
                                    alt="<%= user.name %>'s profile" 
                                    class="w-full h-full object-cover"
                                    onerror="this.onerror=null; this.src='https://ui-avatars.com/api/?name=<%= encodeURIComponent(user.name) %>&background=F3F4F6&color=6B7280'"
                                />
                            <% } else { %>
                                <img 
                                    src="https://ui-avatars.com/api/?name=<%= encodeURIComponent(user.name) %>&background=F3F4F6&color=6B7280" 
                                    alt="<%= user.name %>'s profile"
                                    class="w-full h-full object-cover"
                                />
                            <% } %>
                        </div>
                    </div>
                </div>

                <!-- Mobile Navigation Links -->
                <!-- Mobile Navigation Links -->
<div class="md:hidden overflow-x-auto scrollbar-hide border-t border-neutral-100">
    <div class="flex px-4 py-2 space-x-3">
        <a 
            href="/dashboard"
            class="flex flex-col items-center justify-center min-w-[4.5rem] p-2 rounded-xl transition-all duration-200
                   <%= page === 'dashboard' ? 'bg-blue-50 text-blue-600' : 'bg-slate-50 text-slate-600 hover:bg-blue-50 hover:text-blue-600' %>"
        >
            <i class="fas fa-home text-lg mb-1"></i>
            <span class="text-xs font-medium">Accueil</span>
        </a>

        <a 
            href="/dashboard/services"
            class="flex flex-col items-center justify-center min-w-[4.5rem] p-2 rounded-xl transition-all duration-200
                   <%= page === 'services' ? 'bg-purple-50 text-purple-600' : 'bg-slate-50 text-slate-600 hover:bg-purple-50 hover:text-purple-600' %>"
        >
            <i class="fas fa-concierge-bell text-lg mb-1"></i>
            <span class="text-xs font-medium">Services</span>
        </a>

        <a 
            href="/dashboard/breedings"
            class="flex flex-col items-center justify-center min-w-[4.5rem] p-2 rounded-xl transition-all duration-200
                   <%= page === 'breedings' ? 'bg-amber-50 text-amber-600' : 'bg-slate-50 text-slate-600 hover:bg-amber-50 hover:text-amber-600' %>"
        >
            <i class="fas fa-shield-dog text-lg mb-1"></i>
            <span class="text-xs font-medium">Elevages</span>
        </a>
        <a 
        href="/dashboard/requests"
        class="flex flex-col items-center justify-center min-w-[4.5rem] p-2 rounded-xl transition-all duration-200
               <%= page === 'requests' ? 'bg-amber-50 text-amber-600' : 'bg-slate-50 text-slate-600 hover:bg-amber-50 hover:text-amber-600' %>"
    >
        <i class="fas fa-clipboard-list text-lg mb-1"></i>
        <span class="text-xs font-medium">Demandes</span>
    </a>

        <a 
            href="/dashboard/reviews"
            class="flex flex-col items-center justify-center min-w-[4.5rem] p-2 rounded-xl transition-all duration-200
                   <%= page === 'reviews' ? 'bg-yellow-50 text-yellow-600' : 'bg-slate-50 text-slate-600 hover:bg-yellow-50 hover:text-yellow-600' %>"
        >
            <i class="fas fa-star text-lg mb-1"></i>
            <span class="text-xs font-medium">Avis</span>
        </a>

        <a 
            href="/dashboard/stats"
            class="flex flex-col items-center justify-center min-w-[4.5rem] p-2 rounded-xl transition-all duration-200
                   <%= page === 'stats' ? 'bg-emerald-50 text-emerald-600' : 'bg-slate-50 text-slate-600 hover:bg-emerald-50 hover:text-emerald-600' %>"
        >
            <i class="fas fa-chart-line text-lg mb-1"></i>
            <span class="text-xs font-medium">Stats</span>
        </a>

        <a 
            href="/dashboard/profile"
            class="flex flex-col items-center justify-center min-w-[4.5rem] p-2 rounded-xl transition-all duration-200
                   <%= page === 'profile' ? 'bg-rose-50 text-rose-600' : 'bg-slate-50 text-slate-600 hover:bg-rose-50 hover:text-rose-600' %>"
        >
            <i class="fas fa-user text-lg mb-1"></i>
            <span class="text-xs font-medium">Profile</span>
        </a>
    </div>
</div>
            </nav>

           <!-- Quick Actions (Mobile Only) -->
<div class="md:hidden bg-gradient-to-r from-yellow-50 to-amber-50 border-b border-yellow-100/50 px-4 py-3">
    <div class="flex justify-between items-center">
       

        
    </div>
</div>

            <!-- Page content -->
            <div class="p-4 md:p-6">
                <%- include(`./includes/${page}`) %>
            </div>

            <!-- Mobile Bottom Padding for Navigation -->
            <div class="h-16 md:hidden"></div>
        </main>
    </div>

    <!-- Add this style to your head or in a separate CSS file -->
    <style>
        /* Hide scrollbar for Chrome, Safari and Opera */
        .scrollbar-hide::-webkit-scrollbar {
            display: none;
        }

        /* Hide scrollbar for IE, Edge and Firefox */
        .scrollbar-hide {
            -ms-overflow-style: none;  /* IE and Edge */
            scrollbar-width: none;  /* Firefox */
        }

        /* Smooth transitions */
        .transition-colors {
            transition: all 0.2s ease-in-out;
        }

        /* Active tab indicator animation */
        .border-b-2 {
            transition: border-color 0.2s ease-in-out;
        }

        /* Active link styles */
        .text-primary-600 {
            position: relative;
        }
    </style>
</body>
</html>