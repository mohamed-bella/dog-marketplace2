<%- include('include/head', { title: pageTitle, description: description, keywords: keywords }) %>
<%- include('include/navbar') %>

<main class="min-h-screen bg-gray-50/50">
    <!-- Hero Section with Search Intent -->
    <section class="bg-white border-b">
        <div class="max-w-7xl mx-auto px-4 py-10 sm:py-16">
            <div class="text-center space-y-4">
                <h1 class="text-3xl sm:text-4xl font-semibold text-gray-900">
                    Services Canines Professionnels
                </h1>
                <p class="text-lg text-gray-600 max-w-2xl mx-auto">
                    Trouvez les meilleurs services pour votre compagnon √† quatre pattes
                </p>
            </div>
        </div>
    </section>

    <!-- Quick Filters Bar -->
    <div class="sticky top-16 z-30 bg-white border-b shadow-sm">
        <div class="max-w-5xl mx-auto">
            <div class="overflow-x-auto scrollbar-hide">
                <div class="flex whitespace-nowrap px-4 py-3 gap-3">
                    <% const categories = [
                        { id: 'tous', icon: 'üîç', label: 'Tous les services' },
                        { id: 'dressage', icon: 'üêï', label: 'Dressage' },
                        { id: 'toilettage', icon: '‚úÇÔ∏è', label: 'Toilettage' },
                        { id: 'promenade', icon: 'ü¶Æ', label: 'Promenade' },
                        { id: 'veterinaire', icon: '‚öïÔ∏è', label: 'V√©t√©rinaire' },
                        { id: 'pension', icon: 'üè†', label: 'Pension' },
                        { id: 'transport', icon: 'üöó', label: 'Transport' }
                    ];
                    const currentCategory = serviceOption || 'tous';
                    %>
                    
                    <% categories.forEach(category => { 
                        const isActive = currentCategory === category.id;
                    %>
                        <a href="/services/<%= category.id %>" 
                           class="inline-flex items-center px-4 py-2 rounded-full text-sm font-medium 
                                  border transition duration-150 ease-in-out
                                  <%= isActive ? 
                                    'bg-blue-600 text-white border-transparent' : 
                                    'bg-white text-gray-700 border-gray-200 hover:bg-gray-50' %>">
                            <span class="mr-2"><%= category.icon %></span>
                            <%= category.label %>
                        </a>
                    <% }) %>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content Area -->
    <div class="max-w-5xl mx-auto px-4 py-8">
        <!-- Location Selection -->
        <div class="mb-8">
            <div class="flex items-center justify-between mb-4">
                <h2 class="text-lg font-medium text-gray-900">Localisation</h2>
                <button type="button" class="text-sm text-blue-600 hover:text-blue-700">
                    Voir toutes les villes
                </button>
            </div>
            <div class="flex flex-wrap gap-2">
                <% locations.forEach(location => { %>
                    <a href="/services/<%= serviceOption %>/<%= location %>" 
                       class="inline-flex items-center px-4 py-2 rounded-full text-sm
                              transition duration-150 ease-in-out
                              <%= currentLocation === location ? 
                                'bg-blue-600 text-white' : 
                                'bg-white text-gray-700 border hover:bg-gray-50' %>">
                        <i class="fas fa-map-marker-alt mr-2"></i>
                        <%= location.charAt(0).toUpperCase() + location.slice(1) %>
                    </a>
                <% }) %>
            </div>
        </div>

        <!-- Services Grid -->
<div class="space-y-6">
    <div class="flex items-center justify-between px-4 sm:px-0">
        <h2 class="text-xl font-semibold text-gray-900">Services disponibles</h2>
        <div class="text-sm text-gray-500">
            <%= services.length %> r√©sultats
        </div>
    </div>

    <% if (services.length > 0) { %>
        <div class="space-y-4">
            <% services.forEach(service => { %>
                <a href="/service/<%= service._id %>" class="block group">
                    <article class="bg-gray-100 border border-2 hover:bg-gray-50 transition-colors duration-150 mb-12">
                        <div class="flex flex-col sm:flex-row">
                            <!-- Image Container -->
                            <div class="relative w-full sm:w-64 h-48 sm:h-40 flex-shrink-0">
                                <img 
                                    src="<%= service.images?.[0] || '/default-service.jpg' %>" 
                                    alt="<%= service.serviceName %>" 
                                    class="w-full h-full object-cover"
                                >
                                <!-- Service Type Tag -->
                                <div class="absolute bottom-0 left-0 bg-white px-3 py-1.5">
                                    <div class="flex items-center gap-2">
                                        <span class="text-base">
                                            <%= serviceIcons[service.serviceOptions]?.emoji %>
                                        </span>
                                        <span class="text-sm font-medium text-gray-900">
                                            <%= service.serviceOptions.charAt(0).toUpperCase() + 
                                                service.serviceOptions.slice(1) %>
                                        </span>
                                    </div>
                                </div>
                            </div>

                            <!-- Content Container -->
                            <div class="flex-1 p-4 sm:p-6 flex flex-col">
                                <div class="flex flex-col sm:flex-row sm:items-start justify-between gap-2">
                                    <div>
                                        <h3 class="text-lg font-medium text-gray-900 group-hover:text-blue-600">
                                            <%= service.serviceName %>
                                        </h3>
                                        <div class="mt-1 flex items-center gap-4 text-sm text-gray-500">
                                            <span class="flex items-center gap-1">
                                                <i class="fas fa-map-marker-alt"></i>
                                                <%= service.location %>
                                            </span>
                                            <span class="flex items-center gap-1">
                                                <i class="far fa-eye"></i>
                                                <%= service.views %>
                                            </span>
                                        </div>
                                    </div>
                                    <div class="text-lg font-medium text-blue-600">
                                        <%= service.priceRange %>
                                    </div>
                                </div>

                                <p class="mt-3 text-gray-600 text-sm line-clamp-2 flex-grow">
                                    <%= service.description || 'Aucune description disponible.' %>
                                </p>

                                <!-- Provider Info -->
                                <div class="flex items-center justify-between mt-4 pt-4 border-t">
                                    <div class="flex items-center gap-3">
                                        <div class="relative">
                                            <img 
                                                src="<%= service.createdBy?.profileImage || '/default-avatar.jpg' %>" 
                                                alt="<%= service.createdBy?.displayName %>"
                                                class="w-8 h-8 rounded-full object-cover"
                                            >
                                            <% if(service.createdBy?.isVerified) { %>
                                                <div class="absolute -right-1 -bottom-1 w-4 h-4 bg-blue-500 
                                                            rounded-full flex items-center justify-center">
                                                    <i class="fas fa-check text-[8px] text-white"></i>
                                                </div>
                                            <% } %>
                                        </div>
                                        <div class="text-sm">
                                            <div class="font-medium text-gray-900">
                                                <%= service.createdBy?.displayName %>
                                            </div>
                                            <div class="text-gray-500">Professionnel</div>
                                        </div>
                                    </div>
                                    <span class="text-sm font-medium text-blue-600 flex items-center gap-2">
                                        En savoir plus
                                        <i class="fas fa-arrow-right group-hover:translate-x-1 transition-transform"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </article>
                </a>
            <% }) %>
        </div>
    <% } else { %>
        <!-- Empty State -->
        <div class="text-center py-12 bg-white border">
            <div class="max-w-sm mx-auto">
                <div class="w-16 h-16 bg-gray-100 flex items-center justify-center mx-auto mb-4">
                    <i class="fas fa-paw text-2xl text-gray-400"></i>
                </div>
                <h3 class="text-lg font-medium text-gray-900 mb-2">
                    Aucun service disponible
                </h3>
                <p class="text-gray-500 mb-6">
                    Aucun service n'est disponible dans cette ville pour le moment.
                </p>
                <a href="/" class="text-blue-600 hover:text-blue-700 font-medium">
                    Retour √† l'accueil
                </a>
            </div>
        </div>
    <% } %>
</div>

<style>
    .line-clamp-2 {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
</style>
    </div>
</main>

<style>
    /* Hide scrollbar but keep functionality */
    .scrollbar-hide {
        -ms-overflow-style: none;
        scrollbar-width: none;
    }
    .scrollbar-hide::-webkit-scrollbar {
        display: none;
    }

    /* Line clamp utility */
    .line-clamp-2 {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    /* Smooth transitions */
    .transition {
        transition-property: all;
        transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
    }

    /* Custom animations */
    @keyframes fadeIn {
        from { opacity: 0; transform: translateY(10px); }
        to { opacity: 1; transform: translateY(0); }
    }
</style>

<%- include('./include/footer') %>