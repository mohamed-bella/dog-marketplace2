 <script>
 const donationFloat = document.getElementById('donationFloat');
 const donationModal = document.getElementById('donationModal');
 const modalContent = document.getElementById('modalContent');
 const closeModal = document.getElementById('closeModal');
 const dontShowAgain = document.getElementById('dontShowAgain');
 
 // Check if user has chosen to not show again
 function shouldShowModal() {
     return !localStorage.getItem('dontShowDonationModal');
 }
 
 // Initialize floating button visibility
 function initializeButton() {
     if (!shouldShowModal()) {
         donationFloat.classList.add('hidden');
     }
 }
 
 // Show modal with animation
 function showModal() {
     donationModal.classList.remove('hidden');
     modalContent.offsetHeight; // Trigger reflow
     modalContent.classList.remove('scale-95', 'opacity-0');
     modalContent.classList.add('scale-100', 'opacity-100');
 }
 
 // Hide modal with animation
 function hideModal() {
     modalContent.classList.remove('scale-100', 'opacity-100');
     modalContent.classList.add('scale-95', 'opacity-0');
     
     if (dontShowAgain.checked) {
         localStorage.setItem('dontShowDonationModal', 'true');
         donationFloat.classList.add('hidden');
     }
     
     setTimeout(() => {
         donationModal.classList.add('hidden');
     }, 200);
 }
 
 // Event listeners
 donationFloat.addEventListener('click', showModal);
 closeModal.addEventListener('click', hideModal);
 
 // Close modal when clicking outside
 donationModal.addEventListener('click', (e) => {
     if (e.target === donationModal) {
         hideModal();
     }
 });
 
 // Close modal on escape key
 document.addEventListener('keydown', (e) => {
     if (e.key === 'Escape' && !donationModal.classList.contains('hidden')) {
         hideModal();
     }
 });
 
 // Initialize on page load
 initializeButton();
 
 // Trigger modal after 45 seconds if not shown before
 if (shouldShowModal()) {
     setTimeout(() => {
         if (!donationModal.classList.contains('hidden')) return;
         showModal();
     }, 45000);
 }
