<!-- views/partials/dashboard/header.ejs -->
<header class="bg-white border-b border-gray-200 sticky top-0 z-30" x-data="{ isMobileSidebarOpen: false, isProfileOpen: false }">
     <div class="flex items-center justify-between px-6 py-4">
          <!-- Mobile Menu Button - Only show on mobile -->
          <button @click="isMobileSidebarOpen = !isMobileSidebarOpen" class="lg:hidden text-gray-600 focus:outline-none" aria-label="Toggle Menu">
               <i class="fas fa-bars text-xl"></i>
          </button>

          <!-- Breadcrumb/Title - Hide on mobile -->
          <div class="hidden lg:flex items-center">
               <h1 class="text-lg font-semibold text-gray-900">Dashboard</h1>
          </div>

          <!-- Search Bar -->
          <div class="hidden md:flex flex-1 max-w-lg mx-6">
               <div class="relative w-full">
                    <input type="text" placeholder="Rechercher..." class="w-full pl-10 pr-4 py-2 rounded-lg border border-gray-300 focus:border-blue-500 focus:ring-1 focus:ring-blue-500">
                    <i class="fas fa-search absolute left-3 top-1/2 -translate-y-1/2 text-gray-400"></i>
               </div>
          </div>

          <!-- Right Menu -->
          <div class="flex items-center space-x-4">
               <!-- Notifications -->
               <button class="p-2 text-gray-600 hover:bg-gray-100 rounded-full relative">
                    <i class="fas fa-bell"></i>
                    <span class="absolute top-1 right-1 w-2 h-2 bg-red-500 rounded-full"></span>
               </button>

               <!-- Messages -->
               <button class="p-2 text-gray-600 hover:bg-gray-100 rounded-full relative">
                    <i class="fas fa-envelope"></i>
                    <span class="absolute top-1 right-1 w-2 h-2 bg-red-500 rounded-full"></span>
               </button>

               <!-- Profile Dropdown -->
               <div class="relative" x-data="{ isOpen: false }">
                    <button @click="isOpen = !isOpen" class="flex items-center space-x-3 focus:outline-none">
                         <img src="<%= user.profileImage || 'https://via.placeholder.com/150' %>" alt="Profile" class="w-8 h-8 rounded-full object-cover">
                         <span class="hidden sm:block text-sm font-medium text-gray-700">
                              <%= user.displayName %>
                         </span>
                         <i class="fas fa-chevron-down text-gray-600"></i>
                    </button>

                    <!-- Dropdown Menu -->
                    <div x-show="isOpen" @click.away="isOpen = false" x-transition:enter="transition ease-out duration-100" x-transition:enter-start="transform opacity-0 scale-95" x-transition:enter-end="transform opacity-100 scale-100" x-transition:leave="transition ease-in duration-75" x-transition:leave-start="transform opacity-100 scale-100" x-transition:leave-end="transform opacity-0 scale-95" class="absolute right-0 mt-2 w-48 bg-white rounded-lg shadow-lg py-2 z-50">
                         <a href="/profile" class="flex items-center px-4 py-2 text-gray-800 hover:bg-gray-100">
                              <i class="fas fa-user w-5"></i>
                              <span>Profile</span>
                         </a>
                         <a href="/settings" class="flex items-center px-4 py-2 text-gray-800 hover:bg-gray-100">
                              <i class="fas fa-cog w-5"></i>
                              <span>Paramètres</span>
                         </a>
                         <hr class="my-2">
                         <a href="/logout" class="flex items-center px-4 py-2 text-red-600 hover:bg-gray-100">
                              <i class="fas fa-sign-out-alt w-5"></i>
                              <span>Déconnexion</span>
                         </a>
                    </div>
               </div>
          </div>
     </div>

     <!-- Mobile Sidebar -->
     <div x-show="isMobileSidebarOpen" x-transition:enter="transition ease-out duration-300" x-transition:enter-start="-translate-x-full" x-transition:enter-end="translate-x-0" x-transition:leave="transition ease-in duration-300" x-transition:leave-start="translate-x-0" x-transition:leave-end="-translate-x-full" class="fixed inset-y-0 left-0 transform w-64 bg-white shadow-lg z-40 lg:hidden">
          <div class="flex flex-col h-full">
               <!-- Mobile Sidebar Header -->
               <div class="p-4 border-b">
                    <div class="flex items-center justify-between">
                         <div class="text-xl font-bold text-blue-600">NDRESSILIK</div>
                         <button @click="isMobileSidebarOpen = false" class="text-gray-500 hover:text-gray-700">
                              <i class="fas fa-times"></i>
                         </button>
                    </div>
               </div>

               <!-- Mobile Navigation -->
               <nav class="flex-1 overflow-y-auto p-4">
                    <div class="space-y-2">
                         <a href="/dashboard" class="flex items-center space-x-3 px-3 py-2 text-gray-700 hover:bg-gray-100 rounded-lg">
                              <i class="fas fa-gauge w-5"></i>
                              <span>Dashboard</span>
                         </a>
                         <!-- Add other navigation items as needed -->
                    </div>
               </nav>
          </div>
     </div>

     <!-- Mobile Sidebar Backdrop -->
     <div x-show="isMobileSidebarOpen" @click="isMobileSidebarOpen = false" class="fixed inset-0 bg-black bg-opacity-50 z-30 lg:hidden"></div>
</header>