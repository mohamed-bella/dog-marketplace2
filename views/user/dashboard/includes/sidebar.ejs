<!-- views/partials/dashboard/sidebar.ejs -->
<aside class="hidden lg:flex flex-col w-64 bg-white border-r border-gray-200 fixed inset-y-0">
     <!-- Logo Section -->
     <div class="p-6 border-b">
          <a href="/" class="flex items-center space-x-2">
               <span class="text-2xl font-bold bg-gradient-to-r from-blue-600 to-teal-500 bg-clip-text text-transparent">
                    NDRESSILIK
               </span>
          </a>
     </div>

     <!-- User Profile Section -->
     <div class="p-4 border-b">
          <div class="flex items-center space-x-3">
               <img src="<%= user.profileImage || 'https://via.placeholder.com/150' %>" alt="<%= user.displayName %>" class="w-10 h-10 rounded-full object-cover">
               <div>
                    <h3 class="text-sm font-semibold text-gray-800">
                         <%= user.displayName %>
                    </h3>
                    <p class="text-xs text-gray-500">
                         <%= user.email %>
                    </p>
               </div>
          </div>
     </div>

     <!-- Navigation Menu -->
     <nav class="flex-1 p-4">
          <div class="space-y-1">
               <a href="/dashboard" class="flex items-center space-x-3 px-3 py-2 text-gray-700 hover:bg-gray-100 rounded-lg <%= path === 'dashboard' ? 'bg-blue-50 text-blue-600' : '' %>">
                    <i class="fas fa-gauge-high w-5"></i>
                    <span>Dashboard</span>
               </a>
               <a href="/profile" class="flex items-center space-x-3 px-3 py-2 text-gray-700 hover:bg-gray-100 rounded-lg <%= path === 'profile' ? 'bg-blue-50 text-blue-600' : '' %>">
                    <i class="fas fa-user w-5"></i>
                    <span>Profile</span>
               </a>
               <a href="/services" class="flex items-center space-x-3 px-3 py-2 text-gray-700 hover:bg-gray-100 rounded-lg <%= path === 'services' ? 'bg-blue-50 text-blue-600' : '' %>">
                    <i class="fas fa-briefcase w-5"></i>
                    <span>Services</span>
               </a>
               <a href="/reservations" class="flex items-center space-x-3 px-3 py-2 text-gray-700 hover:bg-gray-100 rounded-lg <%= path === 'reservations' ? 'bg-blue-50 text-blue-600' : '' %>">
                    <i class="fas fa-calendar w-5"></i>
                    <span>Reservations</span>
               </a>
               <a href="/gallery" class="flex items-center space-x-3 px-3 py-2 text-gray-700 hover:bg-gray-100 rounded-lg <%= path === 'gallery' ? 'bg-blue-50 text-blue-600' : '' %>">
                    <i class="fas fa-images w-5"></i>
                    <span>Gallery</span>
               </a>
          </div>

          <!-- Settings Section -->
          <div class="mt-6">
               <h3 class="px-3 text-xs font-semibold text-gray-500 uppercase tracking-wider">Settings</h3>
               <div class="mt-3 space-y-1">
                    <a href="/settings" class="flex items-center space-x-3 px-3 py-2 text-gray-700 hover:bg-gray-100 rounded-lg <%= path === 'settings' ? 'bg-blue-50 text-blue-600' : '' %>">
                         <i class="fas fa-gear w-5"></i>
                         <span>Settings</span>
                    </a>
                    <a href="/support" class="flex items-center space-x-3 px-3 py-2 text-gray-700 hover:bg-gray-100 rounded-lg <%= path === 'support' ? 'bg-blue-50 text-blue-600' : '' %>">
                         <i class="fas fa-life-ring w-5"></i>
                         <span>Support</span>
                    </a>
               </div>
          </div>
     </nav>

     <!-- Logout Button -->
     <div class="p-4 border-t">
          <a href="/logout" class="flex items-center space-x-3 px-3 py-2 text-red-600 hover:bg-red-50 rounded-lg transition-colors duration-200">
               <i class="fas fa-sign-out-alt w-5"></i>
               <span>Logout</span>
          </a>
     </div>
</aside>