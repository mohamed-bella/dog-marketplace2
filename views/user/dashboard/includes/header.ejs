<header class="fixed top-0 inset-x-0 bg-yellow-400 z-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-16">
            <!-- Left Section -->
            <div class="flex items-center gap-6">
                <!-- Mobile Menu Button -->
                <button id="mobileMenuBtn" class="lg:hidden p-2 text-gray-800 hover:bg-yellow-500/50 rounded-lg transition-colors">
                    <i class="fas fa-bars text-lg"></i>
                </button>

                <!-- Logo -->
                <a href="/" class="flex items-center gap-2">
                    <span class="text-xl font-bold text-gray-800">NDRESSILIK</span>
                </a>
            </div>

            <!-- Right Section -->
            <div class="flex items-center gap-3">
                <!-- Add Service Button (Desktop) -->
                <a href="/dashboard/new-service" 
                   class="hidden md:flex items-center gap-2 px-4 py-2 bg-gray-800 text-white rounded-lg 
                          hover:bg-gray-700 transition-all">
                    <i class="fas fa-plus"></i>
                    <span>Ajouter un service</span>
                </a>

                <!-- User Profile Dropdown -->
                <div class="relative">
                    <button id="userDropdownBtn" 
                            class="flex items-center gap-3 p-1.5 hover:bg-yellow-500/50 rounded-lg transition-colors">
                        <div class="relative">
                            <img src="<%= user.profileImage || 'https://ui-avatars.com/api/?background=0D8ABC&color=fff' %>" 
                                 alt="<%= user.displayName %>"
                                 class="w-8 h-8 rounded-full object-cover ring-2 ring-white"
                                 onerror="this.src='https://ui-avatars.com/api/?name=<%= user.displayName %>&background=0D8ABC&color=fff'">
                            <div class="absolute -bottom-0.5 -right-0.5 w-3 h-3 bg-green-500 rounded-full ring-2 ring-white"></div>
                        </div>
                        <div class="hidden sm:block text-left">
                            <div class="text-sm font-medium text-gray-800"><%= user.displayName %></div>
                            <div class="text-xs text-gray-700"><%= user.role %></div>
                        </div>
                        <i class="fas fa-chevron-down text-gray-800 transition-transform duration-200"></i>
                    </button>

                    <!-- User Dropdown Menu -->
                    <div id="userDropdown" 
                         class="hidden absolute right-0 mt-2 w-64 bg-white rounded-xl shadow-lg border border-gray-200
                                transform opacity-0 scale-95 transition-all origin-top-right">
                        <!-- User Info -->
                        <div class="p-4 border-b border-gray-100">
                            <div class="flex items-center gap-3">
                                <img src="<%= user.profileImage %>" 
                                     alt="<%= user.displayName %>"
                                     class="w-12 h-12 rounded-full object-cover ring-2 ring-gray-100">
                                <div>
                                    <div class="font-medium text-gray-900"><%= user.displayName %></div>
                                    <div class="text-sm text-gray-500"><%= user.email %></div>
                                </div>
                            </div>
                        </div>

                        <!-- Menu Items -->
                        <div class="p-2 space-y-1">
                            <a href="/dashboard/profile" class="flex items-center gap-3 px-3 py-2 text-gray-700 hover:bg-gray-100 rounded-lg transition-colors">
                                <i class="fas fa-user w-5"></i>
                                <span>Profile</span>
                            </a>
                            <a href="/dashboard/new-service" class="flex items-center gap-3 px-3 py-2 text-gray-700 hover:bg-gray-100 rounded-lg transition-colors">
                                <i class="fas fa-plus w-5"></i>
                                <span>Ajouter Services</span>
                            </a>
                            <a href="#services" class="flex items-center gap-3 px-3 py-2 text-gray-700 hover:bg-gray-100 rounded-lg transition-colors">
                                <i class="fas fa-briefcase w-5"></i>
                                <span>Mes Services</span>
                            </a>
                        </div>

                        <!-- Special CTA -->
                        <div class="p-2 border-t border-gray-100">
                            <a href="/dashboard/new-service" 
                               class="flex items-center justify-center gap-2 px-3 py-2 bg-gray-800 text-white rounded-lg
                                      hover:bg-gray-700 transition-colors">
                                <i class="fas fa-plus-circle"></i>
                                <span>Ajouter un service</span>
                            </a>
                        </div>

                        <!-- Logout -->
                        <div class="p-2 border-t border-gray-100">
                            <a href="/logout" class="flex items-center gap-3 px-3 py-2 text-red-600 hover:bg-red-50 rounded-lg transition-colors">
                                <i class="fas fa-sign-out-alt w-5"></i>
                                <span>Déconnexion</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Mobile Menu -->
    <div id="mobileMenu" 
         class="lg:hidden fixed inset-0 bg-black z-50 hidden"
         onclick="this.classList.add('hidden')">
        <div class="fixed inset-y-0 left-0 max-w-xs w-full bg-white shadow-xl"
             onclick="event.stopPropagation()">
            <!-- Mobile Menu Header -->
            <div class="p-4 bg-yellow-400">
                <div class="flex items-center justify-between">
                    <span class="font-bold text-gray-800">Menu</span>
                    <button onclick="document.getElementById('mobileMenu').classList.add('hidden')"
                            class="p-2 text-gray-800 hover:bg-yellow-500/50 rounded-lg">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>

            <!-- Mobile Navigation -->
            <div class="p-4 space-y-4">
                <!-- User Info -->
                <div class="flex items-center gap-3 p-3 bg-gray-50 rounded-lg">
                    <img src="<%= user.profileImage %>" 
                         alt="<%= user.displayName %>"
                         class="w-10 h-10 rounded-full object-cover">
                    <div>
                        <div class="font-medium text-gray-900"><%= user.displayName %></div>
                        <div class="text-sm text-gray-500"><%= user.email %></div>
                    </div>
                </div>

                <!-- Navigation Links -->
                <nav class="space-y-2">
                    <a href="/dashboard/profile" class="flex items-center gap-3 p-3 text-gray-700 hover:bg-gray-100 rounded-lg">
                        <i class="fas fa-user w-5"></i>
                        <span>Profile</span>
                    </a>
                    <a href="#services" class="flex items-center gap-3 p-3 text-gray-700 hover:bg-gray-100 rounded-lg">
                        <i class="fas fa-briefcase w-5"></i>
                        <span>Mes Services</span>
                    </a>
                    <a href="/dashboard/new-service" 
                       class="flex items-center gap-3 p-3 bg-gray-800 text-white rounded-lg hover:bg-gray-700">
                        <i class="fas fa-plus-circle w-5"></i>
                        <span>Ajouter un service</span>
                    </a>
                    <a href="/logout" class="flex items-center gap-3 p-3 text-red-600 hover:bg-red-50 rounded-lg mt-4">
                        <i class="fas fa-sign-out-alt w-5"></i>
                        <span>Déconnexion</span>
                    </a>
                </nav>
            </div>
        </div>
    </div>
</header>

<script>
// Dropdown Management
const userDropdownBtn = document.getElementById('userDropdownBtn');
const userDropdown = document.getElementById('userDropdown');

function toggleDropdown() {
    const isOpen = !userDropdown.classList.contains('hidden');
    
    if (isOpen) {
        // Close dropdown
        userDropdown.classList.add('hidden', 'opacity-0', 'scale-95');
        userDropdownBtn.querySelector('.fa-chevron-down').style.transform = 'rotate(0deg)';
    } else {
        // Open dropdown
        userDropdown.classList.remove('hidden', 'opacity-0', 'scale-95');
        userDropdownBtn.querySelector('.fa-chevron-down').style.transform = 'rotate(180deg)';
    }
}

userDropdownBtn.addEventListener('click', (e) => {
    e.stopPropagation();
    toggleDropdown();
});

// Mobile Menu
document.getElementById('mobileMenuBtn').addEventListener('click', () => {
    const mobileMenu = document.getElementById('mobileMenu');
    mobileMenu.classList.remove('hidden');
});

// Close dropdowns when clicking outside
document.addEventListener('click', () => {
    userDropdown.classList.add('hidden', 'opacity-0', 'scale-95');
    userDropdownBtn.querySelector('.fa-chevron-down').style.transform = 'rotate(0deg)';
});

// Prevent dropdown close when clicking inside
userDropdown.addEventListener('click', (e) => {
    e.stopPropagation();
});

// Add scroll behavior
let lastScrollTop = 0;
const header = document.querySelector('header');

window.addEventListener('scroll', () => {
    const scrollTop = window.pageYOffset || document.documentElement.scrollTop;
    
    if (scrollTop > lastScrollTop && scrollTop > header.offsetHeight) {
        header.style.transform = 'translateY(-100%)';
        userDropdown.classList.add('hidden', 'opacity-0', 'scale-95');
    } else {
        header.style.transform = 'translateY(0)';
    }
    
    lastScrollTop = scrollTop;
});
</script>

<style>
header {
    transition: transform 0.3s ease;
}

.mobile-menu-slide {
    transform: translateX(-100%);
    transition: transform 0.3s ease;
}

#mobileMenu > div {
    transition: transform 0.3s ease-out;
}

@media (max-width: 768px) {
    .mobile-menu-open {
        transform: translateX(0);
    }
}
</style>