          <script>
               document.addEventListener('DOMContentLoaded', function () {
                    const form = document.getElementById('contactForm');
                    const alertContainer = document.getElementById('alertContainer');
                    const submitButton = document.getElementById('submitButton');
                    const loadingSpinner = document.getElementById('loadingSpinner');

                    // Show alert function
                    function showAlert(message, type) {
                         alertContainer.className = `rounded-lg p-4 mb-4 ${type === 'success'
                              ? 'bg-green-100 text-green-700 border border-green-400'
                              : 'bg-red-100 text-red-700 border border-red-400'
                              }`;
                         alertContainer.textContent = message;
                         alertContainer.classList.remove('hidden');

                         // Hide alert after 5 seconds
                         setTimeout(() => {
                              alertContainer.classList.add('hidden');
                         }, 5000);
                    }

                    // Validate email function
                    function isValidEmail(email) {
                         const re = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
                         return re.test(String(email).toLowerCase());
                    }

                    // Validate form inputs
                    function validateForm() {
                         let isValid = true;
                         const inputs = {
                              name: {
                                   value: document.getElementById('name').value,
                                   error: 'Le nom doit contenir au moins 2 caractères'
                              },
                              email: {
                                   value: document.getElementById('email').value,
                                   error: 'Veuillez entrer une adresse email valide'
                              },
                              message: {
                                   value: document.getElementById('message').value,
                                   error: 'Le message doit contenir au moins 10 caractères'
                              }
                         };

                         // Clear previous error messages
                         document.querySelectorAll('.error-message').forEach(el => {
                              el.classList.add('hidden');
                              el.textContent = '';
                         });

                         // Validate name
                         if (inputs.name.value.trim().length < 2) {
                              showInputError('name', inputs.name.error);
                              isValid = false;
                         }

                         // Validate email
                         if (!isValidEmail(inputs.email.value)) {
                              showInputError('email', inputs.email.error);
                              isValid = false;
                         }

                         // Validate message
                         if (inputs.message.value.trim().length < 10) {
                              showInputError('message', inputs.message.error);
                              isValid = false;
                         }

                         return isValid;
                    }

                    // Show input error
                    function showInputError(inputId, message) {
                         const input = document.getElementById(inputId);
                         const errorDiv = input.parentElement.querySelector('.error-message');
                         input.classList.add('border-red-500');
                         errorDiv.textContent = message;
                         errorDiv.classList.remove('hidden');

                         // Add shake animation
                         input.classList.add('animate-shake');
                         setTimeout(() => {
                              input.classList.remove('animate-shake');
                         }, 500);
                    }

                    // Handle form submission
                    form.addEventListener('submit', async function (e) {
                         e.preventDefault();

                         // Validate form
                         if (!validateForm()) {
                              showAlert('Veuillez corriger les erreurs dans le formulaire.', 'error');
                              return;
                         }

                         // Prepare form data
                         const formData = {
                              name: document.getElementById('name').value,
                              email: document.getElementById('email').value,
                              message: document.getElementById('message').value
                         };

                         // Disable submit button and show spinner
                         submitButton.disabled = true;
                         loadingSpinner.classList.remove('hidden');

                         try {
                              const response = await fetch('/contact', {
                                   method: 'POST',
                                   headers: {
                                        'Content-Type': 'application/json',
                                        'X-Requested-With': 'XMLHttpRequest'
                                   },
                                   body: JSON.stringify(formData)
                              });

                              const data = await response.json();

                              if (response.ok) {
                                   // Show success message
                                   showAlert('Votre message a été envoyé avec succès!', 'success');

                                   // Reset form
                                   form.reset();

                                   // Reset form styles
                                   document.querySelectorAll('.border-red-500').forEach(el => {
                                        el.classList.remove('border-red-500');
                                   });
                              } else {
                                   // Show error message
                                   showAlert(data.message || 'Une erreur est survenue. Veuillez réessayer.', 'error');
                              }
                         } catch (error) {
                              console.error('Error:', error);
                              showAlert('Une erreur est survenue. Veuillez réessayer.', 'error');
                         } finally {
                              // Re-enable submit button and hide spinner
                              submitButton.disabled = false;
                              loadingSpinner.classList.add('hidden');
                         }
                    });

                    // Real-time validation on input
                    const inputs = ['name', 'email', 'message'];
                    inputs.forEach(inputId => {
                         const input = document.getElementById(inputId);
                         let debounceTimeout;

                         input.addEventListener('input', function () {
                              // Remove error styling on input
                              this.classList.remove('border-red-500');
                              const errorDiv = this.parentElement.querySelector('.error-message');
                              errorDiv.classList.add('hidden');

                              // Debounce validation
                              clearTimeout(debounceTimeout);
                              debounceTimeout = setTimeout(() => {
                                   // Only validate if input is not empty
                                   if (this.value.trim()) {
                                        switch (inputId) {
                                             case 'name':
                                                  if (this.value.trim().length < 2) {
                                                       showInputError(inputId, 'Le nom doit contenir au moins 2 caractères');
                                                  }
                                                  break;
                                             case 'email':
                                                  if (!isValidEmail(this.value)) {
                                                       showInputError(inputId, 'Veuillez entrer une adresse email valide');
                                                  }
                                                  break;
                                             case 'message':
                                                  if (this.value.trim().length < 10) {
                                                       showInputError(inputId, 'Le message doit contenir au moins 10 caractères');
                                                  }
                                                  break;
                                        }
                                   }
                              }, 500);
                         });
                    });
               });
          </script>

          <style>
               /* Add these styles for animations */
               @keyframes shake {

