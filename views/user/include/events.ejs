<section class="py-16 bg-[#fff]">
     <div class="container mx-auto px-4">
          <!-- Articles Section -->
          <div class="mb-20">
               <!-- Section Header -->
               <div class="flex items-center justify-between mb-12">
                    <div class="flex items-center gap-4">
                         <div class="w-12 h-12 bg-[#58CC02]/10 rounded-2xl flex items-center justify-center">
                              <span class="text-2xl">üìö</span>
                         </div>
                         <div>
                              <h2 class="text-2xl sm:text-3xl font-extrabold text-[#4b4b4b]">Articles Populaires</h2>
                              <p class="text-[#777] mt-1">Des conseils d'experts pour votre compagnon</p>
                         </div>
                    </div>

                    <a href="/articles" class="hidden sm:flex items-center gap-2 text-[#58CC02] font-bold hover:underline">
                         Voir tout
                         <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                         </svg>
                    </a>
               </div>

               <!-- Articles Grid -->
               <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                    <% articles.forEach((article, index)=> { %>
                         <article class="group bg-white rounded-3xl border-2 border-[#E5E5E5] hover:border-[#58CC02] transition-all duration-300 overflow-hidden">
                              <!-- Image Container -->
                              <div class="relative aspect-video overflow-hidden">
                                   <img src="<%= article.featuredImage %>" alt="<%= article.title %>" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500">
                                   <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent"></div>

                                   <!-- Category Badge -->
                                   <div class="absolute top-4 left-4">
                                        <span class="inline-flex items-center px-3 py-1.5 rounded-xl font-bold text-sm bg-[#58CC02] text-white">
                                             <%= article.category || 'DOGS' %>
                                        </span>
                                   </div>

                                   <!-- XP Badge -->
                                   <div class="absolute top-4 right-4">
                                        <div class="flex items-center gap-1.5 px-3 py-1.5 rounded-xl bg-[#FFC800] text-white font-bold text-sm">
                                             <span class="text-lg">‚≠êÔ∏è</span>
                                             <%= Math.floor(Math.random() * 20 + 10) %> XP
                                        </div>
                                   </div>
                              </div>

                              <!-- Content -->
                              <div class="p-6">
                                   <h3 class="text-xl font-bold text-[#4b4b4b] group-hover:text-[#58CC02] transition-colors line-clamp-2 mb-3">
                                        <a href="/articles/<%= article.slug %>">
                                             <%= article.title %>
                                        </a>
                                   </h3>

                                   <!-- Author & Stats -->
                                   <div class="flex items-center justify-between mb-4">
                                        <div class="flex items-center gap-2">
                                             <div class="w-8 h-8 rounded-xl bg-[#58CC02]/10 flex items-center justify-center">
                                                  <span class="text-[#58CC02]">üë§</span>
                                             </div>
                                             <span class="text-sm font-medium text-[#777]">
                                                  <%= article.author %>
                                             </span>
                                        </div>

                                        <div class="flex items-center gap-2 text-sm text-[#777]">
                                             <i class="far fa-clock"></i>
                                             <%= article.readingTime || '2-4' %> min
                                        </div>
                                   </div>

                                   <!-- Progress Bar -->
                                   <div class="h-2 bg-[#E5E5E5] rounded-full overflow-hidden">
                                        <div class="h-full bg-[#58CC02] w-0 group-hover:w-full transition-all duration-1000"></div>
                                   </div>
                              </div>
                         </article>
                         <% }) %>
               </div>
          </div>

          <!-- Events Section -->
          <div>
               <!-- Section Header -->
               <div class="flex items-center justify-between mb-12">
                    <div class="flex items-center gap-4">
                         <div class="w-12 h-12 bg-[#FFC800]/10 rounded-2xl flex items-center justify-center">
                              <span class="text-2xl">üéâ</span>
                         </div>
                         <div>
                              <h2 class="text-2xl sm:text-3xl font-extrabold text-[#4b4b4b]">√âv√©nements √† venir</h2>
                              <p class="text-[#777] mt-1">Rejoignez la communaut√© canine</p>
                         </div>
                    </div>

                    <a href="/events" class="hidden sm:flex items-center gap-2 text-[#FFC800] font-bold hover:underline">
                         Voir tout
                         <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                         </svg>
                    </a>
               </div>

               <!-- Events Grid -->
               <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                    <% events.forEach((event, index)=> { %>
                         <article class="group relative bg-white rounded-3xl border-2 border-[#E5E5E5] hover:border-[#FFC800] transition-all duration-300 overflow-hidden">
                              <!-- Image Container -->
                              <div class="relative aspect-[4/3] overflow-hidden">
                                   <img src="<%= event.image %>" alt="<%= event.title %>" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500">
                                   <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent"></div>

                                   <!-- Date Badge -->
                                   <div class="absolute top-4 right-4">
                                        <div class="flex flex-col items-center bg-white rounded-2xl p-3 shadow-lg">
                                             <span class="text-xl font-bold text-[#4b4b4b] leading-none">
                                                  <%= new Date(event.date).getDate() %>
                                             </span>
                                             <span class="text-sm font-medium text-[#777] capitalize">
                                                  <%= new Date(event.date).toLocaleDateString('fr-FR', {month: 'short' }) %>
                                             </span>
                                        </div>
                                   </div>

                                   <!-- Category Badge -->
                                   <div class="absolute top-4 left-4">
                                        <span class="inline-flex items-center px-3 py-1.5 rounded-xl font-bold text-sm bg-[#FFC800] text-white">
                                             <%= event.category || '√âV√âNEMENT' %>
                                        </span>
                                   </div>
                              </div>

                              <!-- Content -->
                              <div class="p-6">
                                   <h3 class="text-xl font-bold text-[#4b4b4b] group-hover:text-[#FFC800] transition-colors line-clamp-2 mb-4">
                                        <a href="/events/<%= event.slug %>">
                                             <%= event.title %>
                                        </a>
                                   </h3>

                                   <!-- Event Details -->
                                   <div class="space-y-3 mb-6">
                                        <div class="flex items-center gap-3">
                                             <div class="w-8 h-8 rounded-xl bg-[#FFC800]/10 flex items-center justify-center">
                                                  <i class="far fa-clock text-[#FFC800]"></i>
                                             </div>
                                             <span class="text-sm text-[#777]">
                                                  <%= event.time %>
                                             </span>
                                        </div>

                                        <div class="flex items-center gap-3">
                                             <div class="w-8 h-8 rounded-xl bg-[#FFC800]/10 flex items-center justify-center">
                                                  <i class="fas fa-map-marker-alt text-[#FFC800]"></i>
                                             </div>
                                             <span class="text-sm text-[#777] truncate">
                                                  <%= event.location %>
                                             </span>
                                        </div>
                                   </div>

                                   <!-- Participants -->
                                   <div class="flex items-center justify-between">
                                        <div class="flex items-center gap-2">
                                             <div class="flex -space-x-2">
                                                  <% Array(3).fill().forEach(()=> { %>
                                                       <div class="w-8 h-8 rounded-xl bg-[#E5E5E5] border-2 border-white relative">
                                                            <span class="absolute inset-0 flex items-center justify-center text-[#777] text-xs">üë§</span>
                                                       </div>
                                                       <% }) %>
                                             </div>
                                             <span class="text-sm font-medium text-[#777]">
                                                  +<%= event.participants || 12 %> participants
                                             </span>
                                        </div>

                                        <!-- Join Button -->
                                        <button class="px-4 py-2 bg-[#FFC800]/10 text-[#FFC800] font-bold rounded-xl hover:bg-[#FFC800]/20 transition-colors">
                                             Rejoindre
                                        </button>
                                   </div>
                              </div>
                         </article>
                         <% }) %>
               </div>

               <!-- Mobile View All Buttons -->
               <div class="flex flex-col gap-4 mt-8 sm:hidden">
                    <a href="/articles" class="w-full py-3 text-center bg-[#58CC02] text-white font-bold rounded-xl">
                         Voir tous les articles
                    </a>
                    <a href="/events" class="w-full py-3 text-center bg-[#FFC800] text-white font-bold rounded-xl">
                         Voir tous les √©v√©nements
                    </a>
               </div>
          </div>
     </div>
</section>

<style>
     /* Mobile optimizations */
     @media (max-width: 640px) {
          .grid {
               gap: 1rem;
          }

          .text-3xl {
               font-size: 1.5rem;
          }

          .p-6 {
               padding: 1rem;
          }
     }

     /* Line clamp */
     .line-clamp-2 {
          display: -webkit-box;
          -webkit-line-clamp: 2;
          -webkit-box-orient: vertical;
          overflow: hidden;
     }

     /* Hover states */
     @media (hover: hover) {
          .group:hover .progress-bar {
               width: 100%;
          }
     }
</style>