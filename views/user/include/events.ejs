<section class="relative bg-white py-12 sm:py-16">
     <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
          <!-- Title Section -->
          <div class="mx-auto max-w-2xl text-center">
               <h2 class="bg-gradient-to-r from-gray-900 via-gray-800 to-gray-900 bg-clip-text text-3xl font-bold tracking-tight text-transparent sm:text-4xl">
                    Découvrez Notre Monde
               </h2>
               <div class="mt-4 flex justify-center">
                    <div class="h-1 w-12 rounded-full bg-blue-600"></div>
               </div>
          </div>

          <!-- Content Grid -->
          <div class="mt-12 grid gap-6 md:grid-cols-2 lg:gap-8">
               <!-- Events Card -->
               <div class="relative overflow-hidden rounded-2xl bg-white shadow-sm ring-1 ring-gray-900/5">
                    <div class="p-6">
                         <div class="flex items-center justify-between mb-6">
                              <h3 class="text-lg font-semibold leading-7 text-gray-900">
                                   Événements
                              </h3>
                              <span class="inline-flex items-center rounded-full bg-blue-50 px-2 py-1 text-xs font-medium text-blue-700 ring-1 ring-inset ring-blue-600/20">
                                   <%= events.length %> événements
                              </span>
                         </div>

                         <div class="divide-y divide-gray-100">
                              <% events.forEach(event=> { %>
                                   <div class="flex gap-4 py-4 sm:gap-6">
                                        <!-- Date Badge -->
                                        <div class="flex-none">
                                             <time class="flex h-14 w-14 flex-col items-center justify-center rounded-xl bg-blue-50 text-center ring-1 ring-inset ring-blue-600/20">
                                                  <span class="text-sm font-semibold text-gray-900">
                                                       <%= new Date(event.date).toLocaleDateString('fr-FR', { day: 'numeric' }) %>
                                                  </span>
                                                  <span class="text-xs text-gray-500">
                                                       <%= new Date(event.date).toLocaleDateString('fr-FR', { month: 'short' }) %>
                                                  </span>
                                             </time>
                                        </div>

                                        <!-- Content -->
                                        <div class="flex-1 space-y-1">
                                             <h4 class="text-sm font-medium text-gray-900 sm:text-base">
                                                  <a href="/events/<%= event._id %>" class="hover:text-blue-600">
                                                       <%= event.title %>
                                                  </a>
                                             </h4>

                                             <div class="flex flex-wrap items-center gap-x-3 gap-y-1 text-xs text-gray-500">
                                                  <% if (event.time) { %>
                                                       <span class="flex items-center gap-1">
                                                            <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                                 <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                                                            </svg>
                                                            <%= event.time %>
                                                       </span>
                                                       <% } %>
                                                            <span class="flex items-center gap-1">
                                                                 <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                                                                 </svg>
                                                                 <!-- event.location -->
                                                            </span>
                                             </div>
                                        </div>
                                   </div>
                                   <% }) %>
                         </div>
                    </div>
               </div>

               <!-- Articles Card -->
               <div class="relative overflow-hidden rounded-2xl bg-white shadow-sm ring-1 ring-gray-900/5">
                    <div class="p-6">
                         <div class="flex items-center justify-between mb-6">
                              <h3 class="text-lg font-semibold leading-7 text-gray-900">
                                   Articles
                              </h3>
                              <span class="inline-flex items-center rounded-full bg-blue-50 px-2 py-1 text-xs font-medium text-blue-700 ring-1 ring-inset ring-blue-600/20">
                                   <%= articles.length %> articles
                              </span>
                         </div>

                         <div class="divide-y divide-gray-100">
                              <% articles.forEach(article=> { %>
                                   <div class="flex gap-4 py-4">
                                        <!-- Image -->
                                        <div class="flex-none">
                                             <div class="relative h-12 w-12 overflow-hidden rounded-xl bg-gray-100">
                                                  <% if (article.featuredImage) { %>
                                                       <img src="<%= article.featuredImage %>" alt="" class="h-full w-full object-cover" loading="lazy">
                                                       <% } else { %>
                                                            <div class="flex h-full w-full items-center justify-center">
                                                                 <svg class="h-6 w-6 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
                                                                 </svg>
                                                            </div>
                                                            <% } %>
                                             </div>
                                        </div>

                                        <!-- Content -->
                                        <div class="flex-1 space-y-1">
                                             <h4 class="text-sm font-medium text-gray-900 sm:text-base">
                                                  <a href="/articles/<%= article.slug %>" class="hover:text-blue-600">
                                                       <%= article.title %>
                                                  </a>
                                             </h4>

                                             <div class="flex flex-wrap items-center gap-x-3 gap-y-1 text-xs text-gray-500">
                                                  <% if (article.category) { %>
                                                       <span class="inline-flex items-center rounded-md bg-gray-50 px-2 py-1 font-medium text-gray-600 ring-1 ring-inset ring-gray-500/10">
                                                            <%= article.category %>
                                                       </span>
                                                       <% } %>
                                                            <time>
                                                                 <%= new Date(article.createdAt).toLocaleDateString('fr-FR', { day: 'numeric' , month: 'short' , year: 'numeric' }) %>
                                                            </time>
                                             </div>
                                        </div>
                                   </div>
                                   <% }) %>
                         </div>
                    </div>
               </div>
          </div>
     </div>
</section>

<style>
     /* Hover effects */
     .hover\:text-blue-600:hover {
          transition: color 0.15s ease-in-out;
     }

     /* Improved readability */
     @media (max-width: 640px) {
          .text-sm {
               font-size: 0.8125rem;
          }

          .text-xs {
               font-size: 0.75rem;
          }
     }

     /* Gradient text animation */
     @keyframes gradient {
          0% {
               background-position: 0% 50%;
          }

          50% {
               background-position: 100% 50%;
          }

          100% {
               background-position: 0% 50%;
          }
     }

     .bg-gradient-to-r {
          background-size: 200% auto;
          animation: gradient 8s ease infinite;
     }
</style>