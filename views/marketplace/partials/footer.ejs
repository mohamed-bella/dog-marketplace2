<script>
    // Smooth scrolling for anchor links
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', function (e) {
            e.preventDefault();
            document.querySelector(this.getAttribute('href')).scrollIntoView({
                behavior: 'smooth'
            });
        });
    });

    // Add active class to navbar items on scroll
    window.addEventListener('scroll', () => {
        let current = '';
        document.querySelectorAll('section').forEach(section => {
            const sectionTop = section.offsetTop;
            if (pageYOffset >= sectionTop - 60) {
                current = section.getAttribute('id');
            }
        });

        document.querySelectorAll('.nav-link').forEach(li => {
            li.classList.remove('active');
            if (li.getAttribute('href').includes(current)) {
                li.classList.add('active');
            }
        });
    });
</script>
<script>
    function slideAnnouncements(direction) {
        const slider = document.getElementById('announcements-slider');
        const scrollAmount = slider.offsetWidth;
        slider.scrollBy({
            left: direction * scrollAmount,
            behavior: 'smooth'
        });
    }

    function slideArticles(direction) {
        const slider = document.getElementById('articles-slider');
        const scrollAmount = slider.offsetWidth;
        slider.scrollBy({
            left: direction * scrollAmount,
            behavior: 'smooth'
        });
    }

    function slideBreeds(direction) {
        const slider = document.getElementById('breeds-slider');
        const scrollAmount = slider.offsetWidth;
        slider.scrollBy({
            left: direction * scrollAmount,
            behavior: 'smooth'
        });
    }

    // Optional: Add event listeners to hide/show arrows based on scroll position
    document.querySelectorAll('.slider').forEach(slider => {
        slider.addEventListener('scroll', () => {
            const parent = slider.closest('.slider-container');
            const leftArrow = parent.querySelector('.slider-arrow-left');
            const rightArrow = parent.querySelector('.slider-arrow-right');

            leftArrow.style.display = slider.scrollLeft > 0 ? 'flex' : 'none';
            rightArrow.style.display = slider.scrollLeft < (slider.scrollWidth - slider.clientWidth) ? 'flex' : 'none';
        });
    });
</script>
<script>
    let currentSlide = 0;
    const slider = document.getElementById('announcements-slider');
    const totalSlides = slider.querySelectorAll('.slider-item').length;

    function moveSlide(direction) {
        const slideWidth = slider.querySelector('.slider-item').offsetWidth;
        currentSlide += direction;

        // Wrap around
        if (currentSlide < 0) {
            currentSlide = totalSlides - 1;
        } else if (currentSlide >= totalSlides) {
            currentSlide = 0;
        }

        // Move the slider
        slider.style.transform = `translateX(-${currentSlide * slideWidth}px)`;
    }
</script>
