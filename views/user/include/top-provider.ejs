<section class="relative py-16 bg-[#fff] overflow-hidden">
     <!-- Playful Background Elements -->
     <div class="absolute inset-0 pointer-events-none">
          <div class="absolute top-0 left-0 w-64 h-64 bg-[#58CC02] opacity-5 rounded-full -translate-x-1/2 -translate-y-1/2"></div>
          <div class="absolute bottom-0 right-0 w-96 h-96 bg-[#FFC800] opacity-5 rounded-full translate-x-1/2 translate-y-1/2"></div>
     </div>

     <div class="container mx-auto px-4">
          <!-- Gamified Header -->
          <div class="max-w-3xl mx-auto text-center mb-16" data-aos="fade-up">
               <div class="inline-flex items-center gap-2 px-4 py-2 bg-[#58CC02]/10 rounded-full mb-6">
                    <div class="w-8 h-8 bg-[#58CC02] rounded-full flex items-center justify-center">
                         <span class="text-white text-lg">🎯</span>
                    </div>
                    <span class="text-[#58CC02] font-bold">Les Plus Performants</span>
               </div>

               <h2 class="text-[2.5rem] font-extrabold text-[#4b4b4b] mb-4 leading-tight">
                    Rencontrez Nos Super-Experts
               </h2>
               <p class="text-lg text-[#777]">
                    Chaque expert est vérifié et prêt à vous aider dans votre aventure
               </p>
          </div>

          <!-- Expert Cards Grid -->
          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
               <% topProviders.forEach((provider, index)=> { %>
                    <div class="group" data-aos="fade-up" data-aos-delay="<%= index * 100 %>">
                         <a href="/@<%= provider.slug %>" class="block">
                              <div class="relative bg-white rounded-2xl p-6 transition-all duration-300 hover:shadow-xl border-2 border-[#E5E5E5] hover:border-[#58CC02]">
                                   <!-- Level & XP Bar -->
                                   <div class="absolute top-4 right-4 flex items-center gap-2">
                                        <div class="flex items-center px-3 py-1 bg-[#FFC800]/10 rounded-full">
                                             <span class="text-sm font-bold text-[#FFC800]">Niveau <%= Math.floor(Math.random() * 30) + 1 %></span>
                                        </div>
                                        <div class="w-20 h-2 bg-[#E5E5E5] rounded-full overflow-hidden">
                                             <div class="h-full bg-[#FFC800]" style="width: <%= Math.floor(Math.random() * 100) %>%"></div>
                                        </div>
                                   </div>

                                   <!-- Expert Info -->
                                   <div class="flex items-center gap-4">
                                        <!-- Profile Image with Achievements -->
                                        <div class="relative">
                                             <div class="w-20 h-20 rounded-2xl overflow-hidden ring-4 ring-[#58CC02]/10">
                                                  <img src="<%= provider.profileImage %>" alt="<%= provider.displayName %>" class="w-full h-full object-cover">
                                             </div>
                                             <% if (provider.isVerified) { %>
                                                  <div class="absolute -bottom-2 -right-2 w-8 h-8 bg-[#58CC02] rounded-lg flex items-center justify-center transform rotate-12 group-hover:rotate-0 transition-all">
                                                       <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
                                                            <path d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" />
                                                       </svg>
                                                  </div>
                                                  <% } %>
                                        </div>

                                        <div>
                                             <h3 class="text-lg font-bold text-[#4b4b4b] group-hover:text-[#58CC02] transition-colors">
                                                  <%= provider.displayName %>
                                             </h3>

                                             <!-- Streak Info -->
                                             <div class="flex items-center gap-2 mt-1">
                                                  <svg class="w-5 h-5 text-[#FFC800]" fill="currentColor" viewBox="0 0 20 20">
                                                       <path d="M12.395 2.553a1 1 0 00-1.45-.385c-.345.23-.614.558-.822.88-.214.33-.403.713-.57 1.116-.334.804-.614 1.768-.84 2.734a31.365 31.365 0 00-.613 3.58 2.64 2.64 0 01-.945-1.067c-.328-.68-.398-1.534-.398-2.654A1 1 0 005.05 6.05 6.981 6.981 0 003 11a7 7 0 1011.95-4.95c-.592-.591-.98-.985-1.348-1.467-.363-.476-.724-1.063-1.207-2.03zM12.12 15.12A3 3 0 017 13s.879.5 2.5.5c0-1 .5-4 1.25-4.5.5 1 .786 1.293 1.371 1.879A2.99 2.99 0 0113 13a2.99 2.99 0 01-.879 2.121z" />
                                                  </svg>
                                                  <span class="text-sm font-bold text-[#777]">
                                                       <%= Math.floor(Math.random() * 100) + 1 %> jours de réponse
                                                  </span>
                                             </div>
                                        </div>
                                   </div>

                                   <!-- Skills & Achievements -->
                                   <div class="mt-6 space-y-4">
                                        <!-- Skills Progress -->
                                        <div class="space-y-2">
                                             <% provider.specializations.slice(0, 2).forEach(spec=> { %>
                                                  <div>
                                                       <div class="flex justify-between text-sm mb-1">
                                                            <span class="font-medium text-[#4b4b4b]">
                                                                 <%= spec.split('-').map(word=> word.charAt(0).toUpperCase() + word.slice(1)).join(' ') %>
                                                            </span>
                                                            <span class="text-[#777]">
                                                                 <%= Math.floor(Math.random() * 1000) + 500 %> XP
                                                            </span>
                                                       </div>
                                                       <div class="h-2 bg-[#E5E5E5] rounded-full overflow-hidden">
                                                            <div class="h-full bg-[#58CC02] transition-all duration-500 group-hover:bg-[#FFC800]" style="width: <%= Math.floor(Math.random() * 100) %>%"></div>
                                                       </div>
                                                  </div>
                                                  <% }) %>
                                        </div>

                                        <!-- Achievements -->
                                        <div class="flex items-center gap-2">
                                             <% ['🏆', '⭐️' , '🎯' , '💫' ].slice(0, Math.floor(Math.random() * 4) + 1).forEach(emoji=> { %>
                                                  <div class="w-8 h-8 bg-[#FFC800]/10 rounded-lg flex items-center justify-center">
                                                       <span class="text-lg">
                                                            <%= emoji %>
                                                       </span>
                                                  </div>
                                                  <% }) %>
                                        </div>
                                   </div>

                                   <!-- Stats -->
                                   <div class="mt-6 pt-4 border-t border-[#E5E5E5] grid grid-cols-3 gap-4">
                                        <div class="text-center">
                                             <div class="text-lg font-bold text-[#58CC02]">
                                                  <%= provider.metrics.totalReviews %>
                                             </div>
                                             <div class="text-xs text-[#777]">Avis</div>
                                        </div>
                                        <div class="text-center border-x border-[#E5E5E5]">
                                             <div class="text-lg font-bold text-[#FFC800]">
                                                  <%= (provider.metrics.averageRating || 0)%>
                                             </div>
                                             <div class="text-xs text-[#777]">Note</div>
                                        </div>
                                        <div class="text-center">
                                             <div class="text-lg font-bold text-[#58CC02]">
                                                  <%= Math.floor(Math.random() * 100) + 50 %>%
                                             </div>
                                             <div class="text-xs text-[#777]">Réponse</div>
                                        </div>
                                   </div>

                                   <!-- Action Button -->
                                   <button class="mt-6 w-full py-3 bg-[#58CC02] text-white font-bold rounded-xl hover:bg-[#46a102] transition-colors group-hover:shadow-lg">
                                        Voir le profil
                                   </button>
                              </div>
                         </a>
                    </div>
                    <% }) %>
          </div>

          <!-- Gamified CTA -->
          <div class="text-center mt-16">
               <a href="/providers" class="inline-flex items-center gap-3 px-8 py-4 bg-[#58CC02] text-white font-bold rounded-2xl hover:bg-[#46a102] transition-all hover:shadow-xl hover:-translate-y-1">
                    <span>Découvrir tous les experts</span>
                    <div class="w-8 h-8 bg-white/20 rounded-lg flex items-center justify-center">
                         <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                         </svg>
                    </div>
               </a>
               <p class="mt-4 text-[#777]">Rejoignez plus de 1000+ experts passionnés</p>
          </div>
     </div>
</section>

<style>
     /* Duolingo-inspired animations */
     @keyframes bounce-slight {

          0%,
          100% {
               transform: translateY(0);
          }

          50% {
               transform: translateY(-4px);
          }
     }

     @keyframes pulse-gentle {

          0%,
          100% {
               opacity: 1;
          }

          50% {
               opacity: 0.8;
          }
     }

     .animate-bounce-slight {
          animation: bounce-slight 2s infinite;
     }

     .animate-pulse-gentle {
          animation: pulse-gentle 2s infinite;
     }

     /* Custom scrollbar for WebKit browsers */
     ::-webkit-scrollbar {
          width: 8px;
          height: 8px;
     }

     ::-webkit-scrollbar-track {
          background: #f1f1f1;
          border-radius: 4px;
     }

     ::-webkit-scrollbar-thumb {
          background: #58CC02;
          border-radius: 4px;
     }

     ::-webkit-scrollbar-thumb:hover {
          background: #46a102;
     }

     /* Mobile optimizations */
     @media (max-width: 640px) {
          .container {
               padding-left: 16px;
               padding-right: 16px;
          }

          .text-[2.5rem] {
               font-size: 2rem;
          }
     }

     /* Reduced motion */
     @media (prefers-reduced-motion: reduce) {

          .animate-bounce-slight,
          .animate-pulse-gentle,
          .transition-all {
               animation: none;
               transition: none;
          }
     }
</style>