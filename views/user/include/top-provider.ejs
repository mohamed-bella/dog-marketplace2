<section class="relative py-24 bg-gray-50/50 dark:bg-gray-900">
     <!-- Subtle grid background -->
     <div class="absolute inset-0 bg-[linear-gradient(to_right,#f0f0f0_1px,transparent_1px),linear-gradient(to_bottom,#f0f0f0_1px,transparent_1px)] dark:bg-[linear-gradient(to_right,#2a2a2a_1px,transparent_1px),linear-gradient(to_bottom,#2a2a2a_1px,transparent_1px)] bg-[size:6rem_6rem] [mask-image:radial-gradient(ellipse_80%_50%_at_50%_0%,#000_70%,transparent_110%)]"></div>

     <div class="container mx-auto px-4 relative">
          <!-- Section Header -->
          <div class="max-w-2xl mx-auto text-center mb-16">
               <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-4">
                    Prestataires Vedettes
               </h2>
               <p class="text-gray-600 dark:text-gray-400">
                    Découvrez nos experts les mieux notés, sélectionnés pour leur excellence
               </p>
          </div>

          <div class="max-w-xl mx-auto space-y-2 px-3">
               <% topProviders.forEach(provider=> { %>
                    <div class="bg-white rounded-2xl shadow-sm">
                         <a href="/@<%= provider.slug %>" class="block p-3">
                              <!-- Main Content -->
                              <div class="flex gap-3">
                                   <!-- Profile Section -->
                                   <div class="flex items-start gap-3">
                                        <!-- Profile Image -->
                                        <div class="relative">
                                             <img src="<%= provider.profileImage %>" alt="<%= provider.displayName %>" class="w-12 h-12 rounded-xl object-cover">
                                             <% if (provider.isVerified) { %>
                                                  <img src="https://img.icons8.com/?size=100&id=poVlgAcqxww6&format=png&color=FAB005" alt="Verified" class="w-4 h-4 absolute -right-0.5 -bottom-0.5">
                                                  <% } %>
                                        </div>

                                        <!-- Name, Location & Rating -->
                                        <div class="min-w-0">
                                             <!-- Name and Rating -->
                                             <div class="flex items-center gap-1">
                                                  <h3 class="text-sm font-medium text-gray-900 truncate max-w-[100px]">
                                                       <%= provider.displayName %>
                                                  </h3>
                                                  <div class="flex items-center gap-1">
                                                       <span class="text-sm font-medium">
                                                            <%= provider.metrics.averageRating %>
                                                       </span>
                                                       <i class="fas fa-star text-yellow-400 text-sm"></i>
                                                  </div>
                                             </div>

                                             <!-- Location & Reviews -->
                                             <div class="flex items-center gap-1.5 text-xs text-gray-500 mt-0.5">
                                                  <i class="fas fa-map-marker-alt"></i>
                                                  <span>
                                                       <%= provider.location?.city || 'Location N/A' %>
                                                  </span>
                                                  <span>·</span>
                                                  <span>
                                                       <%= provider.metrics.totalReviews %> avis
                                                  </span>
                                             </div>
                                        </div>
                                   </div>
                              </div>

                              <!-- Services Section -->
                              <div class="mt-2">
                                   <!-- Services Count -->
                                   <div class="text-xs text-blue-600 mb-1.5">
                                        <span>
                                             <%= provider.metrics.totalServices %> services
                                        </span>
                                   </div>

                                   <!-- Services Tags -->
                                   <div class="flex flex-wrap gap-1.5">
                                        <% provider.specializations.slice(0, 2).forEach(spec=> { %>
                                             <span class="px-2 py-1 rounded-full text-xs bg-blue-50 text-blue-600">
                                                  <%= spec.replace('-', ' ' ) %>
                                             </span>
                                             <% }) %>
                                                  <% if (provider.specializations.length> 2) { %>
                                                       <span class="px-2 py-1 rounded-full text-xs bg-gray-50 text-gray-600">
                                                            +<%= provider.specializations.length - 2 %>
                                                       </span>
                                                       <% } %>
                                   </div>
                              </div>
                         </a>
                    </div>
                    <% }) %>
          </div>

          <style>
               /* Optimize touch targets for mobile */
               a,
               button {
                    -webkit-tap-highlight-color: transparent;
               }

               /* Smooth image rendering */
               img {
                    -webkit-font-smoothing: antialiased;
               }
          </style>

          <!-- Simple CTA -->
          <div class="mt-12 text-center">
               <a href="/providers" class="inline-flex items-center px-6 py-3 text-sm font-medium text-white bg-gray-900 dark:bg-gray-800 rounded-lg hover:bg-gray-800 dark:hover:bg-gray-700">
                    Voir tous les prestataires
                    <i class="fas fa-arrow-right ml-2"></i>
               </a>
          </div>
     </div>
</section>