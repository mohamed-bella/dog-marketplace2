<!-- Articles Grid Section -->
<section class="py-12 bg-white sm:py-16">
     <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
          <!-- Section Header -->
          <div class="mb-8 sm:mb-12">
               <h2 class="text-xl font-bold text-gray-900 sm:text-2xl">
                    LATEST ABOUT DOGS
               </h2>
               <div class="mt-2 h-1 w-12 bg-blue-600"></div>
          </div>

          <!-- Desktop Layout (3 columns) -->
          <div class="hidden lg:grid lg:grid-cols-3 lg:gap-8">
               <% articles.forEach((article, index)=> { %>
                    <article class="group relative">
                         <!-- Article Image -->
                         <div class="aspect-[16/9] w-full overflow-hidden rounded-2xl bg-gray-100">
                              <img src="<%= article.featuredImage %>" alt="<%= article.title %>" class="h-full w-full object-cover transition duration-300 group-hover:scale-105">
                         </div>

                         <!-- Category Badge -->
                         <div class="absolute top-4 left-4">
                              <span class="inline-flex items-center rounded-full bg-blue-600/90 backdrop-blur-sm px-3 py-1 text-sm font-medium text-white">
                                   DOGS
                              </span>
                         </div>

                         <!-- Reading Time -->
                         <div class="absolute top-4 right-4">
                              <span class="inline-flex items-center rounded-full bg-black/60 backdrop-blur-sm px-2.5 py-1 text-xs text-white">
                                   <%= article.readingTime || '2-4' %> minutes
                              </span>
                         </div>

                         <!-- Content -->
                         <div class="mt-4">
                              <h3 class="text-lg font-semibold text-gray-900 group-hover:text-blue-600 transition-colors line-clamp-2">
                                   <a href="/article/<%= article.slug %>">
                                        <%= article.title %>
                                   </a>
                              </h3>
                              <p class="mt-2 text-sm text-gray-600 line-clamp-2">
                                   <%= article.excerpt %>
                              </p>
                              <div class="mt-3 flex items-center gap-3 text-sm text-gray-500">
                                   <span>By <%= article.author %></span>
                                   <span>•</span>
                                   <time>
                                        <%= article.publishDate %>
                                   </time>
                              </div>
                         </div>
                    </article>
                    <% }) %>
          </div>

          <!-- Mobile Layout (List View) -->
          <div class="lg:hidden space-y-6">
               <% articles.forEach((article, index)=> { %>
                    <article class="group">
                         <a href="/article/<%= article.slug %>" class="flex gap-4">
                              <!-- Image -->

                              <div class="relative flex-shrink-0 w-32 sm:w-44">
                                   <div class="aspect-[4/3] overflow-hidden rounded-xl bg-gray-100">
                                        <img src="<%= article.featuredImage %>" alt="<%= article.title %>" class="h-full w-full object-cover">
                                   </div>
                                   <!-- Category Badge -->
                                   <div class="absolute top-2 left-2">
                                        <span class="inline-flex items-center rounded-full bg-blue-600/90 backdrop-blur-sm px-2 py-0.5 text-xs font-medium text-white">
                                             DOGS
                                        </span>
                                   </div>
                              </div>

                              <!-- Content -->
                              <div class="flex-1 min-w-0">
                                   <h3 class="font-medium text-gray-900 sm:text-lg line-clamp-2 mb-2">
                                        <%= article.title %>
                                   </h3>
                                   <div class="flex items-center gap-2 text-xs text-gray-500">
                                        <span>By <%= article.author %></span>
                                        <span>•</span>
                                        <span>
                                             <%= article.readingTime || '2-4' %> min read
                                        </span>
                                   </div>
                              </div>
                         </a>
                    </article>
                    <% }) %>
          </div>
     </div>
</section>

<style>
     .line-clamp-2 {
          display: -webkit-box;
          -webkit-line-clamp: 2;
          -webkit-box-orient: vertical;
          overflow: hidden;
     }

     @media (max-width: 640px) {
          .aspect-\[4\/3\] {
               aspect-ratio: 4/3;
          }
     }
</style>
<!-- Events Grid Section -->
<section class="py-12 bg-white sm:py-16">
     <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
          <!-- Section Header -->
          <div class="mb-8 sm:mb-12">
               <h2 class="text-xl font-bold text-gray-900 sm:text-2xl">
                    UPCOMING EVENTS
               </h2>
               <div class="mt-2 h-1 w-12 bg-blue-600"></div>
          </div>

          <!-- Desktop Layout (3 columns) -->
          <div class="hidden lg:grid lg:grid-cols-3 lg:gap-8">
               <% events.forEach((event, index)=> { %>
                    <article class="group">
                         <!-- Event Image -->
                         <div class="relative aspect-[16/9] w-full overflow-hidden rounded-2xl bg-gray-100">
                              <img src="<%= event.image %>" alt="<%= event.title %>" class="h-full w-full object-cover transition duration-300 group-hover:scale-105">

                              <!-- Date Badge -->
                              <div class="absolute top-4 right-4">
                                   <div class="flex flex-col items-center justify-center w-16 h-16 bg-white/95 backdrop-blur-sm rounded-xl shadow-sm">
                                        <span class="text-xl font-bold text-gray-900">
                                             <%= new Date(event.date).getDate() %>
                                        </span>
                                        <span class="text-sm font-medium text-gray-600 capitalize">
                                             <%= new Date(event.date).toLocaleDateString('fr-FR', { month: 'short' }) %>
                                        </span>
                                   </div>
                              </div>

                              <!-- Category Badge -->
                              <div class="absolute top-4 left-4">
                                   <span class="inline-flex items-center rounded-full bg-blue-600/90 backdrop-blur-sm px-3 py-1 text-sm font-medium text-white">
                                        <%= event.category || 'EVENT' %>
                                   </span>
                              </div>
                         </div>

                         <!-- Content -->
                         <div class="mt-4">
                              <h3 class="text-lg font-semibold text-gray-900 group-hover:text-blue-600 transition-colors line-clamp-2">
                                   <a href="/events/<%= event.slug %>">
                                        <%= event.title %>
                                   </a>
                              </h3>

                              <!-- Event Details -->
                              <div class="mt-3 flex flex-wrap gap-4">
                                   <div class="flex items-center gap-2 text-sm text-gray-600">
                                        <i class="far fa-clock text-gray-400"></i>
                                        <span>
                                             <%= event.time %>
                                        </span>
                                   </div>
                                   <div class="flex items-center gap-2 text-sm text-gray-600">
                                        <i class="fas fa-map-marker-alt text-gray-400"></i>
                                        <span>
                                             <%= event.location %>
                                        </span>
                                   </div>
                              </div>

                              <!-- Participants Preview -->
                              <div class="mt-4 flex items-center gap-3">
                                   <div class="flex -space-x-2">
                                        <% Array(3).fill().forEach(()=> { %>
                                             <div class="w-8 h-8 rounded-full bg-gray-100 border-2 border-white flex items-center justify-center">
                                                  <i class="fas fa-user text-gray-400 text-xs"></i>
                                             </div>
                                             <% }) %>
                                   </div>
                                   <span class="text-sm text-gray-500">
                                        +<%= event.participants || 12 %> participants
                                   </span>
                              </div>
                         </div>
                    </article>
                    <% }) %>
          </div>

          <!-- Mobile Layout (List View) -->
          <div class="lg:hidden space-y-6">
               <% events.forEach((event, index)=> { %>
                    <article class="group">
                         <a href="/events/<%= event.slug %>" class="flex gap-4">
                              <!-- Image Container -->
                              <div class="relative flex-shrink-0 w-32 sm:w-44">
                                   <div class="aspect-[4/3] overflow-hidden rounded-xl bg-gray-100">
                                        <img src="<%= event.image %>" alt="<%= event.title %>" class="h-full w-full object-cover">
                                   </div>
                                   <!-- Date Badge -->
                                   <div class="absolute -top-2 -right-2">
                                        <div class="flex flex-col items-center justify-center w-12 h-12 bg-white rounded-lg shadow-md">
                                             <span class="text-base font-bold text-gray-900 leading-none mt-1">
                                                  <%= new Date(event.date).getDate() %>
                                             </span>
                                             <span class="text-xs font-medium text-gray-600 capitalize leading-none mb-1">
                                                  <%= new Date(event.date).toLocaleDateString('fr-FR', { month: 'short' }) %>
                                             </span>
                                        </div>
                                   </div>
                              </div>

                              <!-- Content -->
                              <div class="flex-1 min-w-0 py-1">
                                   <h3 class="font-medium text-gray-900 sm:text-lg line-clamp-2 mb-2">
                                        <%= event.title %>
                                   </h3>

                                   <!-- Event Details -->
                                   <div class="flex flex-col gap-1.5">
                                        <div class="flex items-center gap-2 text-xs text-gray-600">
                                             <i class="far fa-clock text-gray-400"></i>
                                             <span>
                                                  <%= event.time %>
                                             </span>
                                        </div>
                                        <div class="flex items-center gap-2 text-xs text-gray-600">
                                             <i class="fas fa-map-marker-alt text-gray-400"></i>
                                             <span class="truncate">
                                                  <%= event.location %>
                                             </span>
                                        </div>
                                   </div>

                                   <!-- Participants (Optional) -->
                                   <div class="mt-2 flex items-center gap-1.5">
                                        <div class="flex -space-x-1.5">
                                             <% [1,2].forEach(()=> { %>
                                                  <div class="w-5 h-5 rounded-full bg-gray-100 border border-white flex items-center justify-center">
                                                       <i class="fas fa-user text-gray-400 text-[10px]"></i>
                                                  </div>
                                                  <% }) %>
                                        </div>
                                        <span class="text-xs text-gray-500">
                                             +<%= event.participants || 12 %>
                                        </span>
                                   </div>
                              </div>
                         </a>
                    </article>
                    <% }) %>
          </div>
     </div>
</section>