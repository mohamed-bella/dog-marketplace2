<!-- views/partials/dashboard/mobile-menu.ejs -->
<div class="fixed inset-0 z-50 lg:hidden" x-show="mobileMenuOpen" @click.away="mobileMenuOpen = false">
     <!-- Backdrop -->
     <div class="fixed inset-0 bg-black bg-opacity-50"></div>

     <!-- Mobile Menu -->
     <div class="fixed inset-y-0 left-0 w-64 bg-blue-600 text-white">
          <div class="h-full flex flex-col">
               <!-- Logo -->
               <div class="p-6 border-b border-blue-500 flex items-center justify-between">
                    <h1 class="text-2xl font-bold">NDRESSILIK</h1>
                    <button @click="mobileMenuOpen = false" class="text-white">
                         <i class="fas fa-times text-xl"></i>
                    </button>
               </div>

               <!-- Navigation -->
               <nav class="flex-1 p-4 space-y-2">
                    <a href="/dashboard" class="flex items-center space-x-3 px-3 py-2 text-gray-700 hover:bg-gray-100 rounded-lg <%= path === 'dashboard' ? 'bg-blue-50 text-blue-600' : '' %>">
                         <i class="fas fa-gauge-high w-5"></i>
                         <span>Dashboard</span>
                    </a>
                    <a href="/dashboard/profile" class="flex items-center space-x-3 px-3 py-2 text-gray-700 hover:bg-gray-100 rounded-lg <%= path === 'profile' ? 'bg-blue-50 text-blue-600' : '' %>">
                         <i class="fas fa-user w-5"></i>
                         <span>Profile</span>
                    </a>
                    <!-- <a href="/services" class="flex items-center space-x-3 px-3 py-2 text-gray-700 hover:bg-gray-100 rounded-lg <%= path === 'services' ? 'bg-blue-50 text-blue-600' : '' %>">
                                        <i class="fas fa-briefcase w-5"></i>
                                        <span>Services</span>
                                   </a> -->
                    <!-- <a href="/reservations" class="flex items-center space-x-3 px-3 py-2 text-gray-700 hover:bg-gray-100 rounded-lg <%= path === 'reservations' ? 'bg-blue-50 text-blue-600' : '' %>">
                                        <i class="fas fa-calendar w-5"></i>
                                        <span>Reservations</span>
                                   </a> -->
                    <a href="/dashboard/galery" class="flex items-center space-x-3 px-3 py-2 text-gray-700 hover:bg-gray-100 rounded-lg <%= path === 'gallery' ? 'bg-blue-50 text-blue-600' : '' %>">
                         <i class="fas fa-images w-5"></i>
                         <span>Gallery</span>
                    </a>
                    <!-- Other menu items same as sidebar -->
               </nav>

               <!-- User Menu -->
               <div class="p-4 border-t border-blue-500">
                    <div class="flex items-center space-x-3 px-4 py-3">
                         <img src="<%= user.avatar || '/images/default-avatar.png' %>" alt="Profile" class="w-10 h-10 rounded-full">
                         <div>
                              <p class="font-medium">
                                   <%= user.name %>
                              </p>
                              <p class="text-sm text-blue-200">Prestataire</p>
                         </div>
                    </div>
               </div>
          </div>
     </div>
</div>