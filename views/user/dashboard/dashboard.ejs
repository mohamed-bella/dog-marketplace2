<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>K9 Dashboard</title>
    
    <!-- Tailwind and FontAwesome -->
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="bg-gray-50">

<div class="min-h-screen">
    <!-- Desktop Sidebar -->
    <aside class="fixed inset-y-0 left-0 w-64 bg-black hidden lg:block">
        <!-- Logo -->
        <div class="h-16 flex items-center px-6 border-b border-gray-800">
            <div class="flex items-center">
                <i class="fas fa-shield-dog text-red-600 text-2xl mr-2"></i>
                <h1 class="text-xl font-bold text-white">K9 Pro</h1>
            </div>
        </div>

        <!-- Navigation -->
        <nav class="py-4">
            <div class="px-4 space-y-1">
                <a href="/dashboard" 
                   class="flex items-center px-4 py-3 text-gray-300 border-l-4 border-red-600 bg-gray-900">
                    <i class="fas fa-home w-5"></i>
                    <span class="ml-3">Tableau de bord</span>
                </a>

                <a href="/dashboard/profile" 
                   class="flex items-center px-4 py-3 text-gray-400 hover:bg-gray-900 hover:text-white border-l-4 border-transparent">
                    <i class="fas fa-user w-5"></i>
                    <span class="ml-3">Mon profil</span>
                </a>

                <a href="/dashboard/stats" 
                   class="flex items-center px-4 py-3 text-gray-400 hover:bg-gray-900 hover:text-white border-l-4 border-transparent">
                    <i class="fas fa-chart-bar w-5"></i>
                    <span class="ml-3">Statistiques</span>
                </a>

                <a href="/dashboard/reviews" 
                   class="flex items-center px-4 py-3 text-gray-400 hover:bg-gray-900 hover:text-white border-l-4 border-transparent">
                    <i class="fas fa-star w-5"></i>
                    <span class="ml-3">Avis clients</span>
                </a>
            </div>
        </nav>

        <!-- User Menu -->
        <div class="absolute bottom-0 left-0 right-0 border-t border-gray-800">
            <div class="p-4">
                <div class="flex items-center">
                    <div class="w-10 h-10 bg-gray-800"></div>
                    <div class="ml-3">
                        <p class="text-sm font-medium text-white">John Doe</p>
                        <p class="text-xs text-gray-400">Professionnel</p>
                    </div>
                </div>
                <a href="/logout" 
                   class="mt-4 flex items-center px-4 py-2 text-gray-400 hover:text-white hover:bg-gray-900">
                    <i class="fas fa-sign-out-alt w-5"></i>
                    <span class="ml-2">Déconnexion</span>
                </a>
            </div>
        </div>
    </aside>

    <!-- Mobile Header -->
    <header class="lg:hidden bg-black text-white sticky top-0 z-30">
        <div class="px-4 h-16 flex items-center justify-between">
            <div class="flex items-center">
                <i class="fas fa-shield-dog text-red-600 text-2xl mr-2"></i>
                <h1 class="text-xl font-bold">K9 Pro</h1>
            </div>
            <button id="mobileMenuBtn" class="p-2 hover:bg-gray-800">
                <i class="fas fa-bars text-xl"></i>
            </button>
        </div>
    </header>

    <!-- Mobile Menu -->
    <div id="mobileMenu" class="fixed inset-0 bg-black transform translate-x-full transition-transform duration-300 lg:hidden z-50">
        <div class="h-16 flex items-center justify-between px-4 border-b border-gray-800">
            <h1 class="text-xl font-bold text-white">Menu</h1>
            <button id="closeMobileMenu" class="p-2 text-white hover:bg-gray-800">
                <i class="fas fa-times text-xl"></i>
            </button>
        </div>
        
        <!-- Mobile Navigation -->
        <nav class="py-4">
            <div class="px-4 space-y-1">
                <a href="/dashboard" class="flex items-center px-4 py-3 text-white bg-gray-900">
                    <i class="fas fa-home w-5"></i>
                    <span class="ml-3">Tableau de bord</span>
                </a>
                <a href="/profile" class="flex items-center px-4 py-3 text-gray-300 hover:bg-gray-900 hover:text-white">
                    <i class="fas fa-user w-5"></i>
                    <span class="ml-3">Mon profil</span>
                </a>
                <a href="/stats" class="flex items-center px-4 py-3 text-gray-300 hover:bg-gray-900 hover:text-white">
                    <i class="fas fa-chart-bar w-5"></i>
                    <span class="ml-3">Statistiques</span>
                </a>
                <a href="/reviews" class="flex items-center px-4 py-3 text-gray-300 hover:bg-gray-900 hover:text-white">
                    <i class="fas fa-star w-5"></i>
                    <span class="ml-3">Avis clients</span>
                </a>
            </div>
        </nav>
    </div>

    <!-- Main Content -->
    <main class="lg:pl-64">
        <!-- Top Bar -->
        <div class="h-16 bg-white border-b border-gray-200 flex items-center justify-between px-4 lg:px-8 sticky top-0 lg:top-0 z-20">
            <h2 class="text-xl font-semibold text-gray-900">Tableau de bord</h2>
            <div class="flex items-center gap-4">
                <button class="p-2 text-gray-600 hover:text-gray-900 relative">
                    <i class="fas fa-bell text-xl"></i>
                </button>
                
                <div class="relative hidden lg:block">
                    <button id="profileMenuBtn" 
                            class="flex items-center gap-2 text-gray-600 hover:text-gray-900">
                        <div class="w-8 h-8 bg-gray-200"></div>
                        <span class="font-medium">John Doe</span>
                        <i class="fas fa-chevron-down"></i>
                    </button>
                </div>
            </div>
        </div>

        <!-- Page Content -->
        <div class="p-4 lg:p-8">
            <!-- Quick Stats -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mb-8">
                <!-- Profile Views -->
                <div class="bg-white border border-gray-200 hover:border-red-600 transition-colors">
                    <div class="p-6">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-sm text-gray-600">Vues du profil</p>
                                <h3 class="text-2xl font-bold text-gray-900 mt-1">0</h3>
                            </div>
                            <div class="w-12 h-12 bg-black text-white flex items-center justify-center">
                                <i class="fas fa-eye text-xl"></i>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Services -->
                <div class="bg-white border border-gray-200 hover:border-red-600 transition-colors">
                    <div class="p-6">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-sm text-gray-600">Services</p>
                                <h3 class="text-2xl font-bold text-gray-900 mt-1">0</h3>
                            </div>
                            <div class="w-12 h-12 bg-black text-white flex items-center justify-center">
                                <i class="fas fa-briefcase text-xl"></i>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Reviews -->
                <div class="bg-white border border-gray-200 hover:border-red-600 transition-colors">
                    <div class="p-6">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-sm text-gray-600">Avis</p>
                                <h3 class="text-2xl font-bold text-gray-900 mt-1">0</h3>
                            </div>
                            <div class="w-12 h-12 bg-black text-white flex items-center justify-center">
                                <i class="fas fa-star text-xl"></i>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Rating -->
                <div class="bg-white border border-gray-200 hover:border-red-600 transition-colors">
                    <div class="p-6">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-sm text-gray-600">Note</p>
                                <h3 class="text-2xl font-bold text-gray-900 mt-1">0.0</h3>
                            </div>
                            <div class="w-12 h-12 bg-black text-white flex items-center justify-center">
                                <i class="fas fa-award text-xl"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Recent Activity -->
            <div class="bg-white border border-gray-200">
                <div class="border-b border-gray-200">
                    <div class="px-6 py-4 bg-black text-white">
                        <h3 class="text-lg font-semibold">Activité récente</h3>
                    </div>
                </div>
                <div class="p-6">
                    <p class="text-gray-600 text-center py-8">Aucune activité récente</p>
                </div>
            </div>
        </div>
    </main>
</div>

<script>
// Mobile menu functionality
document.addEventListener('DOMContentLoaded', function() {
    const mobileMenuBtn = document.getElementById('mobileMenuBtn');
    const closeMobileMenuBtn = document.getElementById('closeMobileMenu');
    const mobileMenu = document.getElementById('mobileMenu');

    function toggleMobileMenu() {
        const isOpen = !mobileMenu.classList.contains('translate-x-full');
        mobileMenu.classList.toggle('translate-x-full', isOpen);
        document.body.style.overflow = isOpen ? '' : 'hidden';
    }

    mobileMenuBtn?.addEventListener('click', toggleMobileMenu);
    closeMobileMenuBtn?.addEventListener('click', toggleMobileMenu);

    // Close menu on escape key
    document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && !mobileMenu.classList.contains('translate-x-full')) {
            toggleMobileMenu();
        }
    });
});
</script>

</body>
</html>