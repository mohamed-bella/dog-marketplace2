<%- include('../marketplace/partials/footer.ejs') %>
     <%- include('./partials/navbar.ejs') %>

          <div class="container mt-5">
               <h1 class="text-center mb-4">List of Dog Breeds</h1>

               <!-- Add a button to create a new breed -->
               <div class="mb-4 text-right">
                    <a href="/admin/breed/add" class="btn btn-primary">Add New Breed</a>
               </div>

               <!-- Render the dog breeds list -->
               <div class="row">
                    <% breeds.forEach(function(breed) { %>
                         <div class="col-md-4 mb-4">
                              <div class="card h-100">
                                   <!-- Display the breed image -->
                                   <img src="<%= breed.memberPhotos.length ? breed.memberPhotos[0] : '/images/placeholder.jpg' %>" class="card-img-top" alt="<%= breed.breedName %>">

                                   <div class="card-body">
                                        <!-- Display the breed name -->
                                        <h5 class="card-title">
                                             <%= breed.breedName %>
                                        </h5>

                                        <!-- Display a snippet of breed history -->
                                        <p class="card-text">
                                             <strong>History:</strong>
                                             <%= breed.breedHistory ? breed.breedHistory.substring(0, 100) + '...' : 'No history available' %>
                                        </p>

                                        <!-- Display a snippet of breed physical traits -->
                                        <p class="card-text">
                                             <strong>Physical Traits:</strong>
                                             <%= breed.physicalTraits ? breed.physicalTraits.substring(0, 100) + '...' : 'No details available' %>
                                        </p>
                                   </div>

                                   <div class="card-footer d-flex justify-content-between">
                                        <!-- Edit button -->
                                        <a href="/admin/dog-breeds/edit/<%= breed._id %>" class="btn btn-sm btn-warning">Edit</a>

                                        <!-- Delete button -->
                                        <form action="/admin/dog-breeds/delete/<%= breed._id %>" method="POST" style="display:inline;">
                                             <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                        </form>
                                   </div>
                              </div>
                         </div>
                         <% }) %>
               </div>
          </div>

          <%- include('../marketplace/partials/footer.ejs') %>