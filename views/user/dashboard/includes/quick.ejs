<!-- Dashboard Quick Actions -->
<div class="w-full p-6">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-5">
        <!-- Add Service -->
        <div class="group relative">
            <div class="absolute -inset-0.5 bg-gradient-to-r from-blue-600 to-indigo-600 rounded-2xl blur opacity-0 
                        group-hover:opacity-30 transition duration-200"></div>
            <a href="/dashboard/new-service" 
               class="relative flex flex-col h-full bg-white rounded-xl shadow-sm border border-slate-200 
                      hover:border-transparent p-5 transition duration-200">
                <div class="flex items-center gap-4 mb-3">
                    <div class="flex-shrink-0 w-12 h-12 flex items-center justify-center rounded-lg 
                               bg-blue-600 text-white group-hover:scale-110 transition duration-200">
                        <i class="fas fa-plus-circle text-xl"></i>
                    </div>
                    <div>
                        <h3 class="font-semibold text-slate-900">Nouveau Service</h3>
                        <p class="text-sm text-slate-500 mt-0.5">Ajouter un service</p>
                    </div>
                </div>
                <p class="text-sm text-slate-600 mb-4">Créer et gérer un nouveau service pour vos clients</p>
                <div class="mt-auto flex items-center text-blue-600 text-sm font-medium">
                    Commencer
                    <i class="fas fa-arrow-right ml-2 transform group-hover:translate-x-1 transition duration-200"></i>
                </div>
            </a>
        </div>

        <!-- Add Breeding -->
        <div class="group relative">
            <div class="absolute -inset-0.5 bg-gradient-to-r from-violet-600 to-purple-600 rounded-2xl blur opacity-0 
                        group-hover:opacity-30 transition duration-200"></div>
            <a href="/dashboard/breedings" 
               class="relative flex flex-col h-full bg-white rounded-xl shadow-sm border border-slate-200 
                      hover:border-transparent p-5 transition duration-200">
                <div class="flex items-center gap-4 mb-3">
                    <div class="flex-shrink-0 w-12 h-12 flex items-center justify-center rounded-lg 
                               bg-violet-600 text-white group-hover:scale-110 transition duration-200">
                        <i class="fas fa-paw text-xl"></i>
                    </div>
                    <div>
                        <h3 class="font-semibold text-slate-900">Nouvel Élevage</h3>
                        <p class="text-sm text-slate-500 mt-0.5">Gérer les élevages</p>
                    </div>
                </div>
                <p class="text-sm text-slate-600 mb-4">Ajouter et gérer vos élevages de chiens</p>
                <div class="mt-auto flex items-center text-violet-600 text-sm font-medium">
                    Explorer
                    <i class="fas fa-arrow-right ml-2 transform group-hover:translate-x-1 transition duration-200"></i>
                </div>
            </a>
        </div>

        <!-- My Services -->
        <div class="group relative">
            <div class="absolute -inset-0.5 bg-gradient-to-r from-emerald-600 to-teal-600 rounded-2xl blur opacity-0 
                        group-hover:opacity-30 transition duration-200"></div>
            <a href="/dashboard/services" 
               class="relative flex flex-col h-full bg-white rounded-xl shadow-sm border border-slate-200 
                      hover:border-transparent p-5 transition duration-200">
                <div class="flex items-center gap-4 mb-3">
                    <div class="flex-shrink-0 w-12 h-12 flex items-center justify-center rounded-lg 
                               bg-emerald-600 text-white group-hover:scale-110 transition duration-200">
                        <i class="fas fa-list text-xl"></i>
                    </div>
                    <div>
                        <h3 class="font-semibold text-slate-900">Mes Services</h3>
                        <p class="text-sm text-slate-500 mt-0.5"><%= servicesCount || 0 %> services actifs</p>
                    </div>
                </div>
                <p class="text-sm text-slate-600 mb-4">Gérer et suivre vos services existants</p>
                <div class="mt-auto flex items-center text-emerald-600 text-sm font-medium">
                    Voir tout
                    <i class="fas fa-arrow-right ml-2 transform group-hover:translate-x-1 transition duration-200"></i>
                </div>
            </a>
        </div>

        <!-- Requests -->
        <div class="group relative">
            <div class="absolute -inset-0.5 bg-gradient-to-r from-amber-500 to-orange-500 rounded-2xl blur opacity-0 
                        group-hover:opacity-30 transition duration-200"></div>
            <a href="/dashboard/requests" 
               class="relative flex flex-col h-full bg-white rounded-xl shadow-sm border border-slate-200 
                      hover:border-transparent p-5 transition duration-200">
                <div class="flex items-center gap-4 mb-3">
                    <div class="flex-shrink-0 w-12 h-12 flex items-center justify-center rounded-lg 
                               bg-amber-500 text-white group-hover:scale-110 transition duration-200">
                        <i class="fas fa-bell text-xl"></i>
                    </div>
                    <div class="flex-1">
                        <div class="flex items-center justify-between">
                            <h3 class="font-semibold text-slate-900">Demandes</h3>
                            <% if (pendingRequests > 0) { %>
                                <span class="px-2 py-1 text-xs font-medium bg-red-100 text-red-600 rounded-full">
                                    <%= pendingRequests %> nouvelle<%= pendingRequests > 1 ? 's' : '' %>
                                </span>
                            <% } %>
                        </div>
                        <p class="text-sm text-slate-500 mt-0.5">Gérer les demandes</p>
                    </div>
                </div>
                <p class="text-sm text-slate-600 mb-4">Traiter les demandes de vos clients</p>
                <div class="mt-auto flex items-center text-amber-600 text-sm font-medium">
                    Voir les demandes
                    <i class="fas fa-arrow-right ml-2 transform group-hover:translate-x-1 transition duration-200"></i>
                </div>
            </a>
        </div>

        <!-- Reviews -->
        <div class="group relative">
            <div class="absolute -inset-0.5 bg-gradient-to-r from-yellow-500 to-amber-500 rounded-2xl blur opacity-0 
                        group-hover:opacity-30 transition duration-200"></div>
            <a href="/dashboard/reviews" 
               class="relative flex flex-col h-full bg-white rounded-xl shadow-sm border border-slate-200 
                      hover:border-transparent p-5 transition duration-200">
                <div class="flex items-center gap-4 mb-3">
                    <div class="flex-shrink-0 w-12 h-12 flex items-center justify-center rounded-lg 
                               bg-yellow-500 text-white group-hover:scale-110 transition duration-200">
                        <i class="fas fa-star text-xl"></i>
                    </div>
                    <div class="flex-1">
                        <div class="flex items-center justify-between">
                            <h3 class="font-semibold text-slate-900">Avis</h3>
                            <div class="flex items-center gap-1">
                                <i class="fas fa-star text-yellow-400 text-sm"></i>
                                <span class="font-medium text-slate-700"><%= averageRating || '0.0' %></span>
                            </div>
                        </div>
                        <p class="text-sm text-slate-500 mt-0.5"><%= reviewsCount || 0 %> avis clients</p>
                    </div>
                </div>
                <p class="text-sm text-slate-600 mb-4">Voir et gérer les avis de vos clients</p>
                <div class="mt-auto flex items-center text-yellow-600 text-sm font-medium">
                    Consulter les avis
                    <i class="fas fa-arrow-right ml-2 transform group-hover:translate-x-1 transition duration-200"></i>
                </div>
            </a>
        </div>

        <!-- Analytics -->
        <div class="group relative">
            <div class="absolute -inset-0.5 bg-gradient-to-r from-cyan-600 to-blue-600 rounded-2xl blur opacity-0 
                        group-hover:opacity-30 transition duration-200"></div>
            <a href="/dashboard/stats" 
               class="relative flex flex-col h-full bg-white rounded-xl shadow-sm border border-slate-200 
                      hover:border-transparent p-5 transition duration-200">
                <div class="flex items-center gap-4 mb-3">
                    <div class="flex-shrink-0 w-12 h-12 flex items-center justify-center rounded-lg 
                               bg-cyan-600 text-white group-hover:scale-110 transition duration-200">
                        <i class="fas fa-chart-line text-xl"></i>
                    </div>
                    <div>
                        <h3 class="font-semibold text-slate-900">Statistiques</h3>
                        <p class="text-sm text-slate-500 mt-0.5">Analyses et rapports</p>
                    </div>
                </div>
                <p class="text-sm text-slate-600 mb-4">Suivre la performance de vos services</p>
                <div class="mt-auto flex items-center text-cyan-600 text-sm font-medium">
                    Voir les statistiques
                    <i class="fas fa-arrow-right ml-2 transform group-hover:translate-x-1 transition duration-200"></i>
                </div>
            </a>
        </div>
    </div>
</div>

<style>
/* Smooth hover transitions */
.group:hover .group-hover\\:scale-110 {
    transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
}

/* Notification badge pulse */
@keyframes customPulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.6; }
}

.notification-pulse {
    animation: customPulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
}

/* Gradient glow effect */
.gradient-glow {
    transition: opacity 0.2s ease-in-out;
}

.group:hover .gradient-glow {
    opacity: 1;
}
</style>