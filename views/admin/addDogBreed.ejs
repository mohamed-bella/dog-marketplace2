<%- include('./partials/head.ejs') %>
     <style>
          .form-group {
               margin-bottom: 1.5rem;
          }

          .form-label {
               font-weight: 600;
          }

          .input-group-text {
               background-color: #f8f9fa;
          }
     </style>
     <%- include('./partials/navbar.ejs') %>



          <div class="container mt-5">
               <h1 class="text-center mb-4">
                    <i class="fas fa-paw text-primary"></i> Ajouter une nouvelle race de chien
               </h1>

               <form action="/admin/breed/add" method="POST" class="bg-light p-4 rounded shadow">
                    <div class="row">
                         <div class="col-md-6">
                              <div class="form-group">
                                   <label for="breedName" class="form-label"><i class="fas fa-dog"></i> Nom de la race</label>
                                   <input type="text" class="form-control" id="breedName" name="breedName" required>
                              </div>

                              <div class="form-group">
                                   <label for="breedHistory" class="form-label"><i class="fas fa-book-open"></i> Histoire de la race</label>
                                   <textarea class="form-control" id="breedHistory" name="breedHistory" rows="3" required></textarea>
                              </div>

                              <div class="form-group">
                                   <label for="physicalTraits" class="form-label"><i class="fas fa-paw"></i> Caractéristiques physiques</label>
                                   <textarea class="form-control" id="physicalTraits" name="physicalTraits" rows="3" required></textarea>
                              </div>

                              <div class="form-group">
                                   <label for="behaviorCharacter" class="form-label"><i class="fas fa-heart"></i> Comportement et caractère</label>
                                   <textarea class="form-control" id="behaviorCharacter" name="behaviorCharacter" rows="3" required></textarea>
                              </div>

                              <div class="form-group">
                                   <label for="behaviorWithOthers" class="form-label"><i class="fas fa-users"></i> Comportement avec les autres animaux</label>
                                   <textarea class="form-control" id="behaviorWithOthers" name="behaviorWithOthers" rows="3" required></textarea>
                              </div>

                              <div class="form-group">
                                   <label for="education" class="form-label"><i class="fas fa-graduation-cap"></i> Éducation</label>
                                   <textarea class="form-control" id="education" name="education" rows="3" required></textarea>
                              </div>
                         </div>

                         <div class="col-md-6">
                              <div class="form-group">
                                   <label for="livingConditions" class="form-label"><i class="fas fa-home"></i> Conditions de vie</label>
                                   <textarea class="form-control" id="livingConditions" name="livingConditions" rows="3" required></textarea>
                              </div>

                              <div class="form-group">
                                   <label for="health" class="form-label"><i class="fas fa-heartbeat"></i> Santé</label>
                                   <textarea class="form-control" id="health" name="health" rows="3" required></textarea>
                              </div>

                              <div class="form-group">
                                   <label for="lifeExpectancy" class="form-label"><i class="fas fa-hourglass-half"></i> Espérance de vie</label>
                                   <div class="input-group">
                                        <input type="text" class="form-control" id="lifeExpectancy" name="lifeExpectancy" required>
                                        <span class="input-group-text">ans</span>
                                   </div>
                              </div>

                              <div class="form-group">
                                   <label for="maintenanceHygiene" class="form-label"><i class="fas fa-bath"></i> Entretien et hygiène</label>
                                   <textarea class="form-control" id="maintenanceHygiene" name="maintenanceHygiene" rows="3" required></textarea>
                              </div>

                              <div class="form-group">
                                   <label for="priceBudget" class="form-label"><i class="fas fa-euro-sign"></i> Prix et budget</label>
                                   <div class="input-group">
                                        <span class="input-group-text">€</span>
                                        <input type="text" class="form-control" id="priceBudget" name="priceBudget" required>
                                   </div>
                              </div>

                              <div class="form-group">
                                   <label for="physicalActivity" class="form-label"><i class="fas fa-running"></i> Activité physique</label>
                                   <textarea class="form-control" id="physicalActivity" name="physicalActivity" rows="3" required></textarea>
                              </div>

                              <div class="form-group">
                                   <label for="memberPhotos" class="form-label"><i class="fas fa-camera"></i> Photos de la race</label>
                                   <input type="text" class="form-control" id="memberPhotos" name="memberPhotos">
                              </div>
                         </div>
                    </div>

                    <div class="text-center mt-4">
                         <button type="submit" class="btn btn-primary btn-lg">
                              <i class="fas fa-plus-circle"></i> Ajouter la race de chien
                         </button>
                    </div>
               </form>
          </div>