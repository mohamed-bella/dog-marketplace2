                <h1 class="text-xl font-bold text-white">K9 Pro</h1>
            </div>
        </div>

        <!-- Navigation -->
        <nav class="py-4">
            <div class="px-4 space-y-1">
                <a href="/dashboard" 
                   class="flex items-center px-4 py-3 text-gray-300 border-l-4 border-red-600 bg-gray-900">
                    <i class="fas fa-home w-5"></i>
                    <span class="ml-3">Tableau de bord</span>
                </a>

                <a href="/dashboard/profile" 
                   class="flex items-center px-4 py-3 text-gray-400 hover:bg-gray-900 hover:text-white border-l-4 border-transparent">
                    <i class="fas fa-user w-5"></i>
                    <span class="ml-3">Mon profil</span>
