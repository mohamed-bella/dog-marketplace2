<section class="hero">
     <div class="hero-overlay"></div>
     <div class="container">
          <div class="row justify-content-center">
               <div class="col-md-10">
                    <div class="search-container">
                         <h2 class="search-title mb-4">Trouvez le Compagnon Parfait</h2>
                         <form action="/tous-les-annonces" method="GET">
                              <div class="mb-4">
                                   <select class="form-select search-input" name="location">
                                        <option value="" selected disabled>Choisissez une ville</option>
                                        <option value="casablanca">Casablanca</option>
                                        <option value="rabat">Rabat</option>
                                        <option value="marrakech">Marrakech</option>
                                        <!-- Add other cities here -->
                                   </select>
                                   <small class="form-text mt-2">Sélectionnez la ville où vous recherchez des services</small>
                              </div>

                              <div class="animal-types mb-4">
                                   <p class="mb-3">Quel type d'animal recherchez-vous ?</p>
                                   <div class="row">
                                        <div class="col-6">
                                             <label class="animal-card">
                                                  <input type="radio" name="animalType" value="dog" checked>
                                                  <div class="card-content text-center">
                                                       <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon-svg">
                                                            <path d="M10 5.172C10 3.782 8.423 2.679 6.5 3c-2.823.47-4.113 6.006-4 7 .08.703 1.725 1.722 3.656 1 1.261-.472 1.96-1.45 2.344-2.5" />
                                                            <path d="M14.267 5.172c0-1.39 1.577-2.493 3.5-2.172 2.823.47 4.113 6.006 4 7-.08.703-1.725 1.722-3.656 1-1.261-.472-1.855-1.45-2.239-2.5" />
                                                            <path d="M8 14v.5" />
                                                            <path d="M16 14v.5" />
                                                            <path d="M11.25 16.25h1.5L12 17l-.75-.75z" />
                                                            <path d="M4.42 11.247A13.152 13.152 0 0 0 4 14.556C4 18.728 7.582 21 12 21s8-2.272 8-6.444c0-1.061-.162-2.2-.493-3.309m-9.243-6.082A8.801 8.801 0 0 1 12 5c.78 0 1.5.108 2.161.306" />
                                                       </svg>
                                                       <span>Chien</span>
                                                  </div>
                                             </label>
                                        </div>
                                        <div class="col-6">
                                             <label class="animal-card">
                                                  <input type="radio" name="animalType" value="cat">
                                                  <div class="card-content text-center">
                                                       <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon-svg">
                                                            <path d="M12 5c.67 0 1.35.09 2 .26 1.78-2 5.03-2.84 6.42-2.26 1.4.58-.42 7-.42 7 .57 1.07 1 2.24 1 3.44C21 17.9 16.97 21 12 21s-9-3.1-9-7.56c0-1.25.5-2.4 1-3.44 0 0-1.89-6.42-.5-7 1.39-.58 4.72.23 6.5 2.23A9.04 9.04 0 0 1 12 5Z" />
