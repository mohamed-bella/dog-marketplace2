<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Plateforme Canine</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.2.0/flowbite.min.css" rel="stylesheet" />
</head>
<body class="bg-gray-50">
    <div class="container mx-auto px-4 py-8">
        <!-- Filtres -->
        <div class="mb-8 bg-white p-4 rounded-lg shadow">
            <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
                <select id="type" class="rounded-lg border-gray-300">
                    <option value="">Tous les types</option>
                    <option value="adoption">À adopter</option>
                    <option value="perdu">Chien perdu</option>
                    <option value="trouve">Chien trouvé</option>
                </select>
                <input type="text" id="location" placeholder="Localisation" class="rounded-lg border-gray-300">
                <input type="date" id="date" class="rounded-lg border-gray-300">
                <button id="filter" class="bg-blue-600 text-white rounded-lg px-4 py-2 hover:bg-blue-700">
                    Filtrer
                </button>
            </div>
        </div>

        <!-- Bouton Ajouter -->
        <div class="flex justify-end mb-6">
            <button onclick="showAddPostModal()" class="bg-green-600 text-white rounded-lg px-6 py-2 hover:bg-green-700 flex items-center">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                </svg>
                Publier une annonce
            </button>
        </div>

        <!-- Grille des annonces -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6" id="postsGrid">
            <% posts.forEach(function(post) { %>
                <div class="bg-white rounded-xl shadow-md overflow-hidden cursor-pointer hover:shadow-lg transition-shadow"
                     onclick="showPostDetails('<%= post._id %>')">
                    <img src="<%= post.photos[0] %>" alt="<%= post.name %>" class="w-full h-48 object-cover">
                    <div class="p-4">
                        <div class="flex justify-between items-center mb-2">
                            <span class="text-sm font-medium px-2 py-1 rounded
                                <%= post.type === 'adoption' ? 'bg-green-100 text-green-800' : 
                                   post.type === 'perdu' ? 'bg-red-100 text-red-800' : 
                                   'bg-yellow-100 text-yellow-800' %>">
                                <%= post.type === 'adoption' ? 'À adopter' : 
                                   post.type === 'perdu' ? 'Perdu' : 'Trouvé' %>
                            </span>
                            <span class="text-gray-500 text-sm"><%= post.createdAt.toLocaleDateString() %></span>
                        </div>
                        <h3 class="font-semibold text-lg mb-1"><%= post.name %></h3>
                        <p class="text-gray-600 text-sm mb-2"><%= post.location %></p>
                        <p class="text-gray-700 line-clamp-2"><%= post.description %></p>
                    </div>
                </div>
            <% }); %>
        </div>

        <!-- Pagination -->
        <div class="mt-8 flex justify-center">
            <% if (totalPages > 1) { %>
                <div class="flex space-x-2">
                    <% for(let i = 1; i <= totalPages; i++) { %>
                        <a href="?page=<%= i %>" 
                           class="px-4 py-2 rounded-lg <%= currentPage == i ? 'bg-blue-600 text-white' : 'bg-white text-gray-700' %>">
                            <%= i %>
                        </a>
                    <% } %>
                </div>
            <% } %>
        </div>
    </div>

    <!-- Modal Ajout d'annonce -->
    <div id="addPostModal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center">
        <div class="bg-white rounded-xl p-6 w-full max-w-2xl">
            <h2 class="text-2xl font-bold mb-6">Publier une annonce</h2>
            
            <!-- Formulaire multi-étapes -->
            <form id="postForm" class="space-y-6">
                <!-- Étape 1 -->
                <div class="step" data-step="1">
                    <h3 class="text-lg font-semibold mb-4">Type d'annonce</h3>
                    <div class="space-y-4">
                        <label class="block">
                            <input type="radio" name="type" value="adoption" required>
                            <span class="ml-2">Chien à adopter</span>
                        </label>
                        <label class="block">
                            <input type="radio" name="type" value="perdu">
                            <span class="ml-2">Chien perdu</span>
                        </label>
                        <label class="block">
                            <input type="radio" name="type" value="trouve">
                            <span class="ml-2">Chien trouvé</span>
                        </label>
                    </div>
                </div>

                <!-- Étape 2 -->
                <div class="step hidden" data-step="2">
                    <h3 class="text-lg font-semibold mb-4">Informations sur le chien</h3>
                    <div class="space-y-4">
                        <input type="text" name="name" placeholder="Nom du chien" class="w-full rounded-lg" required>
                        <input type="text" name="breed" placeholder="Race" class="w-full rounded-lg" required>
                        <input type="number" name="age" placeholder="Âge approximatif" class="w-full rounded-lg" required>
                        <textarea name="description" placeholder="Description" class="w-full rounded-lg" rows="4" required></textarea>
                    </div>
                </div>

                <!-- Étape 3 -->
                <div class="step hidden" data-step="3">
                    <h3 class="text-lg font-semibold mb-4">Photos</h3>
                    <div class="space-y-4">
                        <input type="file" name="images" multiple accept="image/*" class="w-full" required>
                        <p class="text-sm text-gray-500">Vous pouvez ajouter jusqu'à 5 photos</p>
                    </div>
                </div>

                <!-- Étape 4 -->
                <div class="step hidden" data-step="4">
                    <h3 class="text-lg font-semibold mb-4">Coordonnées</h3>
                    <div class="space-y-4">
                        <input type="email" name="email" placeholder="Email" class="w-full rounded-lg" required>
                        <input type="tel" name="phone" placeholder="Téléphone" class="w-full rounded-lg" required>
                        <input type="text" name="location" placeholder="Localisation" class="w-full rounded-lg" required>
                    </div>
                </div>

                <!-- Navigation -->
                <div class="flex justify-between mt-6">
                    <button type="button" onclick="prevStep()" class="bg-gray-200 text-gray-700 px-6 py-2 rounded-lg hover:bg-gray-300">
                        Précédent
                    </button>
                    <button type="button" onclick="nextStep()" class="bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700">
                        Suivant
                    </button>
                    <button type="submit" class="hidden bg-green-600 text-white px-6 py-2 rounded-lg hover:bg-green-700">
                        Publier
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Modal Détails de l'annonce -->
    <div id="postDetailsModal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center">
        <div class="bg-white rounded-xl p-6 w-full max-w-4xl">
            <div id="postDetailsContent">
                <!-- Le contenu sera injecté dynamiquement -->
            </div>
        </div>
    </div>

  <%- include('./scripts.ejs')  %>
</body>
</html>