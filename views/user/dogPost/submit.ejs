<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Dog - Modern Portal</title>
    
    <!-- Tailwind and FontAwesome -->
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    fontFamily: {
                        sans: ['Inter', 'sans-serif'],
                    },
                    colors: {
                        primary: {
                            50: '#f0f9ff',
                            100: '#e0f2fe',
                            200: '#bae6fd',
                            300: '#7dd3fc',
                            400: '#38bdf8',
                            500: '#0ea5e9',
                            600: '#0284c7',
                            700: '#0369a1',
                        },
                    }
                }
            }
        }
    </script>

    
</head>
<!-- views/announcements/submit.ejs -->
<% layout('../layouts/layout') %>

<div class="container">
  <h1>Submit a New Announcement</h1>

  <form action="/submit-announcement" method="POST" enctype="multipart/form-data">
    <!-- Type -->
    <div>
      <label>Type:</label>
      <label><input type="radio" name="type" value="adoption" required> Adoption</label>
      <label><input type="radio" name="type" value="lost"> Lost</label>
    </div>

    <!-- Name -->
    <div>
      <label>Name:</label>
      <input type="text" name="name" required>
    </div>

    <!-- Age -->
    <div>
      <label>Age:</label>
      <input type="number" name="age">
    </div>

    <!-- Breed -->
    <div>
      <label>Breed:</label>
      <input type="text" name="breed">
    </div>

    <!-- Description -->
    <div>
      <label>Description:</label>
      <textarea name="description"></textarea>
    </div>

    <!-- Location -->
    <div>
      <label>Location:</label>
      <input type="text" name="location" required>
    </div>

    <!-- Photos -->
    <div>
      <label>Photos:</label>
      <input type="file" name="images" multiple accept="image/*">
    </div>

    <!-- Contact Info -->
    <div>
      <label>Email:</label>
      <input type="email" name="email" required>
    </div>

    <div>
      <label>Phone:</label>
      <input type="tel" name="phone">
    </div>

    <!-- Submit Button -->
    <button type="submit">Submit Announcement</button>
  </form>
</div>
