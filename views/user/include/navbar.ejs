<style>
     /* Arabic Font Import */
     @import url('https://fonts.googleapis.com/css2?family=Tajawal:wght@400;500;700&display=swap');

     /* Custom Properties */
     :root {
          --transition-base: 0.2s ease-in-out;
          --transition-smooth: 0.3s cubic-bezier(0.4, 0, 0.2, 1);
     }

