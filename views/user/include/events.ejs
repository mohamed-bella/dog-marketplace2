<section class="py-10 bg-white">
     <div class="px-4 md:container md:mx-auto">
          <!-- Section Header -->
          <div class="flex items-center justify-between mb-8">
               <div class="flex items-center gap-2 sm:gap-3">
                    <div class="w-10 h-10 flex items-center justify-center rounded-xl bg-blue-50">
                         <span role="img" aria-label="books" class="text-lg">ðŸ“š</span>
                    </div>
                    <div>
                         <h2 class="text-xl font-semibold tracking-tight">Latest Articles</h2>
                         <p class="text-sm text-muted-foreground text-gray-500">Expert advice for your pets</p>
                    </div>
               </div>

               <a href="/articles" class="hidden sm:inline-flex items-center text-sm font-medium text-gray-500 hover:text-gray-900">
                    View all
                    <svg class="ml-1 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                         <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
               </a>
          </div>
     </div>

     <!-- Mobile Scroll (-mx-4 for edge-to-edge) -->
     <div class="md:hidden -mx-4">
          <div class="flex overflow-x-auto gap-4 px-4 hide-scrollbar pb-4 snap-x snap-mandatory">
               <% articles.forEach(article=> { %>
                    <div class="flex-none w-[85%] first:pl-0 last:pr-4 snap-start">
                         <a href="/articles/<%= article.slug %>" class="block h-full">
                              <article class="h-full bg-white rounded-2xl border shadow-sm overflow-hidden">
                                   <!-- Image -->
                                   <div class="aspect-video relative">
                                        <img src="<%= article.featuredImage %>" alt="<%= article.title %>" class="w-full h-full object-cover">
                                        <!-- Category Tag -->
                                        <div class="absolute top-3 left-3">
                                             <span class="px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-500 text-white">
                                                  <%= article.category %>
                                             </span>
                                        </div>
                                   </div>

                                   <div class="p-4">
                                        <!-- Title -->
                                        <h3 class="font-medium line-clamp-2 mb-2">
                                             <%= article.title %>
                                        </h3>

                                        <!-- Author & Read Time -->
                                        <div class="flex items-center justify-between text-sm text-gray-500">
                                             <div class="flex items-center gap-2">
                                                  <div class="w-6 h-6 rounded-full bg-gray-100 flex items-center justify-center">
                                                       <span class="text-xs">ðŸ‘¤</span>
                                                  </div>
                                                  <%= article.author %>
                                             </div>
                                             <span class="text-xs">
                                                  <%= article.readingTime || '5 min' %> read
                                             </span>
                                        </div>
                                   </div>
                              </article>
                         </a>
                    </div>
                    <% }) %>
          </div>
     </div>

     <!-- Desktop Grid -->
     <div class="hidden md:grid md:grid-cols-3 gap-6 px-4 md:px-0">
          <% articles.forEach(article=> { %>
               <a href="/articles/<%= article.slug %>" class="group">
                    <article class="h-full bg-white rounded-2xl border shadow-sm overflow-hidden hover:shadow-md transition-all hover:-translate-y-0.5">
                         <!-- Image -->
                         <div class="aspect-video relative">
                              <img src="<%= article.featuredImage %>" alt="<%= article.title %>" class="w-full h-full object-cover transition-transform group-hover:scale-105">
                              <!-- Category Tag -->
                              <div class="absolute top-3 left-3">
                                   <span class="px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-500 text-white">
                                        <%= article.category %>
                                   </span>
                              </div>
                         </div>

                         <div class="p-4">
                              <!-- Title -->
                              <h3 class="font-medium line-clamp-2 mb-3 group-hover:text-blue-600 transition-colors">
                                   <%= article.title %>
                              </h3>

                              <!-- Author & Read Time -->
                              <div class="flex items-center justify-between text-sm text-gray-500">
                                   <div class="flex items-center gap-2">
                                        <div class="w-6 h-6 rounded-full bg-gray-100 flex items-center justify-center">
                                             <span class="text-xs">ðŸ‘¤</span>
                                        </div>
                                        <%= article.author %>
                                   </div>
                                   <span class="text-xs">
                                        <%= article.readingTime || '5 min' %> read
                                   </span>
                              </div>
                         </div>
                    </article>
               </a>
               <% }) %>
     </div>

     <!-- Mobile View All Button -->
     <div class="mt-6 px-4 md:hidden">
          <a href="/articles" class="inline-flex w-full items-center justify-center whitespace-nowrap rounded-lg bg-gray-900 px-4 py-2.5 text-sm font-medium text-gray-50 hover:bg-gray-800 focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-gray-950">
               View all articles
          </a>
     </div>
</section>

<style>
     .hide-scrollbar {
          scrollbar-width: none;
          -ms-overflow-style: none;
     }

     .hide-scrollbar::-webkit-scrollbar {
          display: none;
     }

     .line-clamp-2 {
          display: -webkit-box;
          -webkit-line-clamp: 2;
          -webkit-box-orient: vertical;
          overflow: hidden;
     }
</style>