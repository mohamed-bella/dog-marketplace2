      isSearchOpen: false,
      showBackToTop: false,
      lastScrollPosition: 0,

      init() {
        this.handleScroll();
        window.addEventListener('scroll', () => this.handleScroll());

        // Initialize search keyboard shortcut
        window.addEventListener('keydown', e => {
          if ((e.metaKey || e.ctrlKey) && e.key === 'k') {
            e.preventDefault();
            this.toggleSearch();
          }
        });
