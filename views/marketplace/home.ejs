<%- include('./partials/head') %>
    <%- include('./partials/navbar') %>
        <%- include('./partials/hero') %>

            <!-- Announcements -->
            <%- include('./partials/announcement') %>

                <!-- Articles Section -->
                <%- include('./partials/articles') %>


                    <!-- Dog Breeds Hexagon Grid Section -->
                    <section id="breeds" class="section bg-light position-relative">
                        <div class="section-pattern-overlay"></div>
                        <div class="container">
                            <h2 class="section-title text-center mb-5">Races de Chiens Populaires</h2>
                            <div class="hexagon-grid">
                                <% for (let i=0; i < 6; i++) { %>
                                    <div class="hexagon">
                                        <div class="hexagon-content">
                                            <i class="fas fa-dog breed-icon"></i>
                                            <h4>Berger Allemand</h4>
                                            <p>Intelligent et loyal</p>
                                        </div>
                                    </div>
                                    <% } %>
                            </div>
                        </div>
                    </section>

                    <!-- Services Section -->
                    <section id="services" class="section  text-white">
                        <div class="container">
                            <h2 class="section-title text-center mb-5">Nos Services</h2>
                            <div class="row g-4">
                                <div class="col-md-4">
                                    <div class="service-card text-center p-4 bg-white text-dark border border-3 border-secondary">
                                        <i class="fas fa-paw service-icon fa-3x mb-3 text-primary"></i>
                                        <h4 class="fw-bold">Adoption</h4>
                                        <p>Trouvez votre compagnon idéal parmi nos chiens à adopter.</p>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="service-card text-center p-4 bg-white text-dark border border-3 border-secondary">
                                        <i class="fas fa-graduation-cap service-icon fa-3x mb-3 text-primary"></i>
                                        <h4 class="fw-bold">Dressage</h4>
                                        <p>Des cours de dressage pour tous les niveaux.</p>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="service-card text-center p-4 bg-white text-dark border border-3 border-secondary">
                                        <i class="fas fa-stethoscope service-icon fa-3x mb-3 text-primary"></i>
                                        <h4 class="fw-bold">Consultation</h4>
                                        <p>Conseils d'experts pour la santé et le bien-être de votre chien.</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>

                    <!-- CTA Section -->
                    <section id="cta" class="section bg-secondary text-white text-center">
                        <div class="container">
                            <h2 class="display-4 fw-bold mb-4">Prêt à trouver votre nouveau compagnon ?</h2>
                            <a href="/announcements" class="btn btn-light btn-lg fw-bold px-5 py-3">Parcourir les annonces</a>
                        </div>
                    </section>

                    <%- include('./partials/footer') %>



                        <script>
                            function slideAnnouncements(direction) {
                                const slider = document.getElementById('announcements-slider');
                                slider.scrollBy({
                                    left: direction * slider.offsetWidth,
                                    behavior: 'smooth'
                                });
                            }
                        </script>