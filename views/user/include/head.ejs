<script>
function setCookie(name, value, days) {
    const date = new Date();
    date.setTime(date.getTime() + (days * 24 * 60 * 60 * 1000));
    const expires = `; expires=${date.toUTCString()}`;
    document.cookie = `${name}=${value}${expires}; path=/`;
}

function getCookie(name) {
    const nameEQ = `${name}=`;
    const cookies = document.cookie.split(';');
    for (let cookie of cookies) {
        cookie = cookie.trim();
        if (cookie.startsWith(nameEQ)) {
            return cookie.substring(nameEQ.length);
        }
    }
    return null;
}

function hideLoadingScreen() {
    const loadingOverlay = document.getElementById('loading-overlay');
    if (!loadingOverlay) return;
    
    // Add fade-out effect
    loadingOverlay.style.opacity = '0';
    loadingOverlay.style.transform = 'scale(1.02)';
    
    setTimeout(() => {
        loadingOverlay.style.display = 'none';
    }, 700);
}

function initializeLoadingScreen() {
    const hasVisited = getCookie('hasVisited');
    const loadingOverlay = document.getElementById('loading-overlay');
    if (!loadingOverlay) return;

    if (!hasVisited) {
        // First visit - show loading animation
        loadingOverlay.style.display = 'flex';
        
        // Smooth initialization
        requestAnimationFrame(() => {
            loadingOverlay.style.opacity = '1';
            loadingOverlay.style.transform = 'scale(1)';
        });

        setTimeout(() => {
            hideLoadingScreen();
            setCookie('hasVisited', 'true', 30);
        }, 3000);
    } else {
        // Returning visitor - hide immediately
        loadingOverlay.style.display = 'none';
    }
}

// Event Listeners
window.addEventListener('load', initializeLoadingScreen);

document.addEventListener('visibilitychange', () => {
    if (document.visibilityState === 'visible') {
        const hasVisited = getCookie('hasVisited');
        if (hasVisited) {
            hideLoadingScreen();
        }
    }
});

// Modern page transition support
if ('navigation' in window) {
    navigation.addEventListener('navigate', () => {
        hideLoadingScreen();
    });
}
</script>