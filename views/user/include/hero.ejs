<section class="hero">
     <div class="hero-overlay"></div>
     <div class="container">
          <div class="row justify-content-center">
               <div class="col-md-10">
                    <div class="search-container">
                         <h2 class="search-title mb-4">Trouvez le Service Parfait pour Votre Animal</h2>
                         <form action="/services/search" method="GET">

                              <!-- Dynamic Location Dropdown -->
                              <div class="mb-4">
                                   <select class="form-select search-input" name="location">
                                        <option value="" selected disabled>Choisissez une ville</option>
                                        <% locations.forEach(location=> { %>
                                             <option value="<%= location %>">
                                                  <%= location %>
                                             </option>
                                             <% }) %>
                                   </select>
                                   <small class="form-text mt-2">Sélectionnez la ville où vous recherchez des services</small>
                              </div>

                              <!-- Service Types Section (One Selected) -->
                              <div class="service-types mb-4">
                                   <p class="mb-3">Quel type de service recherchez-vous ?</p>
                                   <div class="row g-3">
                                        <div class="col-md-4 col-6">
                                             <label class="service-card">
                                                  <input type="radio" name="serviceType" value="dressage" class="service-radio">
                                                  <div class="card-content text-center">
                                                       <img src="https://img.icons8.com/?size=100&id=02AbFTOZGc7a&format=png&color=000000" alt="Dressage" class="icon-svg">
                                                       <span>Dressage</span>
                                                  </div>
                                             </label>
                                        </div>
                                        <div class="col-md-4 col-6">
                                             <label class="service-card">
                                                  <input type="radio" name="serviceType" value="toilettage" class="service-radio">
                                                  <div class="card-content text-center">
                                                       <img src="https://img.icons8.com/?size=100&id=eSFW8g06YlXi&format=png&color=000000" alt="Toilettage" class="icon-svg">
                                                       <span>Toilettage</span>
                                                  </div>
                                             </label>
                                        </div>
                                        <div class="col-md-4 col-6">
                                             <label class="service-card">
                                                  <input type="radio" name="serviceType" value="promenade" class="service-radio">
                                                  <div class="card-content text-center">
                                                       <img src="https://img.icons8.com/?size=100&id=W8jJ6qfM7hcV&format=png&color=000000" alt="Promenade" class="icon-svg">
                                                       <span>Promenade</span>
                                                  </div>
                                             </label>
                                        </div>
                                        <div class="col-md-4 col-6">
                                             <label class="service-card">
                                                  <input type="radio" name="serviceType" value="veterinaire" class="service-radio">
                                                  <div class="card-content text-center">
                                                       <img src="https://img.icons8.com/?size=100&id=s6qCmDA9s4w6&format=png&color=000000" alt="Vétérinaire" class="icon-svg">
                                                       <span>Vétérinaire</span>
                                                  </div>
                                             </label>
                                        </div>
                                        <div class="col-md-4 col-6">
                                             <label class="service-card">
                                                  <input type="radio" name="serviceType" value="pension" class="service-radio">
                                                  <div class="card-content text-center">
                                                       <img src="https://img.icons8.com/?size=100&id=rine6jqhXEly&format=png&color=000000" alt="Pension" class="icon-svg">
                                                       <span>Pension</span>
                                                  </div>
                                             </label>
                                        </div>
                                        <div class="col-md-4 col-6">
                                             <label class="service-card">
                                                  <input type="radio" name="serviceType" value="transport" class="service-radio">
                                                  <div class="card-content text-center">
                                                       <img src="https://img.icons8.com/?size=100&id=p0LDtHcHd2Xg&format=png&color=000000" alt="Transport" class="icon-svg">
                                                       <span>Transport</span>
                                                  </div>
                                             </label>
                                        </div>
                                   </div>
                                   <small class="form-text mt-2">Sélectionnez le service que vous recherchez</small>
                              </div>

                              <button type="submit" class="search-btn btn btn-lg btn-block">Rechercher les Services</button>
                         </form>
                    </div>
               </div>
          </div>
     </div>
</section>

<!-- Hero Section Styles -->
<style>
     .hero {
          background-color: #f3f379;
          padding: 120px 0;
          position: relative;
     }

     .hero-overlay {
          position: absolute;
          top: 0;
          left: 0;
          right: 0;
          bottom: 0;
          background-color: rgba(255, 255, 255, 0);
          z-index: 1;
     }

     .search-container {
          background-color: rgba(255, 255, 255, 0.9);
          padding: 40px;
          border-radius: 10px;
          box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
          position: relative;
          z-index: 2;
     }

     .search-title {
          font-size: 32px;
          font-weight: bold;
          text-align: center;
          margin-bottom: 30px;
     }

     .search-input {
          height: 60px;
          border-radius: 30px;
          padding: 10px 25px;
          font-size: 18px;
          transition: all 0.3s ease;
     }

     .service-card {
          display: block;
          cursor: pointer;
          border: 2px solid #ddd;
          border-radius: 10px;
          text-align: center;
          transition: all 0.3s ease;
          overflow: hidden;
     }

     .service-card:hover {
          transform: translateY(-5px);
          box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
     }

     .service-card input[type="radio"] {
          display: none;
     }

     .service-card input[type="radio"]:checked+.card-content {
          background-color: #3FB1B0;
          color: #fff;
     }

     .card-content {
          padding: 20px 10px;
          transition: all 0.3s ease;
     }

     .icon-svg {
          width: 48px;
          height: 48px;
          margin-bottom: 15px;
     }

     .card-content span {
          display: block;
          font-weight: bold;
          font-size: 18px;
     }

     .search-btn {
          height: 60px;
          font-size: 20px;
          font-weight: bold;
          text-transform: uppercase;
          letter-spacing: 1px;
          width: 100%;
          margin-top: 30px;
          background-color: #3FB1B0;
          border-color: #3FB1B0;
          color: #fff;
          border-radius: 30px;
          transition: all 0.3s ease;
     }

     .search-btn:hover {
          background-color: #338F8E;
          border-color: #338F8E;
          transform: translateY(-2px);
          box-shadow: 0 5px 15px rgba(63, 177, 176, 0.3);
     }

     .form-text {
          font-size: 14px;
          color: #666;
     }

     @media (max-width: 768px) {
          .hero {
               padding: 80px 0;
          }

          .search-container {
               padding: 30px;
          }

          .search-title {
               font-size: 28px;
          }

          .search-btn {
               font-size: 18px;
               height: 55px;
          }

          /* 2 cards per row for mobile devices */
          .service-types .row {
               display: flex;
               flex-wrap: wrap;
          }

          .service-types .col-6 {
               flex: 0 0 50%;
               max-width: 50%;
          }
     }
</style>

<!-- JavaScript to Handle Radio Selection Logic -->
<script>
     document.addEventListener('DOMContentLoaded', function () {
          const serviceCards = document.querySelectorAll('.service-card');

          serviceCards.forEach(card => {
               card.addEventListener('click', function () {
                    const radio = this.querySelector('input[type="radio"]');
                    radio.checked = true;

                    // Remove active class from all cards
                    serviceCards.forEach(c => c.classList.remove('active'));

                    // Add active class to clicked card
                    this.classList.add('active');
               });
          });
     });
</script>