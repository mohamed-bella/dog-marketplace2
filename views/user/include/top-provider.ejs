<section class="relative py-16 bg-gray-50 border-t ">
     <div class="container mx-auto px-4">


          <!-- Section Header -->
          <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mb-12 text-center">
               <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">Experts Animaliers</h2>
               <p class="text-xl text-gray-600 max-w-2xl mx-auto">Trouvez le professionnel id√©al pour votre compagnon</p>
          </div>

          <!-- Expert Cards Grid -->
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
               <% topProviders.forEach(provider=> { %>
                    <a href="/@<%= provider.slug %>" class="block group">
                         <div class="bg-white p-4 rounded-lg shadow-sm hover:shadow-md transition-all">
                              <!-- Header with Image and Basic Info -->
                              <div class="flex items-center gap-4 mb-4">
                                   <div class="relative">
                                        <div class="w-16 h-16 rounded-full overflow-hidden bg-gray-100">
                                             <img src="<%= provider.profileImage %>" alt="<%= provider.displayName %>" class="w-full h-full object-cover" onerror="this.src='/default-avatar.png'">
                                        </div>
                                        <% if (provider.isVerified) { %>
                                             <div class="absolute -bottom-1 -right-1 bg-blue-500 rounded-full p-1">
                                                  <svg class="w-3 h-3 text-white" viewBox="0 0 20 20" fill="currentColor">
                                                       <path d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" />
                                                  </svg>
                                             </div>
                                             <% } %>
                                   </div>

                                   <div class="flex-1">
                                        <h3 class="text-lg font-semibold text-gray-900 group-hover:text-blue-600">
                                             <%= provider.displayName %>
                                        </h3>
                                        <div class="flex items-center gap-2 text-sm text-gray-500">
                                             <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                                                  <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" />
                                             </svg>
                                             <%= provider.location?.city || 'Paris' %>
                                        </div>
                                   </div>

                                   <!-- Rating Badge -->
                                   <div class="flex items-center bg-yellow-50 px-2 py-1 rounded-full">
                                        <svg class="w-4 h-4 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                                             <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                                        </svg>
                                        <span class="ml-1 text-sm font-medium text-gray-700">
                                             <%= provider.metrics?.averageRating || '4.8' %>
                                        </span>
                                   </div>
                              </div>

                              <!-- Tags -->
                              <div class="flex flex-wrap gap-2 mb-4">
                                   <% (provider.specializations || ['Soin Animalier', 'Dressage' ]).slice(0, 3).forEach(spec=> { %>
                                        <span class="px-2 py-1 bg-gray-100 text-gray-600 rounded-full text-xs">
                                             <%= spec %>
                                        </span>
                                        <% }) %>
                              </div>

                              <!-- Stats -->
                              <div class="flex items-center justify-between text-sm text-gray-500 mt-4">
                                   <div class="flex items-center gap-2">
                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                             <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                        </svg>
                                        <%= provider.metrics?.totalServices || '50' %> services
                                   </div>
                                   <span class="text-blue-600 group-hover:translate-x-1 transition-transform inline-flex items-center">
                                        Voir profil
                                        <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                             <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                                        </svg>
                                   </span>
                              </div>
                         </div>
                    </a>
                    <% }) %>
          </div>

          <!-- "See All" Link -->
          <div class="mt-12 text-center">
               <a href="/providers" class="inline-flex items-center text-blue-600 hover:text-blue-700 font-medium">
                    Voir tous les experts
                    <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                         <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                    </svg>
               </a>
          </div>
     </div>
</section>