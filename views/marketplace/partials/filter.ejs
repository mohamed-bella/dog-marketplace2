<form method="GET" action="/announcements/filter">
     <!-- Filter by Title (Name) -->
     <label for="title">Nom:</label>
     <input type="text" id="title" name="title" placeholder="Nom de l'annonce">

     <!-- Filter by Price Range -->
     <label for="minPrice">Prix Min:</label>
     <input type="number" id="minPrice" name="minPrice" placeholder="Prix minimum">

     <label for="maxPrice">Prix Max:</label>
     <input type="number" id="maxPrice" name="maxPrice" placeholder="Prix maximum">

     <!-- Filter by Location -->
     <label for="location">Lieu:</label>
     <input type="text" id="location" name="location" placeholder="Lieu">

     <button type="submit" class="btn btn-primary">Filtrer</button>
</form>