<div class="bg-white rounded-2xl shadow-lg overflow-hidden" x-data="headerCard" dir="rtl">
     <div class="p-8">
          <div class="flex flex-col md:flex-row items-center md:items-start gap-6">
               <!-- Profile Image Section -->
               <div class="relative group">
                    <div class="w-32 h-32 md:w-36 md:h-36 rounded-2xl shadow-lg overflow-hidden
                            bg-gradient-to-br from-blue-50 to-blue-100
                            transition-all duration-300 group-hover:shadow-xl">
                         <img src="<%= user.profileImage %>" alt="<%= user.displayName %>" class="w-full h-full object-cover transition-all duration-500 
                                group-hover:scale-105">
                    </div>

                    <!-- Change Photo Button -->
                    <button @click="$refs.profileInput.click()" class="absolute -bottom-3 right-1/2 translate-x-1/2 p-3 
                               bg-blue-600 text-white rounded-xl shadow-lg
                               transition-all duration-300 hover:bg-blue-700
                               hover:scale-110 active:scale-95">
                         <i class="fas fa-camera"></i>
                    </button>
                    <input type="file" x-ref="profileInput" @change="handleImageUpload($event, 'profile')" accept="image/*" class="hidden">

                    <!-- Verification Badge -->
                    <% if (user.isVerified) { %>
                         <div class="absolute -top-2 -right-2 bg-white rounded-full p-2 shadow-lg
                                transform transition-all duration-300 hover:scale-110
                                hover:rotate-12 group/badge cursor-help">
                              <img src="https://img.icons8.com/?size=30&id=GSYoL5PjLpC8&format=png&color=FA5252" alt="Verified" class="w-6 h-6">
                              <div class="absolute -top-12 right-0 w-32 bg-black/80 text-white text-xs
                                    rounded-lg px-2 py-1 opacity-0 group-hover/badge:opacity-100
                                    transition-opacity duration-300 text-center font-arabic">
                                   حساب موثق
                              </div>
                         </div>
                         <% } %>
               </div>

               <!-- User Info Section -->
               <div class="flex-1 text-center md:text-right">
                    <div class="flex flex-col md:flex-row items-center md:items-start gap-3 mb-4">
                         <h1 class="text-2xl md:text-3xl font-bold text-gray-900 font-arabic">
                              <%= user.displayName %>
                         </h1>
                         <span class="px-3 py-1 bg-blue-50 text-blue-600 rounded-full text-sm font-arabic">
                              محترف
                         </span>
                    </div>

                    <!-- Stats Grid -->
                    <div class="flex flex-wrap items-center justify-center md:justify-start gap-4 mb-6">
                         <% if (user.location?.city) { %>
                              <div class="flex items-center px-4 py-2 bg-gray-50 rounded-xl
                                    hover:bg-gray-100 transition-all duration-300 group">
                                   <i class="fas fa-map-marker-alt text-red-500 ml-2 
                                    group-hover:scale-110 transition-transform"></i>
                                   <span class="text-sm text-gray-600 font-arabic">
                                        <%= user.location.city %>
                                   </span>
                              </div>
                              <% } %>

                                   <% if (user.metrics?.totalServices) { %>
                                        <div class="flex items-center px-4 py-2 bg-gray-50 rounded-xl
                                    hover:bg-gray-100 transition-all duration-300 group">
                                             <i class="fas fa-briefcase text-blue-500 ml-2 
                                    group-hover:scale-110 transition-transform"></i>
                                             <span class="text-sm text-gray-600 font-arabic">
                                                  <%= user.metrics.totalServices %> خدمة
                                             </span>
                                        </div>
                                        <% } %>

                                             <% if (user.metrics?.averageRating) { %>
                                                  <div class="flex items-center px-4 py-2 bg-gray-50 rounded-xl
                                    hover:bg-gray-100 transition-all duration-300 group">
                                                       <i class="fas fa-star text-yellow-500 ml-2 
                                    group-hover:scale-110 transition-transform"></i>
                                                       <span class="text-sm text-gray-600 font-arabic">
                                                            <%= user.metrics.averageRating %>/5
                                                       </span>
                                                  </div>
                                                  <% } %>
                    </div>

                    <!-- Share Button -->
                    <button @click="shareProfile" class="inline-flex items-center gap-2 px-5 py-2.5 bg-gray-50
                               text-gray-700 rounded-xl font-arabic
                               transition-all duration-300 hover:bg-gray-100 
                               hover:-translate-y-0.5 hover:shadow-md group">
                         <i class="fas fa-share-alt transform transition-transform 
                             duration-300 group-hover:rotate-12"></i>
                         <span>مشاركة الملف الشخصي</span>
                    </button>
               </div>
          </div>

          <!-- Profile Completion Bar -->
          <% if (completionPercentage < 100) { %>
               <div class="mt-8 p-5 bg-gradient-to-l from-blue-50 to-blue-100/50 rounded-xl
                        transition-all duration-300 hover:shadow-md">
                    <div class="flex items-center justify-between mb-3">
                         <span class="font-semibold text-blue-700 font-arabic">اكمل ملفك الشخصي</span>
                         <span class="px-3 py-1 bg-white rounded-lg text-sm font-bold text-blue-600 font-arabic">
                              <%= completionPercentage %>%
                         </span>
                    </div>
                    <div class="relative h-2.5 bg-white/50 rounded-full overflow-hidden">
                         <div class="absolute inset-y-0 right-0 bg-gradient-to-l from-blue-500 to-blue-600
                                rounded-full transition-all duration-1000" style="width: <%= completionPercentage %>%"></div>
                    </div>
                    <button @click="showCompletionGuide" class="mt-3 text-sm text-blue-600 hover:text-blue-700 
                               font-medium group inline-flex items-center gap-2 font-arabic">
                         <span>عرض الخطوات المتبقية</span>
                         <i class="fas fa-arrow-left transform transition-transform 
                             duration-300 group-hover:-translate-x-1"></i>
                    </button>
               </div>
               <% } %>
     </div>
</div>

<script>
     document.addEventListener('alpine:init', () => {
          Alpine.data('headerCard', () => ({
               async shareProfile() {
                    try {
                         const url = window.location.href;
                         await navigator.clipboard.writeText(url);

                         Swal.fire({
                              icon: 'success',
                              title: 'تم النسخ!',
                              text: 'تم نسخ رابط الملف الشخصي',
                              showConfirmButton: false,
                              timer: 1500,
                              customClass: {
                                   popup: 'font-arabic'
                              }
                         });
                    } catch (error) {
                         Swal.fire({
                              icon: 'error',
                              title: 'خطأ',
                              text: 'تعذر نسخ الرابط',
                              customClass: {
                                   popup: 'font-arabic'
                              }
                         });
                    }
               },

               // Keep the rest of your existing methods...
          }));
     });
</script>

