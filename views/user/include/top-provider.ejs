<section class="relative py-24 bg-gray-50/50 dark:bg-gray-900">
     <!-- Subtle grid background -->
     <div class="absolute inset-0 bg-[linear-gradient(to_right,#f0f0f0_1px,transparent_1px),linear-gradient(to_bottom,#f0f0f0_1px,transparent_1px)] dark:bg-[linear-gradient(to_right,#2a2a2a_1px,transparent_1px),linear-gradient(to_bottom,#2a2a2a_1px,transparent_1px)] bg-[size:6rem_6rem] [mask-image:radial-gradient(ellipse_80%_50%_at_50%_0%,#000_70%,transparent_110%)]"></div>

     <div class="container mx-auto px-4 relative">
          <!-- Section Header -->
          <div class="max-w-2xl mx-auto text-center mb-16">
               <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-4">
                    Prestataires Vedettes
               </h2>
               <p class="text-gray-600 dark:text-gray-400">
                    Découvrez nos experts les mieux notés, sélectionnés pour leur excellence
               </p>
          </div>

          <!-- Providers Grid -->
          <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
               <% topProviders.forEach(provider=> { %>
                    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm">
                         <!-- Provider Card -->
                         <div class="p-6">
                              <!-- Profile Header -->
                              <div class="flex items-start space-x-4">
                                   <!-- Profile Image with Verification -->
                                   <div class="relative">
                                        <img src="<%= provider.profileImage %>" alt="<%= provider.displayName %>" class="w-16 h-16 rounded-full object-cover ring-2 ring-gray-100 dark:ring-gray-700">
                                        <% if (provider.isVerified) { %>
                                             <img src="https://img.icons8.com/?size=100&id=poVlgAcqxww6&format=png&color=FAB005" alt="Verified" class="absolute -right-1 -bottom-1 w-5 h-5">
                                             <% } %>
                                   </div>

                                   <!-- Provider Info -->
                                   <div class="flex-1 min-w-0">
                                        <h3 class="text-lg font-semibold text-gray-900 dark:text-white">
                                             <%= provider.displayName %>
                                        </h3>
                                        <% if (provider.location?.city) { %>
                                             <p class="mt-1 text-sm text-gray-500 dark:text-gray-400 flex items-center">
                                                  <i class="fas fa-map-marker-alt mr-1.5"></i>
                                                  <%= provider.location.city %>
                                             </p>
                                             <% } %>
                                   </div>
                              </div>

                              <!-- Specializations -->
                              <div class="mt-4 flex flex-wrap gap-2">
                                   <% provider.specializations.slice(0, 3).forEach(spec=> { %>
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-md text-xs font-medium bg-blue-50 dark:bg-blue-900/30 text-blue-600 dark:text-blue-400">
                                             <%= spec.replace('-', ' ' ) %>
                                        </span>
                                        <% }) %>
                              </div>

                              <!-- Stats -->
                              <div class="mt-4 flex items-center space-x-4 text-sm text-gray-500 dark:text-gray-400">
                                   <!-- Rating -->
                                   <div class="flex items-center">
                                        <i class="fas fa-star text-yellow-400 mr-1"></i>
                                        <span>
                                             <%= provider.metrics.averageRating %>
                                        </span>
                                        <span class="mx-1">·</span>
                                        <span>
                                             <%= provider.metrics.totalReviews %> avis
                                        </span>
                                   </div>
                                   <!-- Services -->
                                   <div class="flex items-center">
                                        <i class="fas fa-briefcase mr-1"></i>
                                        <span>
                                             <%= provider.metrics.totalServices %> services
                                        </span>
                                   </div>
                              </div>

                              <!-- Divider -->
                              <div class="h-px bg-gray-100 dark:bg-gray-700 my-4"></div>

                              <!-- Action Buttons -->
                              <div class="flex items-center justify-between">
                                   <a href="/@<%= provider.slug %>" class="text-sm font-medium text-gray-700 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400">
                                        Voir le profil
                                        <i class="fas fa-arrow-right ml-1"></i>
                                   </a>
                                   <a href="mailto:<%= provider.email %>" class="text-sm font-medium text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300">
                                        Contacter
                                   </a>
                              </div>
                         </div>
                    </div>
                    <% }) %>
          </div>

          <!-- Simple CTA -->
          <div class="mt-12 text-center">
               <a href="/providers" class="inline-flex items-center px-6 py-3 text-sm font-medium text-white bg-gray-900 dark:bg-gray-800 rounded-lg hover:bg-gray-800 dark:hover:bg-gray-700">
                    Voir tous les prestataires
                    <i class="fas fa-arrow-right ml-2"></i>
               </a>
          </div>
     </div>
</section>