<!-- views/partials/trainer-sidebar.ejs -->
<div class="flex flex-col h-full bg-white">
    <!-- Logo -->
    <div class="h-16 flex items-center px-6 border-b border-slate-200/80">
        <h1 class="text-2xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-blue-500 to-blue-600">
            Ndressilik
        </h1>
    </div>

    <!-- Navigation -->
    <nav class="flex-1 py-6 px-3">
        <div class="space-y-2">
            <!-- Dashboard Overview -->
            <a href="/dashboard" 
               class="group flex items-center px-4 py-3 rounded-xl text-slate-600 hover:bg-blue-50 hover:text-blue-700 transition-all duration-200">
                <div class="w-9 h-9 flex items-center justify-center rounded-lg bg-blue-100 text-blue-600 group-hover:bg-blue-200 transition-colors">
                    <i class="fas fa-home text-lg"></i>
                </div>
                <span class="ml-3 font-medium">Tableau de bord</span>
            </a>

            <!-- Training Sessions -->
            <a href="/dashboard/training-sessions" 
               class="group flex items-center px-4 py-3 rounded-xl text-slate-600 hover:bg-emerald-50 hover:text-emerald-700 transition-all duration-200">
                <div class="w-9 h-9 flex items-center justify-center rounded-lg bg-emerald-100 text-emerald-600 group-hover:bg-emerald-200 transition-colors">
                    <i class="fas fa-graduation-cap text-lg"></i>
                </div>
                <span class="ml-3 font-medium">Séances d'éducation</span>
            </a>

            <!-- Client Management -->
            <a href="/dashboard/clients" 
               class="group flex items-center px-4 py-3 rounded-xl text-slate-600 hover:bg-purple-50 hover:text-purple-700 transition-all duration-200">
                <div class="w-9 h-9 flex items-center justify-center rounded-lg bg-purple-100 text-purple-600 group-hover:bg-purple-200 transition-colors">
                    <i class="fas fa-users text-lg"></i>
                </div>
                <span class="ml-3 font-medium">Mes clients</span>
            </a>

            <!-- Schedule -->
            <a href="/dashboard/schedule" 
               class="group flex items-center px-4 py-3 rounded-xl text-slate-600 hover:bg-amber-50 hover:text-amber-700 transition-all duration-200">
                <div class="w-9 h-9 flex items-center justify-center rounded-lg bg-amber-100 text-amber-600 group-hover:bg-amber-200 transition-colors">
                    <i class="fas fa-calendar-alt text-lg"></i>
                </div>
                <span class="ml-3 font-medium">Planning</span>
            </a>

            <!-- Training Programs -->
            <a href="/dashboard/programs" 
               class="group flex items-center px-4 py-3 rounded-xl text-slate-600 hover:bg-indigo-50 hover:text-indigo-700 transition-all duration-200">
                <div class="w-9 h-9 flex items-center justify-center rounded-lg bg-indigo-100 text-indigo-600 group-hover:bg-indigo-200 transition-colors">
                    <i class="fas fa-book text-lg"></i>
                </div>
                <span class="ml-3 font-medium">Programmes</span>
            </a>

            <!-- Requests/Bookings with notification -->
            <a href="/dashboard/requests" 
               class="group flex items-center px-4 py-3 rounded-xl text-slate-600 hover:bg-rose-50 hover:text-rose-700 transition-all duration-200 relative">
                <div class="w-9 h-9 flex items-center justify-center rounded-lg bg-rose-100 text-rose-600 group-hover:bg-rose-200 transition-colors">
                    <i class="fas fa-bell text-lg"></i>
                </div>
                <span class="ml-3 font-medium">Demandes</span>
                
                <% if (locals.unreadRequests && unreadRequests > 0) { %>
                    <!-- Notification Dot -->
                    <span class="absolute right-4 flex">
                        <span class="animate-ping absolute inline-flex h-2.5 w-2.5 rounded-full bg-red-400 opacity-75"></span>
                        <span class="relative inline-flex rounded-full h-2.5 w-2.5 bg-red-500"></span>
                    </span>
                <% } %>
            </a>

            <!-- Reviews -->
            <a href="/dashboard/reviews" 
               class="group flex items-center px-4 py-3 rounded-xl text-slate-600 hover:bg-yellow-50 hover:text-yellow-700 transition-all duration-200">
                <div class="w-9 h-9 flex items-center justify-center rounded-lg bg-yellow-100 text-yellow-600 group-hover:bg-yellow-200 transition-colors">
                    <i class="fas fa-star text-lg"></i>
                </div>
                <span class="ml-3 font-medium">Avis</span>
            </a>

            <!-- Profile -->
            <a href="/dashboard/profile" 
               class="group flex items-center px-4 py-3 rounded-xl text-slate-600 hover:bg-blue-50 hover:text-blue-700 transition-all duration-200">
                <div class="w-9 h-9 flex items-center justify-center rounded-lg bg-blue-100 text-blue-600 group-hover:bg-blue-200 transition-colors">
                    <i class="fas fa-user text-lg"></i>
                </div>
                <span class="ml-3 font-medium">Mon profil</span>
            </a>

            <!-- Analytics -->
            <a href="/dashboard/analytics" 
               class="group flex items-center px-4 py-3 rounded-xl text-slate-600 hover:bg-teal-50 hover:text-teal-700 transition-all duration-200">
                <div class="w-9 h-9 flex items-center justify-center rounded-lg bg-teal-100 text-teal-600 group-hover:bg-teal-200 transition-colors">
                    <i class="fas fa-chart-line text-lg"></i>
                </div>
                <span class="ml-3 font-medium">Statistiques</span>
            </a>
        </div>
    </nav>

    <!-- Bottom section -->
    <div class="p-4 mt-auto">
        <!-- Settings -->
        <a href="/dashboard/settings" 
           class="group flex items-center px-4 py-3 rounded-xl text-slate-600 hover:bg-gray-50 hover:text-gray-900 transition-all duration-200">
            <div class="w-9 h-9 flex items-center justify-center rounded-lg bg-gray-100 text-gray-600 group-hover:bg-gray-200 transition-colors">
                <i class="fas fa-cog text-lg"></i>
            </div>
            <span class="ml-3 font-medium">Paramètres</span>
        </a>

        <div class="border-t border-slate-200/80 pt-4 mt-4">
            <!-- Logout -->
            <a href="/logout" 
               class="group flex items-center px-4 py-3 rounded-xl text-slate-600 hover:bg-slate-50 hover:text-slate-900 transition-all duration-200">
                <div class="w-9 h-9 flex items-center justify-center rounded-lg bg-slate-100 text-slate-600 group-hover:bg-slate-200 transition-colors">
                    <i class="fas fa-sign-out-alt text-lg"></i>
                </div>
                <span class="ml-3 font-medium">Déconnexion</span>
            </a>
        </div>
    </div>
</div>