<div class="bg-white rounded-2xl shadow-lg" id="qualificationsSection" dir="rtl">
     <!-- Header -->
     <div class="p-6 border-b border-gray-100 relative">
          <div class="absolute inset-x-0 bottom-0 h-1 bg-gradient-to-l from-blue-500 to-blue-600"></div>
          <div class="flex items-center justify-between">
               <h3 class="text-xl font-bold text-gray-900 font-arabic">الشهادات والمؤهلات</h3>
               <button type="button" id="addQualificationBtn" class="group flex items-center gap-2 px-5 py-2.5 bg-blue-600 text-white rounded-xl
                           transition-all duration-300 hover:bg-blue-700 hover:shadow-lg 
                           hover:shadow-blue-500/20 hover:-translate-y-0.5 font-arabic">
                    <i class="fas fa-plus transform group-hover:rotate-90 transition-transform"></i>
                    <span>إضافة شهادة</span>
               </button>
          </div>
     </div>

     <!-- List of Qualifications -->
     <div class="p-6" id="qualificationsList">
          <% if (user.qualifications && user.qualifications.length> 0) { %>
               <div class="grid gap-4" id="qualifications">
                    <% user.qualifications.forEach(qualification=> { %>
                         <div class="group relative p-4 bg-gradient-to-l from-gray-50 to-gray-100/50 rounded-xl
                                transition-all duration-300 hover:-translate-y-1 hover:shadow-lg">
                              <div class="flex justify-between items-start">
                                   <div class="flex gap-4">
                                        <div class="w-12 h-12 rounded-xl bg-blue-100 flex items-center justify-center
                                          text-blue-600 transform transition-transform duration-300
                                          group-hover:rotate-12">
                                             <i class="fas fa-graduation-cap text-xl"></i>
                                        </div>
                                        <div>
                                             <h4 class="text-lg font-semibold text-gray-900 font-arabic">
                                                  <%= qualification.title %>
                                             </h4>
                                             <p class="text-sm text-gray-600 mt-1 font-arabic">
                                                  <%= qualification.institution %> - <%= qualification.year %>
                                             </p>
                                        </div>
                                   </div>
                                   <div class="flex items-center gap-4">
                                        <% if (qualification.certificate) { %>
                                             <a href="<%= qualification.certificate %>" target="_blank" class="flex items-center gap-2 px-4 py-2 bg-blue-50 text-blue-600 
                                              rounded-lg transition-all duration-300 hover:bg-blue-100 font-arabic">
                                                  <i class="fas fa-certificate"></i>
                                                  <span>عرض الشهادة</span>
                                             </a>
                                             <% } %>
                                                  <button type="button" class="deleteQualificationBtn px-4 py-2 text-red-600 hover:bg-red-50 
                                               rounded-lg transition-all duration-300 group/delete" data-id="<%= qualification._id %>">
                                                       <i class="fas fa-trash transform transition-transform duration-300
                                             group-hover/delete:rotate-12"></i>
                                                  </button>
                                   </div>
                              </div>
                         </div>
                         <% }); %>
               </div>
               <% } else { %>
                    <div class="text-center py-12">
                         <div class="w-16 h-16 bg-blue-50 rounded-full mx-auto mb-4 flex items-center justify-center">
                              <i class="fas fa-scroll text-blue-500 text-2xl"></i>
                         </div>
                         <h4 class="text-lg font-semibold text-gray-900 mb-2 font-arabic">لا توجد شهادات</h4>
                         <p class="text-gray-500 font-arabic">أضف شهاداتك ومؤهلاتك لتعزيز ملفك الشخصي</p>
                    </div>
                    <% } %>
     </div>

     <!-- Add Qualification Form -->
     <form id="addQualificationForm" class="p-6 hidden" enctype="multipart/form-data">
          <div class="space-y-6">
               <!-- Title -->
               <div class="group">
                    <label class="block text-base font-semibold text-gray-700 mb-2 font-arabic">
                         عنوان الشهادة <span class="text-blue-500">*</span>
                    </label>
                    <input type="text" id="title" name="title" class="w-full h-12 px-4 bg-gray-50 border-2 border-gray-200 rounded-xl text-right
                              focus:bg-white focus:border-blue-500 focus:ring-4 focus:ring-blue-500/10
                              transition-all duration-300 font-arabic" required>
               </div>

               <!-- Institution -->
               <div class="group">
                    <label class="block text-base font-semibold text-gray-700 mb-2 font-arabic">
                         المؤسسة التعليمية <span class="text-blue-500">*</span>
                    </label>
                    <input type="text" id="institution" name="institution" class="w-full h-12 px-4 bg-gray-50 border-2 border-gray-200 rounded-xl text-right
                              focus:bg-white focus:border-blue-500 focus:ring-4 focus:ring-blue-500/10
                              transition-all duration-300 font-arabic" required>
               </div>

               <!-- Year -->
               <div class="group">
                    <label class="block text-base font-semibold text-gray-700 mb-2 font-arabic">
                         سنة التخرج <span class="text-blue-500">*</span>
                    </label>
                    <input type="number" id="year" name="year" min="1900" max="<%= new Date().getFullYear() %>" class="w-full h-12 px-4 bg-gray-50 border-2 border-gray-200 rounded-xl text-right
                              focus:bg-white focus:border-blue-500 focus:ring-4 focus:ring-blue-500/10
                              transition-all duration-300 font-arabic" required>
               </div>

               <!-- Certificate Upload -->
               <div class="group">
                    <label class="block text-base font-semibold text-gray-700 mb-2 font-arabic">
                         الشهادة (اختياري)
                    </label>
                    <div class="relative">
                         <input type="file" id="certificate" name="certificate" accept="image/*" class="hidden" onchange="updateFileLabel(this)">
                         <button type="button" onclick="document.getElementById('certificate').click()" class="w-full h-12 px-4 bg-gray-50 border-2 border-gray-200 rounded-xl
                                   text-right flex items-center justify-between
                                   hover:bg-gray-100 transition-all duration-300 font-arabic">
                              <span id="fileLabel" class="text-gray-500">اختر ملفاً...</span>
                              <i class="fas fa-upload text-gray-400"></i>
                         </button>
                    </div>
               </div>

               <!-- Submit Button in Add Qualification Form -->
               <div class="flex gap-4 pt-6 border-t">
                    <button type="button" id="cancelAddQualificationBtn" class="flex-1 h-12 bg-gray-50 text-gray-700 rounded-xl font-arabic
                         hover:bg-gray-100 focus:ring-4 focus:ring-gray-200
                         transition-all duration-300 group">
                         <i class="fas fa-times ml-2 group-hover:rotate-90 transition-transform"></i>
                         إلغاء
                    </button>
                    <button type="submit" id="submitQualificationBtn" class="flex-1 h-12 bg-blue-600 text-white rounded-xl font-arabic
                         hover:bg-blue-700 focus:ring-4 focus:ring-blue-500/30
                         transition-all duration-300 flex items-center justify-center">
                         <span id="submitText" class="group-hover:scale-110 transition-transform">حفظ</span>
                         <span id="spinner" class="hidden ml-2">
                              <svg class="animate-spin h-5 w-5 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                                   <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                   <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                              </svg>
                         </span>
                    </button>
               </div>

          </div>
     </form>
</div>

<style>
     .font-arabic {
          font-family: 'Tajawal', sans-serif;
     }

     @keyframes slideUpIn {
          from {
               opacity: 0;
               transform: translateY(20px);
          }

          to {
               opacity: 1;
               transform: translateY(0);
          }
     }

     .animate-slide-up {
          animation: slideUpIn 0.4s cubic-bezier(0.16, 1, 0.3, 1) forwards;
     }
</style>

<script>
     // Keep existing JavaScript but add these enhancements

     function updateFileLabel(input) {
          const label = document.getElementById('fileLabel');
          if (input.files.length > 0) {
               label.textContent = input.files[0].name;
               label.classList.remove('text-gray-500');
               label.classList.add('text-blue-600');
          } else {
               label.textContent = 'اختر ملفاً...';
               label.classList.add('text-gray-500');
               label.classList.remove('text-blue-600');
          }
     }

</script>

<!-- Qualifications Script -->
<script>
     document.addEventListener('DOMContentLoaded', function () {
          const $addQualificationBtn = document.getElementById('addQualificationBtn');
          const $addQualificationForm = document.getElementById('addQualificationForm');
          const $qualificationsList = document.getElementById('qualificationsList');
          const $cancelAddQualificationBtn = document.getElementById('cancelAddQualificationBtn');

          // Toggle Add Qualification Form
          function toggleAddQualificationForm() {
               $addQualificationForm.classList.toggle('hidden');
               $qualificationsList.classList.toggle('hidden');
               $addQualificationBtn.classList.toggle('hidden');
          }

          $addQualificationBtn.addEventListener('click', toggleAddQualificationForm);
          $cancelAddQualificationBtn.addEventListener('click', toggleAddQualificationForm);

          const $submitBtn = document.getElementById('submitQualificationBtn');
          const $submitText = document.getElementById('submitText');
          const $spinner = document.getElementById('spinner');

          $addQualificationForm.addEventListener('submit', async function (e) {
               e.preventDefault();

               // Show spinner and disable button
               $submitBtn.disabled = true;
               $spinner.classList.remove('hidden');
               $submitText.classList.add('hidden');

               try {
                    // Get form data
                    const formData = new FormData(this);

                    // Send request
                    const response = await fetch('/dashboard/profile/qualifications', {
                         method: 'POST',
                         body: formData
                    });

                    const result = await response.json();

                    if (response.ok) {
                         // Reload page on success
                         window.location.reload();
                    } else {
                         throw new Error(result.message);
                    }
               } catch (error) {
                    // Show error message and reset button state
                    Swal.fire({
                         icon: 'error',
                         title: 'خطأ',
                         text: error.message || 'حدث خطأ أثناء الإضافة'
                    });
                    $submitBtn.disabled = false;
                    $spinner.classList.add('hidden');
                    $submitText.classList.remove('hidden');
               }
          });
          // Handle Delete Qualification
          document.querySelectorAll('.deleteQualificationBtn').forEach(button => {
               button.addEventListener('click', async function () {
                    const qualificationId = this.dataset.id;

                    const confirmation = await Swal.fire({
                         title: 'هل أنت متأكد؟',
                         text: 'لا يمكن التراجع عن هذا الإجراء.',
                         icon: 'warning',
                         showCancelButton: true,
                         confirmButtonText: 'نعم، احذف',
                         cancelButtonText: 'إلغاء',
                         confirmButtonColor: '#EF4444',
                         cancelButtonColor: '#6B7280',
                         customClass: {
                              popup: 'font-arabic'
                         }
                    });

                    if (confirmation.isConfirmed) {
                         try {
                              const response = await fetch(`/dashboard/profile/qualifications/${qualificationId}`, {
                                   method: 'DELETE'
                              });

                              const result = await response.json();

                              if (response.ok) {
                                   window.location.reload();
                              } else {
                                   throw new Error(result.message);
                              }
                         } catch (error) {
                              Swal.fire({
                                   icon: 'error',
                                   title: 'Erreur',
                                   text: error.message || 'Une erreur est survenue lors de la suppression'
                              });
                         }
                    }
               });
          });
     });
</script>