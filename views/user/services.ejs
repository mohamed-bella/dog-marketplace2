                    outline: 2px solid #3B82F6;
                    outline-offset: 2px;
               }

               /* Loading skeleton animation */
               @keyframes shimmer {
                    0% {
                         transform: translateX(-100%)
                    }

                    100% {
                         transform: translateX(100%)
                    }
               }

               .animate-shimmer::before {
                    content: '';
                    position: absolute;
                    top: 0;
                    left: 0;
                    width: 100%;
                    height: 100%;
                    background: linear-gradient(90deg,
                              transparent,
                              rgba(255, 255, 255, 0.3),
                              transparent);
                    animation: shimmer 1.5s infinite;
               }
