<!-- Header -->
<header class="header">
     <h1>Tableau de bord Utilisateur</h1>
     <div class="profile">
          <img src="https://via.placeholder.com/50" alt="Photo de profil">
          <span class="username">Nom d'utilisateur</span>
          <div class="profile-actions">
               <button class="btn btn-light btn-sm"><i class="bi bi-box-arrow-right"></i> Déconnexion</button>
          </div>
     </div>
</header>

<!-- Dashboard Wrapper -->
<div class="dashboard-wrapper">
     <!-- Sidebar -->
     <nav class="sidebar">
          <a href="/dashboard"><i class="bi bi-speedometer2"></i> Tableau de bord</a>
          <a href="/announcements"><i class="bi bi-list-task"></i> Mes annonces</a>
          <a href="/elevage"><i class="bi bi-building"></i> Mon élevage</a>
          <a href="/settings"><i class="bi bi-gear"></i> Paramètres</a>
     </nav>

     <!-- Main Content -->
     <div class="content">
          <!-- Statistiques Section -->
          <div class="row stat-section">
               <div class="col-md-4">
                    <div class="stat-card">
                         <i class="bi bi-eye"></i>
                         <h5>Nombre de vues</h5>
                         <p class="stat-value">5,340</p>
                    </div>
               </div>
               <div class="col-md-4">
                    <div class="stat-card">
                         <i class="bi bi-megaphone"></i>
                         <h5>Annonces Actives</h5>
                         <p class="stat-value">12</p>
                    </div>
               </div>
               <div class="col-md-4">
                    <div class="stat-card">
                         <i class="bi bi-currency-euro"></i>
                         <h5>Revenus Totals</h5>
                         <p class="stat-value">4,500€</p>
                    </div>
               </div>
          </div>

          <!-- Actions Section -->
          <div class="row actions-section">
               <div class="col-md-6">
                    <div class="card bg-light text-center">
                         <div class="card-body">
                              <a href="/announcement/new" class="btn btn-dog"><i class="bi bi-megaphone"></i> Publier une annonce de chien</a>
                         </div>
                    </div>
               </div>
               <div class="col-md-6">
                    <div class="card bg-light text-center">
                         <div class="card-body">
                              <a href="/dashboard/elevage/new" class="btn btn-elevage"><i class="bi bi-building"></i> Créer un nouvel élevage</a>
                         </div>
                    </div>
               </div>
          </div>

          <!-- Settings Section -->
          <div class="row mt-4">
               <div class="col-md-6">
                    <div class="card bg-light text-center">
                         <div class="card-body">
                              <a href="/settings/profile" class="btn btn-secondary"><i class="bi bi-person"></i> Paramètres du profil</a>
                         </div>
                    </div>
               </div>
               <div class="col-md-6">
                    <div class="card bg-light text-center">
                         <div class="card-body">
                              <a href="/settings/security" class="btn btn-secondary"><i class="bi bi-shield-lock"></i> Paramètres de sécurité</a>
                         </div>
                    </div>
               </div>
          </div>
     </div>
</div>