<section id="announcements" class="section">
     <div class="container-fluid px-4">
          <h2 class="section-title text-center mb-5">Dernières Annonces</h2>
          <div class="slider-container position-relative">
               <button class="slider-arrow slider-arrow-left" onclick="moveSlide(-1)">
                    <i class="fas fa-chevron-left"></i>
               </button>

               <div class="slider" id="announcements-slider">
                    <!-- Dynamically render announcements from the database -->
                    <% announcements.forEach((announcement, index)=> { %>
                         <div class="slider-item">
                              <div class="robust-card">
                                   <div class="robust-card-header">
                                        <h3 class="robust-card-title">
                                             <%= announcement.breed %>
                                        </h3>
                                   </div>
                                   <div class="robust-card-image">
                                        <img src="<%= announcement.media[0] || '/images/default-announcement.jpg' %>" alt="Chien à Adopter">
                                   </div>
                                   <div class="robust-card-body">
                                        <p class="robust-card-text">
                                             <%= announcement.description %>
                                        </p>
                                        <div class="robust-card-stats">
                                             <span class="robust-stat"><i class="fas fa-ruler-vertical"></i> 60cm</span>
                                             <span class="robust-stat"><i class="fas fa-weight"></i> 30kg</span>
                                             <span class="robust-stat"><i class="fas fa-venus-mars"></i> Mâle</span>
                                        </div>
                                   </div>
                                   <div class="robust-card-footer">
                                        <a href="/announcements/<%= announcement._id %>" class="robust-btn">Voir l'annonce</a>
                                   </div>
                              </div>
                         </div>
                         <% }); %>

                              <!-- Last slide for "View More Announcements" button -->
                              <div class="slider-item">
                                   <div class="robust-card robust-card-view-more">
                                        <div class="robust-card-body text-center">
                                             <h3 class="robust-card-title">Voir Plus d'Annonces</h3>
                                             <a href="/announcements" class="robust-btn">Voir Plus</a>
                                        </div>
                                   </div>
                              </div>
               </div>

               <button class="slider-arrow slider-arrow-right" onclick="moveSlide(1)">
                    <i class="fas fa-chevron-right"></i>
               </button>
          </div>
     </div>
</section>