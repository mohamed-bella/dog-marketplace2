<section class="relative py-20 bg-gray-50">
     <div class="container mx-auto px-4">
          <!-- Elegant Header -->
          <div class="max-w-2xl mb-12">
               <h2 class="text-3xl font-semibold text-gray-900 mb-3">Discover Top Pet Experts</h2>
               <p class="text-gray-500">Connect with our certified and trusted pet care professionals</p>
          </div>

          <!-- Experts Slider -->
          <div class="overflow-x-auto hide-scrollbar -mx-4">
               <div class="flex gap-6 p-4">
                    <% topProviders.forEach((provider, index)=> { %>
                         <a href="/@<%= provider.slug %>" class="flex-none w-[300px] group relative">
                              <div class="bg-white rounded-2xl overflow-hidden shadow-sm hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
                                   <!-- Large Image Area -->
                                   <div class="aspect-[4/3] relative overflow-hidden">
                                        <img src="<%= provider.profileImage %>" alt="<%= provider.displayName %>" class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500">

                                        <!-- Verified Badge -->
                                        <% if (provider.isVerified) { %>
                                             <div class="absolute top-4 right-4">
                                                  <div class="bg-blue-500 text-white px-3 py-1 rounded-full text-xs font-medium shadow-lg flex items-center gap-1">
                                                       <i class="fas fa-check text-xs"></i>
                                                       Verified
                                                  </div>
                                             </div>
                                             <% } %>
                                   </div>

                                   <!-- Content Area -->
                                   <div class="p-6">
                                        <!-- Name and Rating -->
                                        <div class="flex items-start justify-between mb-3">
                                             <h3 class="text-lg font-semibold text-gray-900">
                                                  <%= provider.displayName %>
                                             </h3>
                                             <div class="flex items-center text-sm text-gray-600">
                                                  <i class="fas fa-star text-yellow-400 mr-1"></i>
                                                  <%= provider.metrics?.averageRating || '4.8' %>
                                             </div>
                                        </div>

                                        <!-- Specializations -->
                                        <div class="flex flex-wrap gap-2 mb-4">
                                             <% (provider.specializations || ['Pet Care']) .slice(0, 2) .forEach(spec=> { %>
                                                  <span class="px-2.5 py-1 bg-gray-100 text-gray-600 rounded-full text-xs">
                                                       <%= spec.replace('-', ' ' ) %>
                                                  </span>
                                                  <% }) %>
                                        </div>

                                        <!-- Location and Experience -->
                                        <div class="flex items-center justify-between text-sm text-gray-500">
                                             <div class="flex items-center gap-1">
                                                  <i class="fas fa-map-marker-alt"></i>
                                                  <%= provider.location?.city || 'Location' %>
                                             </div>
                                             <div class="flex items-center gap-1">
                                                  <i class="fas fa-briefcase"></i>
                                                  <%= provider.metrics?.totalServices || '50' %> services
                                             </div>
                                        </div>
                                   </div>

                                   <!-- Call to Action -->
                                   <div class="px-6 pb-6">
                                        <button class="w-full bg-gray-900 text-white rounded-xl py-3 text-sm font-medium hover:bg-gray-800 transition-colors group-hover:bg-blue-600">
                                             View Profile
                                        </button>
                                   </div>
                              </div>
                         </a>
                         <% }) %>
               </div>
          </div>

          <!-- View All Link -->
          <div class="mt-12 text-center">
               <a href="/providers" class="inline-flex items-center gap-2 text-gray-600 hover:text-gray-900 font-medium">
                    Explore All Experts
                    <i class="fas fa-arrow-right transition-transform group-hover:translate-x-1"></i>
               </a>
          </div>
     </div>
</section>

<style>
     .hide-scrollbar {
          -ms-overflow-style: none;
          scrollbar-width: none;
     }

     .hide-scrollbar::-webkit-scrollbar {
          display: none;
     }

     @keyframes slideIn {
          from {
               opacity: 0;
               transform: translateY(20px);
          }

          to {
               opacity: 1;
               transform: translateY(0);
          }
     }

     .animate-slide-in {
          animation: slideIn 0.6s ease-out forwards;
     }
</style>