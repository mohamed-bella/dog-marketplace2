<!DOCTYPE html>
<html lang="fr">
<head>
    <%- include('../include/head') %>
    <title><%= pageTitle %></title>
    
    <!-- Open Graph Meta Tags -->
    <meta property="og:title" content="<%= post.name %> - <%= post.type === 'adoption' ? 'Adoption' : 'Chien perdu' %>">
    <meta property="og:description" content="<%= post.description %>">
    <% if (post.photo && post.photo.length > 0) { %>
    <meta property="og:image" content="<%= post.photo %>">
    <% } %>
</head>
<body class="bg-gray-50">
    <%- include('../include/navbar') %>

<!-- views/announcements/details.ejs -->
<% layout('../layouts/layout') %>

<div class="container">
  <h1><%= post.name %></h1>

  <% if (post.photos.length > 0) { %>
    <div class="photos">
      <% post.photos.forEach(photo => { %>
        <img src="<%= photo %>" alt="<%= post.name %>">
      <% }) %>
    </div>
  <% } %>

  <p>Type: <%= post.type %></p>
  <p>Breed: <%= post.breed %></p>
  <p>Age: <%= post.age %> years</p>
  <p>Description: <%= post.description %></p>
  <p>Location: <%= post.location %></p>

  <h3>Contact Information</h3>
  <p>Email: <a href="mailto:<%= post.contactInfo.email %>"><%= post.contactInfo.email %></a></p>
  <% if (post.contactInfo.phone) { %>
    <p>Phone: <a href="tel:<%= post.contactInfo.phone %>"><%= post.contactInfo.phone %></a></p>
  <% } %>

  <a href="/chiens-adoption-et-perdus">Back to Announcements</a>
</div>

</body>
</html>