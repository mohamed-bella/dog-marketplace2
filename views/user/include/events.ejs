<section class="relative overflow-hidden bg-white dark:bg-gray-900 py-24 transition-colors duration-300">
     <!-- Grid Background remains the same -->
     <div class="absolute inset-0 bg-[linear-gradient(to_right,#f0f0f0_1px,transparent_1px),linear-gradient(to_bottom,#f0f0f0_1px,transparent_1px)] dark:bg-[linear-gradient(to_right,#2a2a2a_1px,transparent_1px),linear-gradient(to_bottom,#2a2a2a_1px,transparent_1px)] bg-[size:4rem_4rem] [mask-image:radial-gradient(ellipse_60%_50%_at_50%_0%,#000_70%,transparent_110%)]"></div>

     <div class="container mx-auto px-4 relative">
          <!-- Title section remains the same -->
          <div class="max-w-3xl mx-auto text-center mb-20">
               <h2 class="text-5xl sm:text-6xl md:text-7xl font-extrabold mb-6 leading-tight bg-gradient-to-r from-gray-900 via-gray-800 to-gray-700 dark:from-white dark:via-gray-200 dark:to-gray-300 bg-clip-text text-transparent">
                    Découvrez Notre Monde
               </h2>
               <div class="h-1 w-20 mx-auto bg-gradient-to-r from-blue-600 to-violet-600"></div>
          </div>

          <!-- Content Grid -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-12 max-w-5xl mx-auto">
               <!-- Events Card -->
               <div class="group relative bg-white dark:bg-gray-800 transform hover:-translate-y-1 transition-all duration-300">
                    <div class="absolute inset-0 rounded-3xl bg-gradient-to-br from-violet-100/50 to-violet-50/50 dark:from-violet-900/20 dark:to-violet-800/20 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
                    <div class="relative p-8 rounded-3xl border border-gray-100 dark:border-gray-700 backdrop-blur-sm">
                         <!-- Card Header -->
                         <div class="flex items-start justify-between mb-8">
                              <h3 class="text-3xl font-bold dark:text-white">Événements</h3>
                              <span class="flex h-12 w-12 items-center justify-center rounded-full bg-violet-100 dark:bg-violet-900/50 text-violet-600 dark:text-violet-400 group-hover:scale-110 transition-transform duration-300">
                                   <i class="fas fa-calendar-alt text-lg"></i>
                              </span>
                         </div>

                         <!-- Events List -->
                         <div class="space-y-6">
                              <% events.forEach(event=> { %>
                                   <a href="/events/<%= event._id %>" class="group/item flex items-center space-x-4 p-3 rounded-xl hover:bg-violet-50 dark:hover:bg-violet-900/20 transition-all duration-200">
                                        <!-- Event Image -->
                                        <div class="relative flex-shrink-0 w-16 h-16 rounded-lg overflow-hidden border border-gray-200 dark:border-gray-700">
                                             <% if (event.image) { %>
                                                  <img src="<%= event.image %>" alt="<%= event.title %>" class="w-full h-full object-cover transform group-hover/item:scale-110 transition-transform duration-300">
                                                  <% } else { %>
                                                       <div class="w-full h-full bg-violet-100 dark:bg-violet-900/50 flex items-center justify-center">
                                                            <i class="fas fa-calendar-day text-violet-500 dark:text-violet-400"></i>
                                                       </div>
                                                       <% } %>
                                        </div>

                                        <div class="flex-1 min-w-0">
                                             <div class="flex items-center justify-between">
                                                  <p class="text-base font-medium text-gray-700 dark:text-gray-200 group-hover/item:text-violet-600 dark:group-hover/item:text-violet-400 transition-colors truncate">
                                                       <%= event.title %>
                                                  </p>
                                                  <i class="fas fa-arrow-right opacity-0 group-hover/item:opacity-100 text-violet-600 dark:text-violet-400 transition-all duration-200 ml-2 flex-shrink-0"></i>
                                             </div>
                                             <div class="flex items-center mt-1 space-x-3 text-sm text-gray-500 dark:text-gray-400">
                                                  <time class="flex items-center">
                                                       <i class="far fa-calendar-alt mr-1"></i>
                                                       <%= new Date(event.date).toLocaleDateString('fr-FR', { day: 'numeric' , month: 'short' , year: 'numeric' }).replace('.', '' ) %>
                                                  </time>
                                                  <% if (event.time) { %>
                                                       <span class="flex items-center">
                                                            <i class="far fa-clock mr-1"></i>
                                                            <%= event.time %>
                                                       </span>
                                                       <% } %>
                                                            <span class="flex items-center">
                                                                 <i class="fas fa-map-marker-alt mr-1"></i>
                                                                 <%= event.location %>
                                                            </span>
                                             </div>
                                        </div>
                                   </a>
                                   <% }) %>
                         </div>
                    </div>
               </div>

               <!-- Articles Card -->
               <div class="group relative bg-white dark:bg-gray-800 transform hover:-translate-y-1 transition-all duration-300">
                    <div class="absolute inset-0 rounded-3xl bg-gradient-to-br from-blue-100/50 to-blue-50/50 dark:from-blue-900/20 dark:to-blue-800/20 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
                    <div class="relative p-8 rounded-3xl border border-gray-100 dark:border-gray-700 backdrop-blur-sm">
                         <!-- Card Header -->
                         <div class="flex items-start justify-between mb-8">
                              <h3 class="text-3xl font-bold dark:text-white">Articles</h3>
                              <span class="flex h-12 w-12 items-center justify-center rounded-full bg-blue-100 dark:bg-blue-900/50 text-blue-600 dark:text-blue-400 group-hover:scale-110 transition-transform duration-300">
                                   <i class="fas fa-book-open text-lg"></i>
                              </span>
                         </div>

                         <!-- Articles List -->
                         <div class="space-y-6">
                              <% articles.forEach(article=> { %>
                                   <a href="/articles/<%= article.slug %>" class="group/item flex items-start space-x-4 p-3 rounded-xl hover:bg-blue-50 dark:hover:bg-blue-900/20 transition-all duration-200">
                                        <!-- Article Image -->
                                        <div class="relative flex-shrink-0 w-16 h-16 rounded-lg overflow-hidden border border-gray-200 dark:border-gray-700">
                                             <% if (article.featuredImage) { %>
                                                  <img src="<%= article.featuredImage %>" alt="<%= article.title %>" class="w-full h-full object-cover transform group-hover/item:scale-110 transition-transform duration-300">
                                                  <% } else { %>
                                                       <div class="w-full h-full bg-blue-100 dark:bg-blue-900/50 flex items-center justify-center">
                                                            <i class="fas fa-newspaper text-blue-500 dark:text-blue-400"></i>
                                                       </div>
                                                       <% } %>
                                        </div>

                                        <div class="flex-1 min-w-0">
                                             <div class="flex items-start justify-between">
                                                  <h4 class="text-base font-medium text-gray-700 dark:text-gray-200 group-hover/item:text-blue-600 dark:group-hover/item:text-blue-400 transition-colors line-clamp-2">
                                                       <%= article.title %>
                                                  </h4>
                                                  <i class="fas fa-arrow-right opacity-0 group-hover/item:opacity-100 text-blue-600 dark:text-blue-400 transition-all duration-200 ml-2 flex-shrink-0"></i>
                                             </div>
                                             <div class="flex items-center mt-2 space-x-3 text-sm text-gray-500 dark:text-gray-400">
                                                  <% if (article.category) { %>
                                                       <span class="flex items-center">
                                                            <i class="far fa-folder mr-1"></i>
                                                            <%= article.category %>
                                                       </span>
                                                       <% } %>
                                                            <time class="flex items-center">
                                                                 <i class="far fa-calendar-alt mr-1"></i>
                                                                 <%= new Date(article.createdAt).toLocaleDateString('fr-FR', { day: 'numeric' , month: 'short' , year: 'numeric' }).replace('.', '' ) %>
                                                            </time>
                                             </div>
                                        </div>
                                   </a>
                                   <% }) %>
                         </div>
                    </div>
               </div>
          </div>
     </div>
</section>

<style>
     /* Enhanced animations */
     @keyframes float {

          0%,
          100% {
               transform: translateY(0);
          }

          50% {
               transform: translateY(-10px);
          }
     }

     @keyframes shine {
          0% {
               background-position: 200% 0;
          }

          100% {
               background-position: -200% 0;
          }
     }

     .object-cover {
          transition: transform 0.3s ease-in-out;
     }

     /* Add line clamp for long titles */
     .line-clamp-2 {
          display: -webkit-box;
          -webkit-line-clamp: 2;
          -webkit-box-orient: vertical;
          overflow: hidden;
     }

     .shine-effect {
          background: linear-gradient(90deg,
                    transparent,
                    rgba(255, 255, 255, 0.2),
                    transparent);
          background-size: 200% 100%;
          animation: shine 3s infinite;
     }

     /* Improved hover effects */
     .hover-lift {
          transition: transform 0.2s cubic-bezier(0.4, 0, 0.2, 1);
     }

     .hover-lift:hover {
          transform: translateY(-2px);
     }

     /* Improved focus styles */
     .focus-ring {
          @apply ring-2 ring-blue-500 ring-offset-2 ring-offset-white dark:ring-offset-gray-900 outline-none;
     }
</style>