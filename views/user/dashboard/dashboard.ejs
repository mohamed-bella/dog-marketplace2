<!DOCTYPE html>
<html lang="fr">
<head>
    <%- include('includes/head') %>
    <title>NDRESSILIK - Tableau de Bord</title>
</head>

<body class="bg-gray-200">
    <div class="">
        <%- include('includes/header') %>

        <main class="p-6 max-w-4xl mx-auto">
            <!-- Dashboard Content -->
            <div class="space-y-6">
                <!-- Welcome Card -->
                <div class="rounded-2xl shadow-lg bg-white overflow-hidden">
                    <!-- Welcome Banner -->
                    <div class="relative px-4 py-8 sm:p-8 bg-gradient-to-br from-blue-500 to-blue-600 text-white">
                        <div class="absolute inset-0 opacity-10 pointer-events-none">
                            <svg width="100%" height="100%" class="rotate-180">
                                <pattern id="hero-pattern" x="0" y="0" width="32" height="32" patternUnits="userSpaceOnUse">
                                    <path d="M0 32V.5H32" fill="none" stroke="currentColor" stroke-width="1"></path>
                                </pattern>
                                <rect width="100%" height="100%" fill="url(#hero-pattern)"></rect>
                            </svg>
                        </div>
                        
                        <div class="relative">
                            <h2 class="text-2xl sm:text-3xl font-bold mb-2">
                                Bienvenue dans votre espace professionnel
                            </h2>
                            <p class="text-primary-100">
                                Commencez à configurer votre profil et vos services pour être visible par les clients
                            </p>
                        </div>
                    </div>

                    <div class="p-4 sm:p-8">
                        <!-- Setup Steps Grid -->
                        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                            <!-- Step 1: Complete Profile -->
                            <button onclick="window.location.href='/dashboard/profile'" 
                                class="group relative w-full text-left focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2 rounded-xl">
                                <div class="p-6 rounded-xl border-2 transition-all duration-300
                                    <%= !user.isProfileComplete 
                                        ? 'border-primary-200 bg-primary-50/30' 
                                        : 'border-gray-100 bg-white' %>
                                    group-hover:border-primary-300 group-hover:shadow-md">
                                    <div class="flex gap-4">
                                        <div class="flex-shrink-0 w-12 h-12 flex items-center justify-center rounded-xl
                                            <%= !user.isProfileComplete 
                                                ? 'bg-primary-100 text-primary-600' 
                                                : 'bg-gray-100 text-gray-400' %>
                                            group-hover:scale-110 transition-transform duration-300">
                                            <% if (user.isProfileComplete) { %>
                                                <i class="fas fa-check-circle text-xl text-green-500"></i>
                                            <% } else { %>
                                                <span class="text-lg font-bold">1</span>
                                            <% } %>
                                        </div>
                                        <div class="flex-1 min-w-0">
                                            <h3 class="text-lg font-semibold text-gray-900 mb-1 group-hover:text-primary-600 transition-colors truncate">
                                                Compléter le profil
                                            </h3>
                                            <p class="text-sm text-gray-600 mb-2 line-clamp-2">
                                                <%= user.isProfileComplete ? 'Profil complété' : 'Ajoutez vos informations professionnelles' %>
                                            </p>
                                            <% if (!user.isProfileComplete) { %>
                                                <span class="inline-flex items-center text-sm text-primary-600 font-medium">
                                                    Commencer maintenant
                                                    <i class="fas fa-arrow-right ml-2 transform group-hover:translate-x-1 transition-transform"></i>
                                                </span>
                                            <% } %>
                                        </div>
                                    </div>
                                </div>
                            </button>

                            <!-- Step 2: Add Services -->
                            <button onclick="window.location.href='/dashboard/new-service'"
                                class="group relative w-full text-left focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2 rounded-xl">
                                <div class="p-6 rounded-xl border-2 transition-all duration-300
                                    <%= user.isProfileComplete && !user.hasServices 
                                        ? 'border-primary-200 bg-primary-50/30' 
                                        : 'border-gray-100 bg-white' %>
                                    group-hover:border-primary-300 group-hover:shadow-md">
                                    <div class="flex gap-4">
                                        <div class="flex-shrink-0 w-12 h-12 flex items-center justify-center rounded-xl
                                            <%= user.isProfileComplete && !user.hasServices 
                                                ? 'bg-primary-100 text-primary-600' 
                                                : 'bg-gray-100 text-gray-400' %>
                                            group-hover:scale-110 transition-transform duration-300">
                                            <% if (user.hasServices) { %>
                                                <i class="fas fa-check-circle text-xl text-green-500"></i>
                                            <% } else { %>
                                                <span class="text-lg font-bold">2</span>
                                            <% } %>
                                        </div>
                                        <div class="flex-1 min-w-0">
                                            <h3 class="text-lg font-semibold text-gray-900 mb-1 group-hover:text-primary-600 transition-colors truncate">
                                                Ajouter vos services
                                            </h3>
                                            <p class="text-sm text-gray-600 mb-2 line-clamp-2">
                                                <%= user.hasServices ? `${user.servicesCount} services ajoutés` : 'Créez votre premier service' %>
                                            </p>
                                            <% if (!user.hasServices) { %>
                                                <span class="inline-flex items-center text-sm text-primary-600 font-medium">
                                                    Ajouter un service
                                                    <i class="fas fa-arrow-right ml-2 transform group-hover:translate-x-1 transition-transform"></i>
                                                </span>
                                            <% } %>
                                        </div>
                                    </div>
                                </div>
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Services Section -->
                <%- include('includes/services') %>
            </div>

            <!-- Styles -->
            <style>
                @keyframes pulse {
                    0%, 100% {
                        opacity: 1;
                    }
                    50% {
                        opacity: 0.5;
                    }
                }

                .animate-pulse {
                    animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
                }

                .line-clamp-2 {
                    display: -webkit-box;
                    -webkit-line-clamp: 2;
                    -webkit-box-orient: vertical;
                    overflow: hidden;
                }

                .action-card {
                    position: relative;
                    isolation: isolate;
                    overflow: hidden;
                }

                .action-card::before {
                    content: '';
                    position: absolute;
                    inset: 0;
                    background: linear-gradient(45deg,
                        transparent 0%,
                        rgba(255, 255, 255, 0.5) 100%);
                    transform: translateX(-100%) rotate(45deg);
                    transition: transform 0.6s ease;
                }

                .action-card:hover::before {
                    transform: translateX(100%) rotate(45deg);
                }

                .action-card::after {
                    content: '';
                    position: absolute;
                    inset: 0;
                    border-radius: 16px;
                    background: radial-gradient(circle at var(--mouse-x, 50%) var(--mouse-y, 50%),
                        rgba(255, 255, 255, 0.1) 0%,
                        transparent 100%);
                    opacity: 0;
                    transition: opacity 0.3s ease;
                }

                .action-card:hover::after {
                    opacity: 1;
                }

                .action-icon {
                    transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
                }

                .action-card:hover .action-icon {
                    transform: scale(1.1) rotate(-10deg);
                }
            </style>
        </main>
    </div>

    <!-- Scripts -->
    <script>
        // Mouse move effect for cards
        document.querySelectorAll('.action-card').forEach(card => {
            card.addEventListener('mousemove', (e) => {
                const rect = card.getBoundingClientRect();
                const x = ((e.clientX - rect.left) / card.clientWidth) * 100;
                const y = ((e.clientY - rect.top) / card.clientHeight) * 100;
                
                card.style.setProperty('--mouse-x', `${x}%`);
                card.style.setProperty('--mouse-y', `${y}%`);
            });
        });

        // Disable service button if profile is not complete
         if (!user.isProfileComplete) { 
            document.querySelector('button[onclick*="new-service"]').addEventListener('click', (e) => {
                e.preventDefault();
                alert('Veuillez d\'abord compléter votre profil avant d\'ajouter des services.');
            });
       }
    </script>

    <%- include('includes/scripts') %>
</body>
</html>