<!-- views/index.ejs -->
<!DOCTYPE html>
<html lang="fr">

<head>
     <%- include('includes/head') %>
          <title>NDRESSILIK - Tableau de Bord</title>
</head>

<body class="bg-gray-200">
     <div class="">
          <%- include('includes/header') %>

               <main class="p-6">
                    <!-- Dashboard Content -->
                    <div class="max-w-5xl mx-auto space-y-6">
                         <!-- Quick Actions Section -->
                         <!-- Quick Actions Section -->
                         <div class="bg-white rounded-xl shadow-sm p-4 sm:p-6">
                              <!-- Section Header -->
                              <div class="mb-6">
                                   <h2 class="text-lg sm:text-xl font-semibold text-gray-900">Actions rapides</h2>
                              </div>

                              <!-- Actions Grid -->
                              <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
                                   <!-- New Service Card -->
                                   <a href="/dashboard/new-service" class="flex items-center p-4 bg-blue-50 rounded-xl transition hover:-translate-y-1 hover:shadow-md">
                                        <div class="flex-shrink-0 w-10 h-10 flex items-center justify-center rounded-lg bg-blue-600 text-white">
                                             <i class="fas fa-plus"></i>
                                        </div>
                                        <div class="ml-4 flex-1">
                                             <p class="font-medium text-gray-900">Nouveau service</p>
                                             <p class="text-sm text-gray-500">Ajouter un service</p>
                                        </div>
                                        <i class="fas fa-chevron-right text-blue-600 ml-2"></i>
                                   </a>

                                   <!-- Edit Profile Card -->
                                   <a href="/dashboard/profile" class="flex items-center p-4 bg-green-50 rounded-xl transition hover:-translate-y-1 hover:shadow-md">
                                        <div class="flex-shrink-0 w-10 h-10 flex items-center justify-center rounded-lg bg-green-600 text-white">
                                             <i class="fas fa-user-edit"></i>
                                        </div>
                                        <div class="ml-4 flex-1">
                                             <p class="font-medium text-gray-900">Éditer profil</p>
                                             <p class="text-sm text-gray-500">Modifier infos</p>
                                        </div>
                                        <i class="fas fa-chevron-right text-green-600 ml-2"></i>
                                   </a>

                                   <!-- My Services Card -->
                                   <a href="#services" class="flex items-center p-4 bg-purple-50 rounded-xl transition hover:-translate-y-1 hover:shadow-md">
                                        <div class="flex-shrink-0 w-10 h-10 flex items-center justify-center rounded-lg bg-purple-600 text-white">
                                             <i class="fas fa-briefcase"></i>
                                        </div>
                                        <div class="ml-4 flex-1">
                                             <p class="font-medium text-gray-900">Mes services</p>
                                             <p class="text-sm text-gray-500">Gérer services</p>
                                        </div>
                                        <i class="fas fa-chevron-right text-purple-600 ml-2"></i>
                                   </a>
                              </div>

                              <!-- Quick Stats -->
                              <div class="grid grid-cols-3 gap-4 mt-6 pt-6 border-t border-gray-100">
                                   <div class="text-center">
                                        <p class="text-xl font-semibold text-blue-600">
                                             <%= stats.totalServices %>
                                        </p>
                                        <p class="text-xs text-gray-500">Services</p>
                                   </div>
                                   <div class="text-center">
                                        <p class="text-xl font-semibold text-green-600">
                                             <%= stats.totalReviews %>
                                        </p>
                                        <p class="text-xs text-gray-500">Avis</p>
                                   </div>
                                   <div class="text-center">
                                        <p class="text-xl font-semibold text-purple-600">0</p>
                                        <p class="text-xs text-gray-500">Vues</p>
                                   </div>
                              </div>
                         </div>

                         <!-- Include Font Awesome -->
                         <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css">

                         <%- include('includes/analytics') %>
                              <%- include('includes/services') %>
                    </div>
               </main>
     </div>

     <%- include('includes/scripts') %>
</body>

</html>